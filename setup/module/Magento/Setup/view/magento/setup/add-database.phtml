<div ng-include="'controls/header'"></div>

<div class="form-horizontal">
    <div class="page-header">
        <h3>Database configuration <span class="extra-title muted"></span></h3>
    </div>
    <div class="form-horizontal">
        <div class="control-group">
            <label for="dbhost" class="control-label">Database host:</label>
            <div class="controls"><input type="text" name="dbhost" ng-model="setup.dbhost" required></div>
        </div>
        <div class="control-group">
            <label for="dbname" class="control-label">Database name:</label>
            <div class="controls"><input type="text" name="dbname" ng-model="setup.dbname" required></div>
        </div>
        <div class="control-group">
            <label for="dbuser" class="control-label">Database user:</label>
            <div class="controls"><input type="text" name="dbuser" ng-model="setup.dbuser" required></div>
        </div>
        <div class="control-group">
            <label for="dbpassword" class="control-label">Database password:</label>
            <div class="controls"><input type="password" name="dbpassword" ng-model="setup.dbpassword" required></div>
        </div>
    </div>
</div>
