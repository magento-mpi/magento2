<div>
    <table class="table table-bordered">
        <tr>
            <th></th>
            <th>Data</th>
            <th>Dependencies</th>
            <th>Extensions</th>
        </tr>

        <?php $counter = 0; ?>
        <?php foreach ($modules as $module): ?>
            <tr>
                <td><?php echo ++$counter; ?></td>
                <td>
                    Name:&nbsp;<b><?php echo $module['name']; ?></b></br>
                    Version:&nbsp;<?php echo $module['version']; ?></br>
                    Active:&nbsp;<?php echo $module['active'] ? 'True' : 'False'; ?>
                </td>

                <td>
                    <ul>
                    <?php foreach ($module['dependencies']['modules'] as $dependency): ?>
                        <li><?php echo $dependency; ?></li>
                    <?php endforeach; ?>
                    </ul>
                </td>

                <td>
                    <?php if(count($module['dependencies']['extensions']['strict'])): ?>
                    <b>Strict:</b>
                    <ul>
                        <?php foreach ($module['dependencies']['extensions']['strict'] as $extension): ?>
                            <li><?php echo $extension['name']; ?></li>
                        <?php endforeach; ?>
                    </ul>
                    <?php endif; ?>

                    <?php if(count($module['dependencies']['extensions']['alternatives'])): ?>
                    <b>Alternatives:</b>
                    <ul>
                        <?php foreach ($module['dependencies']['extensions']['alternatives'] as $extension): ?>
                            <li>
                                <?php $result = []; ?>
                                <?php foreach ($extension as $item): ?>
                                    <?php $result[] = $item['name']; ?>
                                <?php endforeach; ?>
                                <?php echo implode(', ', $result); ?>
                            </li>
                        <?php endforeach; ?>
                    </ul>
                    <?php endif; ?>

                </td>
            </tr>
        <?php endforeach; ?>
    </table>
    <?php ?>
</div>
