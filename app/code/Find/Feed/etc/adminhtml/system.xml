<config>
    <system>
        <tab id="find" translate="label" module="Find_Feed" sortOrder="300">
            <label>The Find</label>
        </tab>
        <section id="feed" translate="label" module="Find_Feed" sortOrder="100" showInDefault="1" showInWebsite="1" showInStore="1">
            <label>Feed</label>
            <tab>find</tab>
            <resource>Find_Feed::config_feed</resource>
            <group id="settings" translate="label" type="text" sortOrder="200" showInDefault="1" showInWebsite="1" showInStore="1">
                <label>Settings</label>
                <field id="name" translate="label">
                    <label>FTP Settings</label>
                </field>
                <field id="ftp_server" translate="label" type="text" sortOrder="10" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>FTP Server</label>
                </field>
                <field id="ftp_path" translate="label" type="text" sortOrder="15" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>FTP Path</label>
                </field>
                <field id="ftp_user" translate="label comment" type="text" sortOrder="20" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>FTP User</label>
                    <comment>
                        <![CDATA[To access your FTP account information, first register and verify your store in TheFind Merchant Center.  Click <a href="https://merchant.thefind.com/mc/claim.fhtml">here</a> to get started.]]>
                    </comment>
                </field>
                <field id="ftp_password" translate="label" type="password" sortOrder="30" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>FTP Password</label>
                </field>
                <field id="findfeed_filename" translate="label" type="text" sortOrder="30" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>TheFind Feed Filename</label>
                </field>
                <field id="findfeed_update" translate="label" sortOrder="40" type="select" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Update TheFind Item when Product is Updated</label>
                    <source_model>Mage_Backend_Model_Config_Source_Yesno</source_model>
                </field>
                <field id="cron_frequency" translate="label comment" type="select" sortOrder="60" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Cron Frequency</label>
                    <source_model>Find_Feed_Model_Adminhtml_System_Source_Cron_Frequency</source_model>
                </field>
                <field id="cron_hours" translate="label comment" type="select" sortOrder="70" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Cron Hour</label>
                    <source_model>Find_Feed_Model_Adminhtml_System_Source_Cron_Hours</source_model>
                </field>
            </group>
        </section>
    </system>
</config>
