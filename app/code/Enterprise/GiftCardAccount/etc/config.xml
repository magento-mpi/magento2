<config>
    <global>
        <resources>
            <enterprise_giftcardaccount_setup>
                <setup>
                    <module>Enterprise_GiftCardAccount</module>
                    <class>Enterprise_GiftCardAccount_Model_Resource_Setup</class>
                </setup>
            </enterprise_giftcardaccount_setup>
        </resources>
        <sales>
            <quote>
                <totals>
                    <giftcardaccount>
                        <class>Enterprise_GiftCardAccount_Model_Total_Quote_Giftcardaccount</class>
                        <after>weee,discount,tax,tax_subtotal,grand_total</after>
                        <before>customerbalance</before>
                        <renderer>Enterprise_GiftCardAccount_Block_Checkout_Cart_Total</renderer>
                    </giftcardaccount>
                </totals>
            </quote>
            <order_invoice>
                <totals>
                    <giftcardaccount>
                        <class>Enterprise_GiftCardAccount_Model_Total_Invoice_Giftcardaccount</class>
                        <after>discount,tax,grand_total</after>
                        <before>customerbalance</before>
                    </giftcardaccount>
                </totals>
            </order_invoice>
            <order_creditmemo>
                <totals>
                    <giftcardaccount>
                        <class>Enterprise_GiftCardAccount_Model_Total_Creditmemo_Giftcardaccount</class>
                        <after>weee,discount,tax,grand_total,customerbalance</after>
                    </giftcardaccount>
                </totals>
            </order_creditmemo>
        </sales>
        <enterprise>
            <giftcardaccount>
                <separator>-</separator>
                <charset>
                    <alphanum>ABCDEFGHIJKLMNOPQRSTUVWXYZ0123456789</alphanum>
                    <alpha>ABCDEFGHIJKLMNOPQRSTUVWXYZ</alpha>
                    <num>0123456789</num>
                </charset>
            </giftcardaccount>
        </enterprise>
        <events>
            <enterprise_giftcardaccount_save_after>
                <observers>
                    <enterprise_giftcardaccount_save_after>
                        <class>Enterprise_GiftCardAccount_Model_Observer</class>
                        <method>giftcardaccountSaveAfter</method>
                    </enterprise_giftcardaccount_save_after>
                </observers>
            </enterprise_giftcardaccount_save_after>
            <sales_order_invoice_register>
                <observers>
                    <enterprise_giftcardaccount_sales_order_invoice_register>
                        <class>Enterprise_GiftCardAccount_Model_Observer</class>
                        <method>increaseOrderGiftCardInvoicedAmount</method>
                    </enterprise_giftcardaccount_sales_order_invoice_register>
                </observers>
            </sales_order_invoice_register>
            <enterprise_giftcardaccount_charge_by_code>
                <observers>
                    <enterprise_giftcardaccount_charge_by_code>
                        <class>Enterprise_GiftCardAccount_Model_Observer</class>
                        <method>chargeByCode</method>
                    </enterprise_giftcardaccount_charge_by_code>
                </observers>
            </enterprise_giftcardaccount_charge_by_code>
            <enterprise_giftcardaccount_charge>
                <observers>
                    <enterprise_giftcardaccount_charge>
                        <class>Enterprise_GiftCardAccount_Model_Observer</class>
                        <method>chargeById</method>
                    </enterprise_giftcardaccount_charge>
                </observers>
            </enterprise_giftcardaccount_charge>
            <enterprise_giftcardaccount_create>
                <observers>
                    <enterprise_giftcardaccount_create>
                        <class>Enterprise_GiftCardAccount_Model_Observer</class>
                        <method>create</method>
                    </enterprise_giftcardaccount_create>
                </observers>
            </enterprise_giftcardaccount_create>
            <adminhtml_sales_order_create_process_data>
                <observers>
                    <enterprise_giftcardaccount>
                        <class>Enterprise_GiftCardAccount_Model_Observer</class>
                        <method>processOrderCreationData</method>
                    </enterprise_giftcardaccount>
                </observers>
            </adminhtml_sales_order_create_process_data>
            <sales_quote_payment_import_data_before>
                <observers>
                    <enterprise_giftcardaccount>
                        <class>Enterprise_GiftCardAccount_Model_Observer</class>
                        <method>paymentDataImport</method>
                    </enterprise_giftcardaccount>
                </observers>
            </sales_quote_payment_import_data_before>
            <payment_method_is_active>
                <observers>
                    <enterprise_giftcardaccount>
                        <class>Enterprise_GiftCardAccount_Model_Observer</class>
                        <method>togglePaymentMethods</method>
                    </enterprise_giftcardaccount>
                </observers>
            </payment_method_is_active>
            <sales_quote_collect_totals_before>
                <observers>
                    <enterprise_giftcardaccount>
                        <class>Enterprise_GiftCardAccount_Model_Observer</class>
                        <method>quoteCollectTotalsBefore</method>
                    </enterprise_giftcardaccount>
                </observers>
            </sales_quote_collect_totals_before>
            <sales_quote_merge_after>
                <observers>
                    <enterprise_giftcardaccount>
                        <class>Enterprise_GiftCardAccount_Model_Observer</class>
                        <method>quoteMergeAfter</method>
                    </enterprise_giftcardaccount>
                </observers>
            </sales_quote_merge_after>
            <sales_order_creditmemo_refund>
                <observers>
                    <enterprise_giftcardaccount>
                        <class>Enterprise_GiftCardAccount_Model_Observer</class>
                        <method>refund</method>
                    </enterprise_giftcardaccount>
                </observers>
            </sales_order_creditmemo_refund>
            <adminhtml_sales_order_creditmemo_register_before>
                <observers>
                    <enterprise_giftcardaccount>
                        <class>Enterprise_GiftCardAccount_Model_Observer</class>
                        <method>creditmemoDataImport</method>
                    </enterprise_giftcardaccount>
                </observers>
            </adminhtml_sales_order_creditmemo_register_before>
            <sales_order_load_after>
                <observers>
                    <enterprise_giftcardaccount>
                        <class>Enterprise_GiftCardAccount_Model_Observer</class>
                        <method>salesOrderLoadAfter</method>
                    </enterprise_giftcardaccount>
                </observers>
            </sales_order_load_after>
            <paypal_prepare_line_items>
                <observers>
                    <enterprise_giftcardaccount>
                        <class>Enterprise_GiftCardAccount_Model_Observer</class>
                        <method>addPaypalGiftCardItem</method>
                    </enterprise_giftcardaccount>
                </observers>
            </paypal_prepare_line_items>
            <sales_model_service_quote_submit_before>
                <observers>
                    <enterprise_giftcardaccount>
                        <class>Enterprise_GiftCardAccount_Model_Observer</class>
                        <method>processOrderPlace</method>
                    </enterprise_giftcardaccount>
                </observers>
            </sales_model_service_quote_submit_before>
            <sales_model_service_quote_submit_failure>
                <observers>
                    <enterprise_giftcardaccount>
                        <class>Enterprise_GiftCardAccount_Model_Observer</class>
                        <method>revertGiftCardAccountBalance</method>
                    </enterprise_giftcardaccount>
                </observers>
            </sales_model_service_quote_submit_failure>
            <paypal_payment_cancel>
                <observers>
                    <enterprise_giftcardaccount>
                        <class>Enterprise_GiftCardAccount_Model_Observer</class>
                        <method>revertGiftCardAccountBalance</method>
                    </enterprise_giftcardaccount>
                </observers>
            </paypal_payment_cancel>
            <checkout_type_multishipping_create_orders_single>
                <observers>
                    <enterprise_giftcardaccount>
                        <class>Enterprise_GiftCardAccount_Model_Observer</class>
                        <method>processOrderPlace</method>
                    </enterprise_giftcardaccount>
                </observers>
            </checkout_type_multishipping_create_orders_single>
            <googlecheckout_save_order_after>
                <observers>
                    <enterprise_giftcardaccount>
                        <class>Enterprise_GiftCardAccount_Model_Observer</class>
                        <method>processOrderPlace</method>
                    </enterprise_giftcardaccount>
                </observers>
            </googlecheckout_save_order_after>
            <googlecheckout_create_order_before>
                <observers>
                    <enterprise_giftcardaccount>
                        <class>Enterprise_GiftCardAccount_Model_Observer</class>
                        <method>processOrderCreateBefore</method>
                    </enterprise_giftcardaccount>
                </observers>
            </googlecheckout_create_order_before>
            <checkout_multishipping_refund_all>
                <observers>
                    <enterprise_giftcardaccount>
                        <class>Enterprise_GiftCardAccount_Model_Observer</class>
                        <method>revertGiftCardsForAllOrders</method>
                    </enterprise_giftcardaccount>
                </observers>
            </checkout_multishipping_refund_all>
        </events>
        <template>
            <email>
                <giftcard_giftcardaccount_email_template translate="label" module="Enterprise_GiftCardAccount">
                    <label>Gift Card Code/Balance</label>
                    <file>email/card_information.html</file>
                    <type>html</type>
                </giftcard_giftcardaccount_email_template>
            </email>
        </template>
        <pdf>
            <totals>
                <enterprise_giftcardaccount translate="title">
                    <title>Gift Cards</title>
                    <source_field>gift_cards_amount</source_field>
                    <amount_prefix>-</amount_prefix>
                    <font_size>7</font_size>
                    <display_zero>0</display_zero>
                    <sort_order>550</sort_order>
                </enterprise_giftcardaccount>
            </totals>
        </pdf>
    </global>
    <frontend>
        <routers>
            <enterprise_giftcardaccount>
                <use>standard</use>
                <args>
                    <module>Enterprise_GiftCardAccount</module>
                    <frontName>giftcard</frontName>
                </args>
            </enterprise_giftcardaccount>
        </routers>
        <events>
            <google_checkout_discount_item_price>
                <observers>
                    <enterprise_giftcardaccount>
                        <class>Enterprise_GiftCardAccount_Model_Observer</class>
                        <method>googleCheckoutDiscoutItem</method>
                    </enterprise_giftcardaccount>
                </observers>
            </google_checkout_discount_item_price>
        </events>
    </frontend>
    <admin>
        <routers>
            <adminhtml>
                <args>
                    <modules>
                        <enterprise_giftcardaccount before="Magento_Adminhtml">Enterprise_GiftCardAccount_Adminhtml</enterprise_giftcardaccount>
                    </modules>
                </args>
            </adminhtml>
        </routers>
    </admin>
    <adminhtml>
        <events>
            <order_cancel_after>
                <observers>
                    <enterprise_giftcardaccount>
                        <class>Enterprise_GiftCardAccount_Model_Observer</class>
                        <method>returnFundsToStoreCredit</method>
                    </enterprise_giftcardaccount>
                </observers>
            </order_cancel_after>
            <sales_prepare_amount_expression>
                <observers>
                    <enterprise_giftcardaccount>
                        <class>Enterprise_GiftCardAccount_Model_Observer</class>
                        <method>extendSalesAmountExpression</method>
                    </enterprise_giftcardaccount>
                </observers>
            </sales_prepare_amount_expression>
        </events>
    </adminhtml>
    <default>
        <giftcard>
            <giftcardaccount_email>
                <identity>general</identity>
                <template>giftcard_giftcardaccount_email_template</template>
            </giftcardaccount_email>
            <giftcardaccount_general>
                <code_length>12</code_length>
                <code_format>alphanum</code_format>
                <code_split>0</code_split>
                <pool_size>1000</pool_size>
                <pool_threshold>100</pool_threshold>
            </giftcardaccount_general>
        </giftcard>
        <sales>
            <totals_sort>
                <giftcardaccount>90</giftcardaccount>
            </totals_sort>
        </sales>
    </default>
    <crontab>
        <jobs>
            <enterprise_giftcardaccount_update_states>
                <schedule>
                    <cron_expr>0 1 * * *</cron_expr>
                </schedule>
                <run>
                    <model>Enterprise_GiftCardAccount_Model_Cron::updateStates</model>
                </run>
            </enterprise_giftcardaccount_update_states>
            <enterprise_giftcardaccount_generage_codes_pool>
                <schedule>
                    <cron_expr>30 * * * *</cron_expr>
                </schedule>
                <run>
                    <model>Enterprise_GiftCardAccount_Model_Pool::applyCodesGeneration</model>
                </run>
            </enterprise_giftcardaccount_generage_codes_pool>
        </jobs>
    </crontab>
</config>
