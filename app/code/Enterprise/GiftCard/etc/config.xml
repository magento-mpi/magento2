<config>
    <global>
        <resources>
            <enterprise_giftcard_setup>
                <setup>
                    <module>Enterprise_GiftCard</module>
                    <class>Magento_Catalog_Model_Resource_Setup</class>
                </setup>
            </enterprise_giftcard_setup>
        </resources>
        <catalog>
            <product>
                <type>
                    <giftcard translate="label">
                        <label>Gift Card</label>
                        <model>Enterprise_GiftCard_Model_Catalog_Product_Type_Giftcard</model>
                        <price_model>Enterprise_GiftCard_Model_Catalog_Product_Price_Giftcard</price_model>
                        <index_priority>45</index_priority>
                        <composite>0</composite>
                        <is_qty>1</is_qty>
                        <price_indexer>Enterprise_GiftCard_Model_Resource_Indexer_Price</price_indexer>
                    </giftcard>
                </type>
                <attributes>
                    <unassignable>
                        <allow_open_amount />
                        <giftcard_amounts />
                        <giftcard_type />
                    </unassignable>
                </attributes>
            </product>
        </catalog>
        <template>
            <email>
                <giftcard_email_template translate="label" module="Enterprise_GiftCard">
                    <label>Gift Card(s) Purchase</label>
                    <file>email/gift_information.html</file>
                    <type>html</type>
                </giftcard_email_template>
            </email>
        </template>
        <sales>
            <quote>
                <item>
                    <product_attributes>
                        <giftcard_type />
                        <giftcard_amounts />
                        <allow_open_amount />
                        <open_amount_min />
                        <open_amount_max />
                        <use_config_lifetime />
                        <lifetime />
                        <use_config_is_redeemable />
                        <is_redeemable />
                        <use_config_email_template />
                        <email_template />
                    </product_attributes>
                </item>
            </quote>
        </sales>
        <events>
            <sales_convert_quote_item_to_order_item>
                <observers>
                    <enterprise_giftcard_append_additional_data>
                        <class>Enterprise_GiftCard_Model_Observer</class>
                        <method>appendGiftcardAdditionalData</method>
                    </enterprise_giftcard_append_additional_data>
                </observers>
            </sales_convert_quote_item_to_order_item>
            <sales_order_save_commit_after>
                <observers>
                    <enterprise_giftcard_generate_giftcardaccounts>
                        <class>Enterprise_GiftCard_Model_Observer</class>
                        <method>generateGiftCardAccounts</method>
                    </enterprise_giftcard_generate_giftcardaccounts>
                </observers>
            </sales_order_save_commit_after>
            <catalog_product_collection_load_after>
                <observers>
                    <enterprise_giftcard>
                        <class>Enterprise_GiftCard_Model_Observer</class>
                        <method>loadAttributesAfterCollectionLoad</method>
                    </enterprise_giftcard>
                </observers>
            </catalog_product_collection_load_after>
        </events>
    </global>
    <frontend>
        <product>
            <collection>
                <attributes>
                    <giftcard_type />
                    <giftcard_amounts />
                    <allow_open_amount />
                    <open_amount_min />
                    <open_amount_max />
                    <use_config_lifetime />
                    <lifetime />
                    <use_config_is_redeemable />
                    <is_redeemable />
                </attributes>
            </collection>
        </product>
        <translate>
            <modules>
                <Enterprise_GiftCard>
                    <files>
                        <default>Enterprise_GiftCard.csv</default>
                    </files>
                </Enterprise_GiftCard>
            </modules>
        </translate>
        <secure_url>
            <giftcard_customer>/giftcard/customer/</giftcard_customer>
        </secure_url>
        <events>
            <product_option_renderer_init>
                <observers>
                    <giftcard_observer>
                        <class>Enterprise_GiftCard_Model_Observer</class>
                        <method>initOptionRenderer</method>
                    </giftcard_observer>
                </observers>
            </product_option_renderer_init>
        </events>
    </frontend>
    <adminhtml>
        <translate>
            <modules>
                <Enterprise_GiftCard>
                    <files>
                        <default>Enterprise_GiftCard.csv</default>
                    </files>
                </Enterprise_GiftCard>
            </modules>
        </translate>
        <sales>
            <order>
                <create>
                    <available_product_types>
                        <giftcard />
                    </available_product_types>
                </create>
            </order>
        </sales>
        <events>
            <adminhtml_catalog_product_edit_prepare_form>
                <observers>
                    <enterprise_giftcard_product_edit_prepare_form>
                        <class>Enterprise_GiftCard_Model_Observer</class>
                        <method>setAmountsRendererInForm</method>
                    </enterprise_giftcard_product_edit_prepare_form>
                </observers>
            </adminhtml_catalog_product_edit_prepare_form>
            <adminhtml_catalog_product_form_prepare_excluded_field_list>
                <observers>
                    <enterprise_giftcard_product_excluded_field_list>
                        <class>Enterprise_GiftCard_Model_Observer</class>
                        <method>updateExcludedFieldList</method>
                    </enterprise_giftcard_product_excluded_field_list>
                </observers>
            </adminhtml_catalog_product_form_prepare_excluded_field_list>
        </events>
    </adminhtml>
    <default>
        <giftcard>
            <email>
                <identity>general</identity>
                <template>giftcard_email_template</template>
            </email>
            <general>
                <is_redeemable>1</is_redeemable>
                <lifetime>0</lifetime>
                <order_item_status>9</order_item_status>
                <allow_message>1</allow_message>
                <message_max_length>255</message_max_length>
            </general>
        </giftcard>
    </default>
</config>
