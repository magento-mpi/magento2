<config>
    <global>
        <helpers>
            <core>
                <encryption_model>Enterprise_Pci_Model_Encryption</encryption_model>
            </core>
        </helpers>
        <resources>
            <enterprise_pci_setup>
                <setup>
                    <module>Enterprise_Pci</module>
                    <class>Magento_Core_Model_Resource_Setup</class>
                </setup>
            </enterprise_pci_setup>
        </resources>
        <events>
            <admin_user_save_before>
                <observers>
                    <enterprise_pci>
                        <class>Enterprise_Pci_Model_Observer</class>
                        <method>checkAdminPasswordChange</method>
                    </enterprise_pci>
                </observers>
            </admin_user_save_before>
            <admin_user_save_after>
                <observers>
                    <enterprise_pci>
                        <class>Enterprise_Pci_Model_Observer</class>
                        <method>trackAdminNewPassword</method>
                    </enterprise_pci>
                </observers>
            </admin_user_save_after>
        </events>
    </global>
    <adminhtml>
        <events>
            <admin_user_authenticate_after>
                <observers>
                    <enterprise_pci>
                        <class>Enterprise_Pci_Model_Observer</class>
                        <method>adminAuthenticate</method>
                    </enterprise_pci>
                </observers>
            </admin_user_authenticate_after>
            <api_user_authenticated>
                <observers>
                    <enterprise_pci>
                        <class>Enterprise_Pci_Model_Observer</class>
                        <method>upgradeApiKey</method>
                    </enterprise_pci>
                </observers>
            </api_user_authenticated>
            <controller_action_predispatch>
                <observers>
                    <enterprise_pci>
                        <class>Enterprise_Pci_Model_Observer</class>
                        <method>forceAdminPasswordChange</method>
                    </enterprise_pci>
                </observers>
            </controller_action_predispatch>
        </events>
        <translate>
            <modules>
                <Enterprise_Pci>
                    <files>
                        <default>Enterprise_Pci.csv</default>
                    </files>
                </Enterprise_Pci>
            </modules>
        </translate>
    </adminhtml>
    <admin>
        <routers>
            <adminhtml>
                <args>
                    <modules>
                        <Enterprise_Pci before="Magento_Adminhtml">Enterprise_Pci_Adminhtml</Enterprise_Pci>
                    </modules>
                </args>
            </adminhtml>
        </routers>
    </admin>
    <frontend>
        <events>
            <customer_customer_authenticated>
                <observers>
                    <enterprise_pci>
                        <class>Enterprise_Pci_Model_Observer</class>
                        <method>upgradeCustomerPassword</method>
                    </enterprise_pci>
                </observers>
            </customer_customer_authenticated>
        </events>
        <translate>
            <modules>
                <Enterprise_Pci>
                    <files>
                        <default>Enterprise_Pci.csv</default>
                    </files>
                </Enterprise_Pci>
            </modules>
        </translate>
    </frontend>
    <default>
        <admin>
            <security>
                <session_lifetime>900</session_lifetime>
                <lockout_failures>6</lockout_failures>
                <lockout_threshold>30</lockout_threshold>
                <password_lifetime>90</password_lifetime>
                <password_is_forced>1</password_is_forced>
            </security>
        </admin>
    </default>
</config>
