<config>
    <global>
        <resources>
            <enterprise_giftwrapping_setup>
                <setup>
                    <module>Enterprise_GiftWrapping</module>
                    <class>Enterprise_GiftWrapping_Model_Resource_Setup</class>
                </setup>
            </enterprise_giftwrapping_setup>
        </resources>
        <sales>
            <quote>
                <item>
                    <product_attributes>
                        <gift_wrapping_available />
                        <gift_wrapping_price />
                    </product_attributes>
                </item>
                <totals>
                    <giftwrapping>
                        <class>Enterprise_GiftWrapping_Model_Total_Quote_Giftwrapping</class>
                        <after>subtotal</after>
                        <renderer>Enterprise_GiftWrapping_Block_Checkout_Totals</renderer>
                    </giftwrapping>
                    <tax_giftwrapping>
                        <class>Enterprise_GiftWrapping_Model_Total_Quote_Tax_Giftwrapping</class>
                        <after>tax</after>
                        <before>grand_total</before>
                    </tax_giftwrapping>
                </totals>
            </quote>
            <order_invoice>
                <totals>
                    <giftwrapping>
                        <class>Enterprise_GiftWrapping_Model_Total_Invoice_Giftwrapping</class>
                        <after>cost_total</after>
                        <before>giftcardaccount</before>
                    </giftwrapping>
                    <tax_giftwrapping>
                        <class>Enterprise_GiftWrapping_Model_Total_Invoice_Tax_Giftwrapping</class>
                        <after>tax</after>
                        <before>grand_total</before>
                    </tax_giftwrapping>
                </totals>
            </order_invoice>
            <order_creditmemo>
                <totals>
                    <giftwrapping>
                        <class>Enterprise_GiftWrapping_Model_Total_Creditmemo_Giftwrapping</class>
                        <after>subtotal</after>
                        <before>giftcardaccount</before>
                    </giftwrapping>
                    <tax_giftwrapping>
                        <class>Enterprise_GiftWrapping_Model_Total_Creditmemo_Tax_Giftwrapping</class>
                        <after>tax</after>
                        <before>grand_total</before>
                    </tax_giftwrapping>
                </totals>
            </order_creditmemo>
        </sales>
    </global>
    <frontend>
        <translate>
            <modules>
                <Enterprise_GiftWrapping>
                    <files>
                        <default>Enterprise_GiftWrapping.csv</default>
                    </files>
                </Enterprise_GiftWrapping>
            </modules>
        </translate>
    </frontend>
    <adminhtml>
        <translate>
            <modules>
                <Enterprise_GiftWrapping>
                    <files>
                        <default>Enterprise_GiftWrapping.csv</default>
                    </files>
                </Enterprise_GiftWrapping>
            </modules>
        </translate>
    </adminhtml>
    <default>
        <system>
            <media_storage_configuration>
                <allowed_resources>
                    <giftwrapping_folder>wrapping</giftwrapping_folder>
                </allowed_resources>
            </media_storage_configuration>
        </system>
        <sales>
            <gift_options>
                <wrapping_allow_order>1</wrapping_allow_order>
                <wrapping_allow_items>1</wrapping_allow_items>
                <allow_gift_receipt>1</allow_gift_receipt>
                <allow_printed_card>1</allow_printed_card>
            </gift_options>
        </sales>
        <tax>
            <cart_display>
                <gift_wrapping>1</gift_wrapping>
                <printed_card>1</printed_card>
            </cart_display>
            <sales_display>
                <gift_wrapping>1</gift_wrapping>
                <printed_card>1</printed_card>
            </sales_display>
        </tax>
    </default>
</config>