<config>
    <modules>
        <Enterprise_PromotionPermissions>
            <version>1.11.0.0</version>
            <active>false</active>
            <depends type="hard">
                <Mage_Adminhtml/>
                <Mage_Core/>
                <Enterprise_Banner/>
                <Enterprise_Reminder/>
            </depends>
            <sequence>
                <Mage_CatalogRule/>
                <Mage_SalesRule/>
            </sequence>
        </Enterprise_PromotionPermissions>
    </modules>
    <adminhtml>
        <events>
            <core_block_abstract_to_html_before>
                <observers>
                    <enterprise_promotionpermissions>
                        <class>Enterprise_PromotionPermissions_Model_Observer</class>
                        <method>coreBlockAbstractToHtmlBefore</method>
                    </enterprise_promotionpermissions>
                </observers>
            </core_block_abstract_to_html_before>
            <adminhtml_block_html_before>
                <observers>
                    <enterprise_promotionpermissions>
                        <class>Enterprise_PromotionPermissions_Model_Observer</class>
                        <method>adminhtmlBlockHtmlBefore</method>
                    </enterprise_promotionpermissions>
                </observers>
            </adminhtml_block_html_before>
            <controller_action_predispatch>
                <observers>
                    <enterprise_promotionpermissions>
                        <class>Enterprise_PromotionPermissions_Model_Observer</class>
                        <method>controllerActionPredispatch</method>
                    </enterprise_promotionpermissions>
                </observers>
            </controller_action_predispatch>
        </events>
        <translate>
            <modules>
                <Enterprise_PromotionPermissions>
                    <files>
                        <default>Enterprise_PromotionPermissions.csv</default>
                    </files>
                </Enterprise_PromotionPermissions>
            </modules>
        </translate>
    </adminhtml>
</config>
