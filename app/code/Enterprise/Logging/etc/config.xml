<config>
    <global>
        <resources>
            <enterprise_logging_setup>
                <setup>
                    <module>Enterprise_Logging</module>
                    <class>Magento_Core_Model_Resource_Setup</class>
                </setup>
            </enterprise_logging_setup>
        </resources>
    </global>
    <adminhtml>
        <events>
            <controller_action_predispatch>
                <observers>
                    <enterprise_logging>
                        <class>Enterprise_Logging_Model_Observer</class>
                        <method>controllerPredispatch</method>
                    </enterprise_logging>
                </observers>
            </controller_action_predispatch>
            <controller_action_postdispatch_adminhtml>
                <observers>
                    <enterprise_logging>
                        <class>Enterprise_Logging_Model_Observer</class>
                        <method>controllerPostdispatch</method>
                    </enterprise_logging>
                </observers>
            </controller_action_postdispatch_adminhtml>
            <model_save_after>
                <observers>
                    <enterprise_logging>
                        <class>Enterprise_Logging_Model_Observer</class>
                        <method>modelSaveAfter</method>
                    </enterprise_logging>
                </observers>
            </model_save_after>
            <model_delete_after>
                <observers>
                    <enterprise_logging>
                        <class>Enterprise_Logging_Model_Observer</class>
                        <method>modelDeleteAfter</method>
                    </enterprise_logging>
                </observers>
            </model_delete_after>
            <model_load_after>
                <observers>
                    <enterprise_logging>
                        <class>Enterprise_Logging_Model_Observer</class>
                        <method>modelLoadAfter</method>
                    </enterprise_logging>
                </observers>
            </model_load_after>
            <backend_auth_user_login_success>
                <observers>
                    <enterprise_logging>
                        <class>Enterprise_Logging_Model_Observer</class>
                        <method>adminSessionLoginSuccess</method>
                    </enterprise_logging>
                </observers>
            </backend_auth_user_login_success>
            <backend_auth_user_login_failed>
                <observers>
                    <enterprise_logging>
                        <class>Enterprise_Logging_Model_Observer</class>
                        <method>adminSessionLoginFailed</method>
                    </enterprise_logging>
                </observers>
            </backend_auth_user_login_failed>
        </events>
        <enterprise>
            <logging>
                <skip_fields>updated_at,form_key</skip_fields>
            </logging>
        </enterprise>
    </adminhtml>
    <admin>
        <routers>
            <adminhtml>
                <args>
                    <modules>
                        <Enterprise_Logging before="Magento_Adminhtml">Enterprise_Logging_Adminhtml</Enterprise_Logging>
                    </modules>
                </args>
            </adminhtml>
        </routers>
    </admin>
    <default>
        <system>
            <rotation translate="frequency">
                <frequency>1</frequency>
                <lifetime>60</lifetime>
            </rotation>
        </system>
    </default>
    <crontab>
        <jobs>
            <enterprise_logging_rotate_logs>
                <schedule>
                    <cron_expr>1 2 * * *</cron_expr>
                </schedule>
                <run>
                    <model>Enterprise_Logging_Model_Observer::rotateLogs</model>
                </run>
            </enterprise_logging_rotate_logs>
        </jobs>
    </crontab>
</config>
