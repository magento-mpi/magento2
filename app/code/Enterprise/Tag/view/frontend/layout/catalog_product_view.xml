<layout version="0.1.0">
    <catalog_product_view>
        <reference name="product.tag.list.list.before">
            <block type="Enterprise_Tag_Block_Reward_Tooltip" name="reward.tooltip.tag" template="Enterprise_Reward::tooltip.phtml">
                <action method="initRewardType">
                    <type>Enterprise_Tag_Model_Reward_Action_Tag</type>
                </action>
                <action method="setWrapperClass">
                    <class>reward-tag</class>
                </action>
                <action method="setRewardMessage" translate="message">
                    <message>Submit a new tag now and earn %1 when the tag is approved.</message>
                </action>
                <action method="setRewardQtyLimitationMessage" translate="message">
                    <message>You can reward up to %1 new tag(s).</message>
                </action>
                <action method="setIsGuestNote">
                    <value>1</value>
                </action>
            </block>
        </reference>
    </catalog_product_view>
</layout>
