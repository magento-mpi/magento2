<config>
    <global>
        <resources>
            <enterprise_salesarchive_setup>
                <setup>
                    <module>Enterprise_SalesArchive</module>
                    <class>Enterprise_SalesArchive_Model_Resource_Setup</class>
                </setup>
            </enterprise_salesarchive_setup>
        </resources>
    </global>
    <adminhtml>
        <translate>
            <modules>
                <Enterprise_SalesArchive>
                    <files>
                        <default>Enterprise_SalesArchive.csv</default>
                    </files>
                </Enterprise_SalesArchive>
            </modules>
        </translate>
    </adminhtml>
    <default>
        <sales>
            <enterprise_salesarchive>
                <active>0</active>
                <age>30</age>
                <order_statuses>closed,complete</order_statuses>
            </enterprise_salesarchive>
        </sales>
    </default>
    <crontab>
        <jobs>
            <enterprise_salesarchive_archive_orders>
                <schedule>
                    <cron_expr>0 0 * * *</cron_expr>
                </schedule>
                <run>
                    <model>Enterprise_SalesArchive_Model_Observer::archiveOrdersByCron</model>
                </run>
            </enterprise_salesarchive_archive_orders>
        </jobs>
    </crontab>
</config>