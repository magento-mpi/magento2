<config>
    <global>
        <resources>
            <enterprise_salesarchive_setup>
                <setup>
                    <module>Enterprise_SalesArchive</module>
                    <class>Enterprise_SalesArchive_Model_Resource_Setup</class>
                </setup>
            </enterprise_salesarchive_setup>
        </resources>
        <events>
            <sales_order_resource_update_grid_records>
                <observers>
                    <enterprise_salesarchive>
                        <type>singleton</type>
                        <class>Enterprise_SalesArchive_Model_Observer</class>
                        <method>salesUpdateGridRecords</method>
                    </enterprise_salesarchive>
                </observers>
            </sales_order_resource_update_grid_records>
            <sales_order_invoice_resource_update_grid_records>
                <observers>
                    <enterprise_salesarchive>
                        <type>singleton</type>
                        <class>Enterprise_SalesArchive_Model_Observer</class>
                        <method>salesUpdateGridRecords</method>
                    </enterprise_salesarchive>
                </observers>
            </sales_order_invoice_resource_update_grid_records>
            <sales_order_shipment_resource_update_grid_records>
                <observers>
                    <enterprise_salesarchive>
                        <type>singleton</type>
                        <class>Enterprise_SalesArchive_Model_Observer</class>
                        <method>salesUpdateGridRecords</method>
                    </enterprise_salesarchive>
                </observers>
            </sales_order_shipment_resource_update_grid_records>
            <sales_order_creditmemo_resource_update_grid_records>
                <observers>
                    <enterprise_salesarchive>
                        <type>singleton</type>
                        <class>Enterprise_SalesArchive_Model_Observer</class>
                        <method>salesUpdateGridRecords</method>
                    </enterprise_salesarchive>
                </observers>
            </sales_order_creditmemo_resource_update_grid_records>
            <controller_action_postdispatch_adminhtml_sales_order_shipment_massPrintShippingLabel>
                <observers>
                    <enterprise_salesarchive>
                        <class>Enterprise_SalesArchive_Model_Observer</class>
                        <method>replaceSalesOrderRedirect</method>
                    </enterprise_salesarchive>
                </observers>
            </controller_action_postdispatch_adminhtml_sales_order_shipment_massPrintShippingLabel>
            <controller_action_postdispatch_adminhtml_sales_order_pdfshipments>
                <observers>
                    <enterprise_salesarchive>
                        <class>Enterprise_SalesArchive_Model_Observer</class>
                        <method>replaceSalesOrderRedirect</method>
                    </enterprise_salesarchive>
                </observers>
            </controller_action_postdispatch_adminhtml_sales_order_pdfshipments>
            <controller_action_postdispatch_adminhtml_sales_order_pdfinvoices>
                <observers>
                    <enterprise_salesarchive>
                        <class>Enterprise_SalesArchive_Model_Observer</class>
                        <method>replaceSalesOrderRedirect</method>
                    </enterprise_salesarchive>
                </observers>
            </controller_action_postdispatch_adminhtml_sales_order_pdfinvoices>
            <controller_action_postdispatch_adminhtml_sales_order_pdfcreditmemos>
                <observers>
                    <enterprise_salesarchive>
                        <class>Enterprise_SalesArchive_Model_Observer</class>
                        <method>replaceSalesOrderRedirect</method>
                    </enterprise_salesarchive>
                </observers>
            </controller_action_postdispatch_adminhtml_sales_order_pdfcreditmemos>
            <controller_action_postdispatch_adminhtml_sales_order_pdfdocs>
                <observers>
                    <enterprise_salesarchive>
                        <class>Enterprise_SalesArchive_Model_Observer</class>
                        <method>replaceSalesOrderRedirect</method>
                    </enterprise_salesarchive>
                </observers>
            </controller_action_postdispatch_adminhtml_sales_order_pdfdocs>
            <controller_action_postdispatch_adminhtml_sales_order_massHold>
                <observers>
                    <enterprise_salesarchive>
                        <class>Enterprise_SalesArchive_Model_Observer</class>
                        <method>replaceSalesOrderRedirect</method>
                    </enterprise_salesarchive>
                </observers>
            </controller_action_postdispatch_adminhtml_sales_order_massHold>
            <controller_action_postdispatch_adminhtml_sales_order_massUnhold>
                <observers>
                    <enterprise_salesarchive>
                        <class>Enterprise_SalesArchive_Model_Observer</class>
                        <method>replaceSalesOrderRedirect</method>
                    </enterprise_salesarchive>
                </observers>
            </controller_action_postdispatch_adminhtml_sales_order_massUnhold>
            <controller_action_postdispatch_adminhtml_sales_order_massCancel>
                <observers>
                    <enterprise_salesarchive>
                        <class>Enterprise_SalesArchive_Model_Observer</class>
                        <method>replaceSalesOrderRedirect</method>
                    </enterprise_salesarchive>
                </observers>
            </controller_action_postdispatch_adminhtml_sales_order_massCancel>
        </events>
    </global>
    <admin>
        <routers>
            <adminhtml>
                <args>
                    <modules>
                        <enterprise_salesarchive before="Magento_Adminhtml">Enterprise_SalesArchive_Adminhtml</enterprise_salesarchive>
                    </modules>
                </args>
            </adminhtml>
        </routers>
    </admin>
    <adminhtml>
        <events>
            <sales_order_load_after>
                <observers>
                    <enterprise_salesarchive>
                        <type>singleton</type>
                        <class>Enterprise_SalesArchive_Model_Observer</class>
                        <method>salesObjectAfterLoad</method>
                    </enterprise_salesarchive>
                </observers>
            </sales_order_load_after>
            <sales_order_invoice_load_after>
                <observers>
                    <enterprise_salesarchive>
                        <type>singleton</type>
                        <class>Enterprise_SalesArchive_Model_Observer</class>
                        <method>salesObjectAfterLoad</method>
                    </enterprise_salesarchive>
                </observers>
            </sales_order_invoice_load_after>
            <sales_order_shipment_load_after>
                <observers>
                    <enterprise_salesarchive>
                        <type>singleton</type>
                        <class>Enterprise_SalesArchive_Model_Observer</class>
                        <method>salesObjectAfterLoad</method>
                    </enterprise_salesarchive>
                </observers>
            </sales_order_shipment_load_after>
            <sales_order_creditmemo_load_after>
                <observers>
                    <enterprise_salesarchive>
                        <type>singleton</type>
                        <class>Enterprise_SalesArchive_Model_Observer</class>
                        <method>salesObjectAfterLoad</method>
                    </enterprise_salesarchive>
                </observers>
            </sales_order_creditmemo_load_after>
            <sales_order_grid_collection_load_before>
                <observers>
                    <enterprise_salesarchive>
                        <type>singleton</type>
                        <class>Enterprise_SalesArchive_Model_Observer</class>
                        <method>appendGridCollection</method>
                    </enterprise_salesarchive>
                </observers>
            </sales_order_grid_collection_load_before>
        </events>
        <translate>
            <modules>
                <Enterprise_SalesArchive>
                    <files>
                        <default>Enterprise_SalesArchive.csv</default>
                    </files>
                </Enterprise_SalesArchive>
            </modules>
        </translate>
    </adminhtml>
    <default>
        <sales>
            <enterprise_salesarchive>
                <active>0</active>
                <age>30</age>
                <order_statuses>closed,complete</order_statuses>
            </enterprise_salesarchive>
        </sales>
    </default>
    <crontab>
        <jobs>
            <enterprise_salesarchive_archive_orders>
                <schedule>
                    <cron_expr>0 0 * * *</cron_expr>
                </schedule>
                <run>
                    <model>Enterprise_SalesArchive_Model_Observer::archiveOrdersByCron</model>
                </run>
            </enterprise_salesarchive_archive_orders>
        </jobs>
    </crontab>
</config>
