<config>
    <modules>
        <Enterprise_Checkout>
            <version>1.11.0.0</version>
            <active>false</active>
            <depends type="hard">
                <Mage_Adminhtml/>
                <Mage_Backend/>
                <Mage_Catalog/>
                <Mage_CatalogInventory/>
                <Mage_Checkout/>
                <Mage_Core/>
                <Mage_Customer/>
                <Mage_Directory/>
                <Mage_Downloadable/>
                <Mage_ProductAlert/>
                <Mage_Reports/>
                <Mage_Sales/>
                <Mage_Tax/>
                <Mage_Widget/>
                <Mage_Wishlist/>
                <Mage_Weee/>
                <Enterprise_GiftCard/>
            </depends>
            <depends type="soft">
                <Mage_Bundle/>
            </depends>
            <sequence>
                <Mage_Sales/>
            </sequence>
        </Enterprise_Checkout>
    </modules>
    <global>
    </global>
    <admin>
        <routers>
            <adminhtml>
                <args>
                    <modules>
                        <enterprise_checkout before="Mage_Adminhtml">Enterprise_Checkout_Adminhtml</enterprise_checkout>
                    </modules>
                </args>
            </adminhtml>
        </routers>
    </admin>
    <adminhtml>
        <translate>
            <modules>
                <Enterprise_Checkout>
                    <files>
                        <default>Enterprise_Checkout.csv</default>
                    </files>
                </Enterprise_Checkout>
            </modules>
        </translate>
        <events>
            <adminhtml_sales_order_create_process_data_before>
                <observers>
                    <addBySku>
                        <class>Enterprise_Checkout_Model_Observer</class>
                        <method>addBySku</method>
                    </addBySku>
                    <uploadSkuCsv>
                        <class>Enterprise_Checkout_Model_Observer</class>
                        <method>uploadSkuCsv</method>
                    </uploadSkuCsv>
                </observers>
            </adminhtml_sales_order_create_process_data_before>
        </events>
    </adminhtml>
    <frontend>
        <routers>
            <checkout>
                <args>
                    <modules>
                        <enterprise_checkout before="Mage_Checkout">Enterprise_Checkout</enterprise_checkout>
                    </modules>
                </args>
            </checkout>
            <enterprise_checkout>
                <use>standard</use>
                <args>
                    <module>Enterprise_Checkout</module>
                    <frontName>customer_order</frontName>
                </args>
            </enterprise_checkout>
        </routers>
        <events>
            <controller_action_layout_generate_blocks_before>
                <observers>
                    <enterprise_checkout>
                        <class>Enterprise_Checkout_Model_Observer</class>
                        <method>collectTotalsFailedItems</method>
                    </enterprise_checkout>
                </observers>
            </controller_action_layout_generate_blocks_before>
            <core_block_abstract_to_html_before>
                <observers>
                    <enterprise_checkout>
                        <class>Enterprise_Checkout_Model_Observer</class>
                        <method>addCartLink</method>
                    </enterprise_checkout>
                </observers>
            </core_block_abstract_to_html_before>
        </events>
        <translate>
            <modules>
                <Enterprise_Checkout>
                    <files>
                        <default>Enterprise_Checkout.csv</default>
                    </files>
                </Enterprise_Checkout>
            </modules>
        </translate>
    </frontend>
</config>
