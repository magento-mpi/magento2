<layout version="0.1.0">
    <adminhtml_targetrule_grid_block>
        <reference name="adminhtml.targetrule.grid.container">
            <block type="Magento_Backend_Block_Widget_Grid" name="adminhtml.targetrule.grid" as="grid">
                <arguments>
                    <id>TargetRuleGrid</id>
                    <dataSource type="object">Enterprise_TargetRule_Model_Resource_Rule_Collection</dataSource>
                    <default_sort>sort_order</default_sort>
                    <default_dir>ASC</default_dir>
                    <save_parameters_in_session>1</save_parameters_in_session>
                    <use_ajax>1</use_ajax>
                    <grid_url type="url">
                        <path>*/*/grid</path>
                        <params>
                            <_current>1</_current>
                        </params>
                    </grid_url>
                </arguments>
                <block type="Magento_Backend_Block_Widget_Grid_ColumnSet" name="adminhtml.targetrule.grid.columnSet" as="grid.columnSet">
                    <arguments>
                        <rowUrl>
                            <path>*/*/edit</path>
                            <extraParamsTemplate>
                                <id>getId</id>
                            </extraParamsTemplate>
                        </rowUrl>
                    </arguments>
                    <block type="Magento_Backend_Block_Widget_Grid_Column" as="rule_id">
                        <arguments>
                            <header translate="true">ID</header>
                            <index>rule_id</index>
                            <type>text</type>
                            <width>20px</width>
                        </arguments>
                    </block>
                    <block type="Magento_Backend_Block_Widget_Grid_Column" as="name">
                        <arguments>
                            <header translate="true">Rule</header>
                            <index>name</index>
                            <type>text</type>
                            <escape>1</escape>
                        </arguments>
                    </block>
                    <block type="Magento_Backend_Block_Widget_Grid_Column" as="from_date">
                        <arguments>
                            <header translate="true">Start on</header>
                            <index>from_date</index>
                            <type>date</type>
                            <default>--</default>
                            <width>160px</width>
                        </arguments>
                    </block>
                    <block type="Magento_Backend_Block_Widget_Grid_Column" as="to_date">
                        <arguments>
                            <header translate="true">End on</header>
                            <index>to_date</index>
                            <type>date</type>
                            <default>--</default>
                            <width>160px</width>
                        </arguments>
                    </block>
                    <block type="Magento_Backend_Block_Widget_Grid_Column" as="sort_order">
                        <arguments>
                            <header translate="true">Priority</header>
                            <index>sort_order</index>
                            <type>text</type>
                            <width>1px</width>
                        </arguments>
                    </block>
                    <block type="Magento_Backend_Block_Widget_Grid_Column" as="apply_to">
                        <arguments>
                            <header translate="true">Applies To</header>
                            <index>apply_to</index>
                            <align>left</align>
                            <type>options</type>
                            <options type="options">Enterprise_TargetRule_Model_Rule_Options_Applies</options>
                            <width>150px</width>
                        </arguments>
                    </block>
                    <block type="Magento_Backend_Block_Widget_Grid_Column" as="is_active">
                        <arguments>
                            <header translate="true">Status</header>
                            <index>is_active</index>
                            <align>left</align>
                            <type>options</type>
                            <options>
                                <active>
                                    <value>1</value>
                                    <label translate="true">Active</label>
                                </active>
                                <inactive>
                                    <value>0</value>
                                    <label translate="true">Inactive</label>
                                </inactive>
                            </options>
                            <width>1px</width>
                        </arguments>
                    </block>
                </block>
            </block>
        </reference>
    </adminhtml_targetrule_grid_block>
</layout>
