<config>
    <global>
        <resources>
            <enterprise_targetrule_setup>
                <setup>
                    <module>Enterprise_TargetRule</module>
                    <class>Enterprise_TargetRule_Model_Resource_Setup</class>
                </setup>
            </enterprise_targetrule_setup>
        </resources>
        <index>
            <indexer>
                <targetrule>
                    <model>Enterprise_TargetRule_Model_Index</model>
                </targetrule>
            </indexer>
        </index>
    </global>
    <adminhtml>
        <events>
            <catalog_product_save_after>
                <observers>
                    <enterprise_targetrule>
                        <class>Enterprise_TargetRule_Model_Observer</class>
                        <method>catalogProductAfterSave</method>
                    </enterprise_targetrule>
                </observers>
            </catalog_product_save_after>
            <catalog_product_save_commit_after>
                <observers>
                    <enterprise_targetrule>
                        <class>Enterprise_TargetRule_Model_Observer</class>
                        <method>catalogProductSaveCommitAfter</method>
                    </enterprise_targetrule>
                </observers>
            </catalog_product_save_commit_after>
            <core_config_data_save_commit_after>
                <observers>
                    <enterprise_targetrule>
                        <class>Enterprise_TargetRule_Model_Observer</class>
                        <method>coreConfigSaveCommitAfter</method>
                    </enterprise_targetrule>
                </observers>
            </core_config_data_save_commit_after>
        </events>
    </adminhtml>
    <admin>
        <routers>
            <adminhtml>
                <args>
                    <modules>
                        <Enterprise_TargetRule before="Magento_Adminhtml">Enterprise_TargetRule_Adminhtml</Enterprise_TargetRule>
                    </modules>
                </args>
            </adminhtml>
        </routers>
    </admin>
    <default>
        <catalog>
            <enterprise_targetrule>
                <related_position_limit>6</related_position_limit>
                <related_position_behavior>0</related_position_behavior>
                <related_rotation_mode>0</related_rotation_mode>
                <crosssell_position_limit>5</crosssell_position_limit>
                <crosssell_position_behavior>0</crosssell_position_behavior>
                <crosssell_rotation_mode>0</crosssell_rotation_mode>
                <upsell_position_limit>8</upsell_position_limit>
                <upsell_position_behavior>0</upsell_position_behavior>
                <upsell_rotation_mode>0</upsell_rotation_mode>
            </enterprise_targetrule>
        </catalog>
    </default>
    <crontab>
        <jobs>
            <enterprise_targetrule_index_reindex>
                <schedule>
                    <cron_expr>0 * * * *</cron_expr>
                </schedule>
                <run>
                    <model>Enterprise_TargetRule_Model_Index::cron</model>
                </run>
            </enterprise_targetrule_index_reindex>
        </jobs>
    </crontab>
</config>
