<layout version="0.1.0">
    <wishlist_search_view translate="label" type="page" parent="default">
        <label>Wishlist View (From Search)</label>
        <reference name="head">
            <action method="setTitle" translate="title" ifconfig="wishlist/general/multiple_enabled">
                <title>Wish List Info</title>
            </action>
        </reference>
        <reference name="root">
            <action method="setTemplate">
                <template>1column.phtml</template>
            </action>
        </reference>
        <reference name="content">
            <block type="Enterprise_Wishlist_Block_Info" name="customer.wishlist.info" template="info.phtml">
                <block type="Magento_Wishlist_Block_Customer_Wishlist_Items" name="wishlist.view.items" as="items" template="Magento_Wishlist::item/list.phtml">
                    <block type="Enterprise_Wishlist_Block_Customer_Wishlist_Item_Column_Selector_Cart" name="customer.wishlist.item.selector" after="-" template="item/column/selector.phtml">
                        <action method="setIsEnabled">
                            <isEnabled>true</isEnabled>
                        </action>
                    </block>
                    <block type="Magento_Wishlist_Block_Customer_Wishlist_Item_Column_Image" name="customer.wishlist.item.image" template="Magento_Wishlist::item/column/image.phtml"/>
                    <block type="Magento_Wishlist_Block_Customer_Wishlist_Item_Column" name="customer.wishlist.item.details" template="Enterprise_Wishlist::item/column/details.phtml">
                        <action method="setTitle" translate="title">
                            <title>Product Info</title>
                        </action>
                        <block type="Magento_Wishlist_Block_Customer_Wishlist_Item_Options" name="customer.wishlist.item.options"/>
                    </block>
                    <block type="Magento_Wishlist_Block_Customer_Wishlist_Item_Column" name="customer.wishlist.item.comment" template="Enterprise_Wishlist::item/column/comment.phtml">
                        <action method="setTitle" translate="title">
                            <title>Comment</title>
                        </action>
                    </block>
                    <block type="Magento_Wishlist_Block_Customer_Wishlist_Item_Column" name="customer.wishlist.item.qty" template="Enterprise_Wishlist::item/column/qty.phtml">
                        <action method="setTitle" translate="title">
                            <title>Wanted Qty</title>
                        </action>
                    </block>
                    <block type="Magento_Wishlist_Block_Customer_Wishlist_Item_Column" name="customer.wishlist.item.price" template="Enterprise_Wishlist::item/column/price.phtml">
                        <action method="setTitle" translate="title">
                            <title>Unit Price</title>
                        </action>
                    </block>
                    <block type="Magento_Wishlist_Block_Customer_Wishlist_Item_Column" name="customer.wishlist.item.to_cart_qty" template="Enterprise_Wishlist::item/column/qty_input.phtml">
                        <action method="setTitle" translate="title">
                            <title>Qty</title>
                        </action>
                    </block>
                    <block type="Enterprise_Wishlist_Block_Customer_Wishlist_Item_Column_Copy" name="customer.wishlist.item.to_wishlist" template="item/column/copy.phtml">
                        <action method="setTitle" translate="title">
                            <title>Add to Wish List</title>
                        </action>
                    </block>
                </block>
            </block>
        </reference>
    </wishlist_search_view>
</layout>
