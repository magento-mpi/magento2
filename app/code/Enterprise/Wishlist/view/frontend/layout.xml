<layout version="0.1.0">
    <default>
        <reference name="top.links">
            <action method="removeLinkBlock"><blockName>wishlist_link</blockName></action>
            <block type="Enterprise_Wishlist_Block_Links" name="wishlist_link"/>
            <action method="addLinkBlock"><blockName>wishlist_link</blockName></action>
        </reference>

        <block type="Enterprise_Wishlist_Block_Customer_Sidebar" name="wishlist_sidebar" template="Mage_Wishlist::sidebar.phtml"/>

        <reference name="before_body_end">
            <block type="Enterprise_Wishlist_Block_Behaviour" name="wishlist_behaviour" as="wishlist_behaviour" template="behaviour.phtml" />
        </reference>
    </default>

    <!--
    Customer account pages, rendered for all tabs in dashboard
    -->

    <customer_account>
        <!-- Mage_Wishlist -->
        <reference name="customer_account_navigation">
            <action method="addLink" translate="label" module="Enterprise_Wishlist" ifconfig="wishlist/general/multiple_enabled"><name>wishlist</name><path>wishlist/</path><label>My Wish Lists</label></action>
        </reference>
    </customer_account>

    <wishlist_index_index>
        <reference name="head">
            <action method="setTitle" translate="title" module="Enterprise_Wishlist" ifconfig="wishlist/general/multiple_enabled">
                <title>My Wish Lists</title>
            </action>
        </reference>
        <reference name="customer.wishlist">
            <action method="setTitle" translate="title" module="Enterprise_Wishlist" ifconfig="wishlist/general/multiple_enabled">
                <title>My Wish Lists</title>
            </action>
            <block type="Enterprise_Wishlist_Block_Customer_Wishlist_Management" name="customer.wishlist.management" as="top" template="view/management.phtml">
            </block>
            <reference name="customer.wishlist.items">
                <block type="Enterprise_Wishlist_Block_Customer_Wishlist_Item_Column_Selector" name="customer.wishlist.item.selector" before="-" template="item/column/selector.phtml" />
                <reference name="customer.wishlist.item.info">
                    <block type="Enterprise_Wishlist_Block_Customer_Wishlist_Item_Column_Management" name="customer.wishlist.item.mananagement" before="-" template="item/column/management.phtml"></block>
                </reference>
            </reference>
            <reference name="customer.wishlist.buttons">
                <block type="Enterprise_Wishlist_Block_Customer_Wishlist_Button_Delete" name="customer.wishlist.button.delete" template="button/delete.phtml"></block>
            </reference>
        </reference>
    </wishlist_index_index>

    <wishlist_index_share>
        <reference name="my.account.wrapper">
            <block type="Enterprise_Wishlist_Block_Customer_Sharing" name="wishlist.sharing" template="Mage_Wishlist::sharing.phtml"/>
        </reference>
    </wishlist_index_share>

    <wishlist_search_view translate="label" type="page" parent="default">
        <label>Wishlist View (From Search)</label>
        <reference name="head">
            <action method="setTitle" translate="title" module="Enterprise_Wishlist" ifconfig="wishlist/general/multiple_enabled">
                <title>Wish List Info</title>
            </action>
        </reference>
        <reference name="root">
            <action method="setTemplate"><template>1column.phtml</template></action>
        </reference>
        <reference name="content">
            <block type="Enterprise_Wishlist_Block_Info" name="customer.wishlist.info" template="info.phtml" >
                <block type="Mage_Wishlist_Block_Customer_Wishlist_Items" name="wishlist.view.items" as="items" template="Mage_Wishlist::item/list.phtml">
                    <block type="Enterprise_Wishlist_Block_Customer_Wishlist_Item_Column_Selector_Cart" name="customer.wishlist.item.selector" after="-" template="item/column/selector.phtml" >
                        <action method="setIsEnabled">
                            <isEnabled>true</isEnabled>
                        </action>
                    </block>
                    <block type="Mage_Wishlist_Block_Customer_Wishlist_Item_Column_Image" name="customer.wishlist.item.image" template="Mage_Wishlist::item/column/image.phtml"></block>
                    <block type="Mage_Wishlist_Block_Customer_Wishlist_Item_Column" name="customer.wishlist.item.details" template="Enterprise_Wishlist::item/column/details.phtml">
                        <action method="setTitle" translate="title" module="Enterprise_Wishlist">
                            <title>Product Info</title>
                        </action>
                        <block type="Mage_Wishlist_Block_Customer_Wishlist_Item_Options" name="customer.wishlist.item.options"/>
                    </block>
                    <block type="Mage_Wishlist_Block_Customer_Wishlist_Item_Column" name="customer.wishlist.item.comment" template="Enterprise_Wishlist::item/column/comment.phtml">
                        <action method="setTitle" translate="title" module="Enterprise_Wishlist">
                            <title>Comment</title>
                        </action>
                    </block>
                    <block type="Mage_Wishlist_Block_Customer_Wishlist_Item_Column" name="customer.wishlist.item.qty" template="Enterprise_Wishlist::item/column/qty.phtml">
                        <action method="setTitle" translate="title" module="Enterprise_Wishlist">
                            <title>Wanted Qty</title>
                        </action>
                    </block>
                    <block type="Mage_Wishlist_Block_Customer_Wishlist_Item_Column" name="customer.wishlist.item.price" template="Enterprise_Wishlist::item/column/price.phtml">
                        <action method="setTitle" translate="title" module="Enterprise_Wishlist">
                            <title>Unit Price</title>
                        </action>
                    </block>
                    <block type="Mage_Wishlist_Block_Customer_Wishlist_Item_Column" name="customer.wishlist.item.to_cart_qty" template="Enterprise_Wishlist::item/column/qty_input.phtml">
                        <action method="setTitle" translate="title" module="Enterprise_Wishlist">
                            <title>Qty</title>
                        </action>
                    </block>
                    <block type="Enterprise_Wishlist_Block_Customer_Wishlist_Item_Column_Copy" name="customer.wishlist.item.to_wishlist" template="item/column/copy.phtml">
                        <action method="setTitle" translate="title" module="Enterprise_Wishlist">
                            <title>Add to Wish List</title>
                        </action>
                    </block>
                </block>
            </block>
        </reference>
    </wishlist_search_view>

    <wishlist_search_index translate="label" type="page" parent="default">
        <label>Wishlist Search Form</label>
        <reference name="content">
            <block type="Enterprise_Wishlist_Block_Search_Form" name="wishlist.search.form" template="search/form.phtml">
            </block>
        </reference>
    </wishlist_search_index>

    <wishlist_search_results translate="label" type="page" parent="default">
        <label>Wishlist Search Results</label>
        <reference name="content">
            <block type="Enterprise_Wishlist_Block_Search_Form" name="wishlist.search.form" template="search/form.phtml"></block>
            <block type="Enterprise_Wishlist_Block_Search_Results" name="wishlist.search.results" template="search/results.phtml"></block>
        </reference>
    </wishlist_search_results>

    <rss_index_wishlist>
        <block type="Enterprise_Wishlist_Block_Rss" name="rss.wishlist" output="1">
            <action method="addPriceBlockType"><type>msrp_rss</type><block>Mage_Catalog_Block_Product_Price</block><template>Mage_Wishlist::render/item/price_msrp_rss.phtml</template></action>
        </block>
    </rss_index_wishlist>
</layout>
