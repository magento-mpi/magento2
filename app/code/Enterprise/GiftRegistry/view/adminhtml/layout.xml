<layout>
    <adminhtml_giftregistry_index>
        <update handle='adminhtml_giftregistry_grid_block' />
        <reference name="content">
            <block type="Enterprise_GiftRegistry_Block_Adminhtml_Giftregistry" name="adminhtml.giftregistry.grid.container"/>
        </reference>
    </adminhtml_giftregistry_index>

    <adminhtml_giftregistry_grid_block>
        <reference name='adminhtml.giftregistry.grid.container'>
            <block type='Mage_Backend_Block_Widget_Grid' name='adminhtml.giftregistry.grid' as='grid'>
                <arguments>
                    <id>giftregistryGrid</id>
                    <dataSource type='object'>Enterprise_GiftRegistry_Model_Resource_GiftRegistry_Collection</dataSource>
                    <default_sort>type_id</default_sort>
                    <default_dir>ASC</default_dir>
                </arguments>
                <block type='Mage_Backend_Block_Widget_Grid_ColumnSet' name='adminhtml.giftregistry.grid.columnSet' as='grid.columnSet'>
                    <arguments>
                        <rowUrl>
                            <path>*/*/edit</path>
                            <extraParamsTemplate>
                                <id>getId</id>
                            </extraParamsTemplate>
                        </rowUrl>
                    </arguments>
                    <block type='Mage_Backend_Block_Widget_Grid_Column' as='type_id'>
                        <arguments>
                            <header translate='true' module='Enterprise_GiftRegistry'>ID</header>
                            <align>right</align>
                            <width>50px</width>
                            <index>type_id</index>
                        </arguments>
                    </block>
                    <block type='Mage_Backend_Block_Widget_Grid_Column' as='code'>
                        <arguments>
                            <header translate='true' module='Enterprise_GiftRegistry'>Code</header>
                            <index>code</index>
                        </arguments>
                    </block>
                    <block type='Mage_Backend_Block_Widget_Grid_Column' as='label'>
                        <arguments>
                            <header translate='true' module='Enterprise_GiftRegistry'>Label</header>
                            <index>label</index>
                        </arguments>
                    </block>
                    <block type='Mage_Backend_Block_Widget_Grid_Column' as='sort_order'>
                        <arguments>
                            <header translate='true' module='Enterprise_GiftRegistry'>Sort Order</header>
                            <index>sort_order</index>
                            <default>-</default>
                        </arguments>
                    </block>
                    <block type='Mage_Backend_Block_Widget_Grid_Column' as='is_listed'>
                        <arguments>
                            <header translate='true' module='Enterprise_GiftRegistry'>Listed</header>
                            <index>is_listed</index>
                            <type>options</type>
                            <options type='options'>Enterprise_GiftRegistry_Model_GiftRegistry_Options_Listed</options>
                        </arguments>
                    </block>
                </block>
            </block>
        </reference>
    </adminhtml_giftregistry_grid_block>

    <adminhtml_giftregistry_edit>
        <reference name="left">
            <block type="Mage_Backend_Block_Store_Switcher" name="store_switcher" before="-"></block>
        </reference>
    </adminhtml_giftregistry_edit>

   <adminhtml_customer_edit>
        <reference name="customer_edit_tabs">
            <action method="addTab">
                <tab>giftregistry</tab>
                <content>Enterprise_GiftRegistry_Block_Adminhtml_Customer_Edit_Tab_Giftregistry</content>
            </action>
        </reference>
    </adminhtml_customer_edit>

   <adminhtml_giftregistry_customer_edit>
        <reference name="content">
            <block type="Enterprise_GiftRegistry_Block_Adminhtml_Customer_Edit" name="giftregistry_customer_edit"></block>
        </reference>
   </adminhtml_giftregistry_customer_edit>

   <adminhtml_giftregistry_customer_grid>
        <container name="root" label="Root" output="1">
            <block type="Enterprise_GiftRegistry_Block_Adminhtml_Customer_Grid" name="adminhtml.giftregistry.customer.grid"/>
        </container>
    </adminhtml_giftregistry_customer_grid>
</layout>
