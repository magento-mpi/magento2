<config>
    <global>
        <resources>
            <enterprise_reminder_setup>
                <setup>
                    <module>Enterprise_Reminder</module>
                    <class>Enterprise_Reminder_Model_Resource_Setup</class>
                </setup>
            </enterprise_reminder_setup>
        </resources>
        <template>
            <email>
                <enterprise_reminder_email_template translate="label" module="Enterprise_Reminder">
                    <label>Promotion Notification/Reminder</label>
                    <file>email/promotion.html</file>
                    <type>html</type>
                </enterprise_reminder_email_template>
            </email>
        </template>
        <events>
            <salesrule_rule_get_coupon_types>
                <observers>
                    <enterprise_reminder>
                        <class>Enterprise_Reminder_Model_Observer</class>
                        <method>getCouponTypes</method>
                    </enterprise_reminder>
                </observers>
            </salesrule_rule_get_coupon_types>
            <adminhtml_promo_quote_edit_tab_main_prepare_form>
                <observers>
                    <enterprise_reminder>
                        <class>Enterprise_Reminder_Model_Observer</class>
                        <method>updatePromoQuoteTabMainForm</method>
                    </enterprise_reminder>
                </observers>
            </adminhtml_promo_quote_edit_tab_main_prepare_form>
            <salesrule_rule_save_after>
                <observers>
                    <enterprise_reminder>
                        <class>Enterprise_Reminder_Model_Observer</class>
                        <method>detachUnsupportedSalesRule</method>
                    </enterprise_reminder>
                </observers>
            </salesrule_rule_save_after>
            <adminhtml_block_promo_widget_chooser_prepare_collection>
                <observers>
                    <enterprise_reminder>
                        <class>Enterprise_Reminder_Model_Observer</class>
                        <method>addSalesRuleFilter</method>
                    </enterprise_reminder>
                </observers>
            </adminhtml_block_promo_widget_chooser_prepare_collection>
            <adminhtml_promo_quote_edit_tab_main_prepare_form>
                <observers>
                    <enterprise_reminder>
                        <class>Enterprise_Reminder_Model_Observer</class>
                        <method>addUseAutoGenerationNotice</method>
                    </enterprise_reminder>
                </observers>
            </adminhtml_promo_quote_edit_tab_main_prepare_form>
        </events>
    </global>
    <admin>
        <routers>
            <adminhtml>
                <args>
                    <modules>
                        <enterprise_reminder before="Magento_Adminhtml">Enterprise_Reminder_Adminhtml</enterprise_reminder>
                    </modules>
                </args>
            </adminhtml>
        </routers>
    </admin>
    <adminhtml>
        <translate>
            <modules>
                <Enterprise_Reminder>
                    <files>
                        <default>Enterprise_Reminder.csv</default>
                    </files>
                </Enterprise_Reminder>
            </modules>
        </translate>
    </adminhtml>
    <default>
        <promo>
            <enterprise_reminder>
                <enabled>1</enabled>
                <frequency>I</frequency>
                <interval>15</interval>
                <minutes>0</minutes>
                <limit>100</limit>
                <threshold>1</threshold>
                <identity>general</identity>
            </enterprise_reminder>
        </promo>
    </default>
    <crontab>
        <jobs>
            <send_notification>
                <schedule>
                    <cron_expr>*/15 * * * *</cron_expr>
                </schedule>
                <run>
                    <model>Enterprise_Reminder_Model_Observer::scheduledNotification</model>
                </run>
            </send_notification>
        </jobs>
    </crontab>
</config>
