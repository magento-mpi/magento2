<config>
    <global>
        <resources>
            <enterprise_reminder_setup>
                <setup>
                    <module>Enterprise_Reminder</module>
                    <class>Enterprise_Reminder_Model_Resource_Setup</class>
                </setup>
            </enterprise_reminder_setup>
        </resources>
        <template>
            <email>
                <enterprise_reminder_email_template translate="label" module="Enterprise_Reminder">
                    <label>Promotion Notification/Reminder</label>
                    <file>email/promotion.html</file>
                    <type>html</type>
                </enterprise_reminder_email_template>
            </email>
        </template>
    </global>
    <adminhtml>
        <translate>
            <modules>
                <Enterprise_Reminder>
                    <files>
                        <default>Enterprise_Reminder.csv</default>
                    </files>
                </Enterprise_Reminder>
            </modules>
        </translate>
    </adminhtml>
    <default>
        <promo>
            <enterprise_reminder>
                <enabled>1</enabled>
                <frequency>I</frequency>
                <interval>15</interval>
                <minutes>0</minutes>
                <limit>100</limit>
                <threshold>1</threshold>
                <identity>general</identity>
            </enterprise_reminder>
        </promo>
    </default>
    <crontab>
        <jobs>
            <send_notification>
                <schedule>
                    <cron_expr>*/15 * * * *</cron_expr>
                </schedule>
                <run>
                    <model>Enterprise_Reminder_Model_Observer::scheduledNotification</model>
                </run>
            </send_notification>
        </jobs>
    </crontab>
</config>