<config>
    <modules>
        <Saas_Search>
             <version>0.0.0.1</version>
             <active>false</active>
        </Saas_Search>
        <depends>
            <Enterprise_Search/>
        </depends>
    </modules>
    <global>
        <events>
            <pagecache_processor_metadata_before_save>
                <observers>
                    <saas_search>
                        <class>Saas_Search_Model_Observer</class>
                        <method>processorAddMetadataBeforeSave</method>
                    </saas_search>
                </observers>
            </pagecache_processor_metadata_before_save>
            <!-- Event was copied from Enterprise Search module (To handle in global scope by workers)  -->
            <catelogsearch_searchable_attributes_load_after>
                <observers>
                    <enterprise_search>
                        <class>Enterprise_Search_Model_Observer</class>
                        <method>storeSearchableAttributes</method>
                    </enterprise_search>
                </observers>
            </catelogsearch_searchable_attributes_load_after>
        </events>
        <index>
            <indexer>
                <catalogsearch_fulltext_default>
                    <model>Saas_Search_Model_Indexer_Fulltext_Default</model>
                </catalogsearch_fulltext_default>
            </indexer>
        </index>
    </global>
    <default>
        <catalog>
            <search>
                <engine>Enterprise_Search_Model_Resource_Engine</engine>
                <engine_commit_mode>2</engine_commit_mode>
            </search>
        </catalog>
    </default>
    <frontend>
        <translate>
            <modules>
                <Saas_Search>
                    <files>
                        <default>Saas_Search.csv</default>
                    </files>
                </Saas_Search>
            </modules>
        </translate>
    </frontend>
    <adminhtml>
        <translate>
            <modules>
                <Saas_Search>
                    <files>
                        <default>Saas_Search.csv</default>
                    </files>
                </Saas_Search>
            </modules>
        </translate>
    </adminhtml>
</config>
