<config>
    <system>
        <section id="sales_pdf" translate="label" module="Saas_PrintedTemplate" type="text" sortOrder="550" showInDefault="1" showInWebsite="1" showInStore="1">
            <label>PDF Print-outs</label>
            <tab>sales</tab>
            <resource>Saas_PrintedTemplate::printed_template</resource>
            <group id="general" translate="label" type="text" sortOrder="1" showInDefault="1" showInWebsite="0" showInStore="0">
                <label>General</label>
                <field id="enable_printed_templates" translate="label comment" type="select" sortOrder="1" showInDefault="1" showInWebsite="0" showInStore="0">
                    <label>Enable Printed Templates</label>
                    <frontend_model>Saas_PrintedTemplate_Block_Adminhtml_System_Config_Form_Field_Enable</frontend_model>
                    <source_model>Magento_Backend_Model_Config_Source_Yesno</source_model>
                </field>
            </group>
            <group id="invoice" translate="label" type="text" sortOrder="2" showInDefault="1" showInWebsite="1" showInStore="1">
                <label>Invoice</label>
                <field id="put_order_id" translate="label comment" sortOrder="1" showInDefault="1" showInWebsite="0" showInStore="0">
                    <frontend_model>Saas_PrintedTemplate_Block_Adminhtml_System_Config_Form_Field_Disablable</frontend_model>
                    <comment>Active only when Printed Template module is disabled</comment>
                </field>
                <field id="printed_template" translate="label comment" type="select" sortOrder="2" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Printed Template</label>
                    <source_model>Saas_PrintedTemplate_Model_Source_Template_Invoice</source_model>
                </field>
            </group>
            <group id="shipment" translate="label" type="text" sortOrder="3" showInDefault="1" showInWebsite="1" showInStore="1">
                <label>Shipment</label>
                <field id="put_order_id" translate="label comment" sortOrder="1" showInDefault="1" showInWebsite="0" showInStore="0">
                    <frontend_model>Saas_PrintedTemplate_Block_Adminhtml_System_Config_Form_Field_Disablable</frontend_model>
                    <comment>Active only when Printed Template module is disabled</comment>
                </field>
                <field id="printed_template" translate="label comment" type="select" sortOrder="2" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Printed Template</label>
                    <source_model>Saas_PrintedTemplate_Model_Source_Template_Shipment</source_model>
                </field>
            </group>
            <group id="creditmemo" translate="label" type="text" sortOrder="4" showInDefault="1" showInWebsite="1" showInStore="1">
                <label>Credit Memo</label>
                <field id="put_order_id" translate="label comment" sortOrder="1" showInDefault="1" showInWebsite="0" showInStore="0">
                    <frontend_model>Saas_PrintedTemplate_Block_Adminhtml_System_Config_Form_Field_Disablable</frontend_model>
                    <comment>Active only when Printed Template module is disabled</comment>
                </field>
                <field id="printed_template" translate="label comment" type="select" sortOrder="2" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Printed Template</label>
                    <source_model>Saas_PrintedTemplate_Model_Source_Template_Creditmemo</source_model>
                </field>
            </group>
        </section>
    </system>
</config>
