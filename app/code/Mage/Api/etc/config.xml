<config>
    <global>
        <ignoredModules>
            <entities>
                <api />
            </entities>
        </ignoredModules>
        <resources>
            <api_setup>
                <setup>
                    <module>Mage_Api</module>
                </setup>
            </api_setup>
        </resources>
        <request>
            <direct_front_name>
                <api />
            </direct_front_name>
        </request>
    </global>
    <frontend>
        <translate>
            <modules>
                <Mage_Api>
                    <files>
                        <default>Mage_Api.csv</default>
                    </files>
                </Mage_Api>
            </modules>
        </translate>
    </frontend>
    <adminhtml>
        <translate>
            <modules>
                <Mage_Api>
                    <files>
                        <default>Mage_Api.csv</default>
                    </files>
                </Mage_Api>
            </modules>
        </translate>
    </adminhtml>
    <default>
        <api>
            <config>
                <charset>UTF-8</charset>
                <session_timeout>3600</session_timeout>
                <wsdl_cache_enabled>0</wsdl_cache_enabled>
            </config>
        </api>
    </default>
</config>