<script type="text/javascript">
jQuery(function ($) {
    var matrix = $('[data-role=product-variations-matrix]');

    matrix.find('[data-action=upload-image] [name=image]').each(function() {
        $(this).fileupload({
            dataType: 'json',
            dropZone: $(this),
            acceptFileTypes: /(\.|\/)(gif|jpe?g|png)$/i,
            done: function (event, data) {
                if (!data.result) {
                    return;
                }
                if (!data.result.error) {
                    var parentElement = $(event.target).closest('[data-column=image]'),
                        uploaderControl = $('.actions-image-uploader .action-upload', parentElement),
                        imageElement = parentElement.find('img');

                    if (imageElement.length) {
                        imageElement.attr('src', data.result.url);
                    } else {
                        $.tmpl('<img src="${url}" class="variation-image"/>', data.result).prependTo(uploaderControl);
                    }
                    parentElement.find('input[id$="image"]').val(data.result.file);
                } else {
                    alert($.mage.__('File extension not known or unsupported type.'));
                }
            },
            start: function(event) {
                var uploaderContainer = $(event.target).closest('[data-action=upload-image]');
                uploaderContainer.addClass('loading');
            },
            stop: function(event) {
                var uploaderContainer = $(event.target).closest('[data-action=upload-image]');
                uploaderContainer.removeClass('loading');
            }
        });
    });
    matrix.find('[data-action=no-image]').click(function (event) {
        var parentElement = $(event.target).closest('[data-column=image]');
        parentElement.find('img').remove();
        parentElement.find('[data-toggle=dropdown]').trigger('close.dropdown');
    });
    matrix.find('[data-toggle=dropdown]').dropdown();
});
</script>
