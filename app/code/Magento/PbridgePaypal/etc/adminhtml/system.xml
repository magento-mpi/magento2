<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="../../../Backend/etc/system_file.xsd">
    <system>
        <section id="payment">
            <group id="paypal_payments">
                <group id="wpp">
                    <group id="wpp_required_settings">
                        <group id="wpp_and_express_checkout">
                            <field id="using_pbridge" translate="label comment" type="select" sortOrder="5" showInDefault="1" showInWebsite="1" showInStore="0">
                                <label>Use via Payment Bridge</label>
                                <comment>This feature is functional only when a payment bridge is active.</comment>
                                <config_path>payment/paypal_direct/using_pbridge</config_path>
