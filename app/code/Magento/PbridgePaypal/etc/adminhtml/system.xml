                                    <field id="*/*/*/wpp_required_settings/wpp_and_express_checkout/using_pbridge">0</field>
                                </depends>
                            </field>
                            <field id="centinel_api_url">
                                <depends>
                                    <field id="*/*/*/wpp_required_settings/wpp_and_express_checkout/using_pbridge">0</field>
