                                <attribute type="shared">1</attribute>
                            </field>
                        </group>
                    </group>
                    <group id="wpp_settings">
                        <field id="heading_cc">
                            <depends>
                                <field id="*/*/*/wpp_required_settings/wpp_and_express_checkout/using_pbridge">0</field>
                            </depends>
                        </field>
                        <field id="cctypes">
                            <depends>
                                <field id="*/*/*/wpp_required_settings/wpp_and_express_checkout/using_pbridge">0</field>
                            </depends>
