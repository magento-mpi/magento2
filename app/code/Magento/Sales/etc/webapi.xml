        </resources>
    </route>
    <route url="/V1/invoices/:id/emails" method="POST">
        <service class="Magento\Sales\Service\V1\OrderInvoiceEmailInterface" method="invoke"/>
        <resources>
            <resource ref="Magento_Sales::sales" />
        </resources>
    </route>
