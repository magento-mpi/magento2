<config>
    <event name="catalog_category_save_after">
        <observer name="magento_catalogpermissions" instance="Magento\CatalogPermissions\Model\Adminhtml\Observer" method="saveCategoryPermissions" />
    </event>
    <event name="category_move">
        <observer name="magento_catalogpermissions" instance="Magento\CatalogPermissions\Model\Adminhtml\Observer" method="reindexCategoryPermissionOnMove" />
    </event>
    <event name="store_add">
        <observer name="magento_catalogpermissions" instance="Magento\CatalogPermissions\Model\Adminhtml\Observer" method="reindexProducts" />
    </event>
    <event name="website_add">
        <observer name="magento_catalogpermissions" instance="Magento\CatalogPermissions\Model\Adminhtml\Observer" method="reindexProducts" />
    </event>
    <event name="controller_action_postdispatch">
        <observer name="magento_catalogpermissions" instance="Magento\CatalogPermissions\Model\Adminhtml\Observer" method="reindexPermissions" />
    </event>
    <event name="catalog_product_save_after">
        <observer name="magento_catalogpermissions" instance="Magento\CatalogPermissions\Model\Adminhtml\Observer" method="saveProductPermissionIndex" />
    </event>
    <event name="adminhtml_catalog_category_tabs">
        <observer name="magento_catalogpermissions" instance="Magento\CatalogPermissions\Model\Adminhtml\Observer" method="addCategoryPermissionTab" />
    </event>
    <event name="catalog_product_import_after">
        <observer name="magento_catalogpermissions" instance="Magento\CatalogPermissions\Model\Adminhtml\Observer" method="reindexProducts" />
    </event>
    <event name="catalog_product_to_website_change">
        <observer name="magento_catalogpermissions" instance="Magento\CatalogPermissions\Model\Adminhtml\Observer" method="reindexAfterProductAssignedWebsite" />
    </event>
    <event name="admin_system_config_changed_section_magento_catalogpermissions">
        <observer name="magento_catalogpermissions" instance="Magento\CatalogPermissions\Model\Adminhtml\Observer" method="cleanCacheOnConfigChange" />
    </event>
</config>
