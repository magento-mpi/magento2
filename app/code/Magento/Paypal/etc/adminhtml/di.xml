            <argument name="storage" xsi:type="object">Magento\Paypal\Model\PayflowSession\Storage</argument>
            <argument name="sessionName" xsi:type="string">adminhtml</argument>
        </arguments>
    </virtualType>
    <type name="Magento\Framework\Session\Generic">
        <arguments>
            <argument name="sessionName" xsi:type="string">adminhtml</argument>
        </arguments>
    </type>
