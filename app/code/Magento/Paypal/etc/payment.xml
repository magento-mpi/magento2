<payment xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:noNamespaceSchemaLocation="../../../Magento/Payment/etc/payment.xsd">
    <credit_cards>
        <type id="SM" order="60">
            <label>Switch/Maestro</label>
        </type>
        <type id="SO" order="61">
            <label>Solo</label>
        </type>
    </credit_cards>
    <groups>
        <group id="paypal">
            <label>PayPal</label>
        </group>
    </groups>
    <methods>
        <method name="paypal_express">
            <support_recurring_payment>1</support_recurring_payment>
        </method>
        <method name="paypal_direct">
            <allow_multiple_address>1</allow_multiple_address>
            <allow_multiple_with_3dsecure>1</allow_multiple_with_3dsecure>
        </method>
        <method name="paypal_billing_agreement">
            <allow_multiple_address>1</allow_multiple_address>
        </method>
        <method name="payflow_express">
            <support_recurring_payment>1</support_recurring_payment>        
        </method>
        <method name="payflowpro">
            <allow_multiple_address>1</allow_multiple_address>
            <allow_multiple_with_3dsecure>1</allow_multiple_with_3dsecure>
        </method>
    </methods>
</payment>

