<layout xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
    <block class="Magento\AdvancedCheckout\Block\Sku\Products\Info" name="additional.product.info" template="cart/sku/failed/info.phtml"/>
    <referenceBlock name="checkout.cart.form">
        <block class="Magento\AdvancedCheckout\Block\Sku\Products" name="sku.failed.products" template="cart/sku/failed.phtml" as="shopping.cart.table.after" cacheable="false">
            <block class="Magento\View\Element\RendererList" as="renderer.list">
                <block class="Magento\Checkout\Block\Cart\Item\Renderer" as="default" template="Magento_AdvancedCheckout::cart/item/failed.phtml" cacheable="false"/>
                <block class="Magento\Checkout\Block\Cart\Item\Renderer\Configurable" as="configurable" template="cart/item/default.phtml" cacheable="false"/>
                <block class="Magento\Bundle\Block\Checkout\Cart\Item\Renderer" as="bundle" template="Magento_Checkout::cart/item/default.phtml" cacheable="false"/>
                <block class="Magento\GiftCard\Block\Checkout\Cart\Item\Renderer" as="giftcard" template="Magento_Checkout::cart/item/default.phtml" cacheable="false"/>
                <block class="Magento\Downloadable\Block\Checkout\Cart\Item\Renderer" as="downloadable" template="Magento_Checkout::cart/item/default.phtml" cacheable="false"/>
                <block class="Magento\Checkout\Block\Cart\Item\Renderer" as="virtual" template="cart/item/default.phtml" cacheable="false"/>
                <block class="Magento\Checkout\Block\Cart\Item\Renderer" as="undefined" template="Magento_AdvancedCheckout::cart/item/failed.phtml" cacheable="false"/>
            </block>
        </block>
    </referenceBlock>
    <referenceContainer name="checkout.cart.empty.widget">
        <block class="Magento\AdvancedCheckout\Block\Sku\Products" after="-" template="cart/sku/failed.phtml" as="shopping.cart.table.after" cacheable="false">
            <block class="Magento\View\Element\RendererList" name="checkout.cart.item.renderers.two" as="renderer.list">
                <block class="Magento\Checkout\Block\Cart\Item\Renderer" as="default" template="Magento_AdvancedCheckout::cart/item/failed.phtml" cacheable="false"/>
                <block class="Magento\Checkout\Block\Cart\Item\Renderer\Configurable" as="configurable" template="cart/item/default.phtml" cacheable="false"/>
                <block class="Magento\Bundle\Block\Checkout\Cart\Item\Renderer" as="bundle" template="Magento_Checkout::cart/item/default.phtml" cacheable="false"/>
                <block class="Magento\GiftCard\Block\Checkout\Cart\Item\Renderer" as="giftcard" template="Magento_Checkout::cart/item/default.phtml" cacheable="false"/>
                <block class="Magento\Downloadable\Block\Checkout\Cart\Item\Renderer" as="downloadable" template="Magento_Checkout::cart/item/default.phtml" cacheable="false"/>
                <block class="Magento\Checkout\Block\Cart\Item\Renderer" as="virtual" template="cart/item/default.phtml" cacheable="false"/>
                <block class="Magento\Checkout\Block\Cart\Item\Renderer" as="undefined" template="Magento_AdvancedCheckout::cart/item/failed.phtml" cacheable="false"/>
            </block>
        </block>
    </referenceContainer>
</layout>
