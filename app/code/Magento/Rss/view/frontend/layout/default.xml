<layout xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
    <reference name="footer_links">
        <block class="Magento\Page\Block\Link\Current" name="rss-link" ifconfig="rss/config/active">
            <arguments>
                <argument name="label" xsi:type="string">RSS</argument>
                <argument name="path" xsi:type="string">rss</argument>
            </arguments>
        </block>
    </reference>
    <block class="Magento\Rss\Block\ListBlock" name="head_rss" ifconfig="rss/config/active"/>
</layout>
