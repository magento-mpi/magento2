<routes xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="../../../../../app/code/Magento/Webapi/etc/webapi.xsd">
    <route url="/V1/login" method="POST">
        <service class="Magento\Webapi\Service\V1\LoginServiceInterface" method="login"/>
        <resources>
            <resource ref="Magento_Customer::anonymous"/>
        </resources>
    </route>
    <route url="/V1/loginAnonymous" method="POST">
        <service class="Magento\Webapi\Service\V1\LoginServiceInterface" method="loginAnonymous"/>
        <resources>
            <resource ref="Magento_Customer::anonymous"/>
        </resources>
    </route>
</routes>
