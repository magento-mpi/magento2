<layout xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
    <update handle="adminhtml_webapi_role_edit_tab_users_grid_block"/>
    <reference name="content">
        <block class="Magento\Webapi\Block\Adminhtml\Role\Edit" name="webapi.role.edit"/>
    </reference>
    <reference name="left">
        <block class="Magento\Webapi\Block\Adminhtml\Role\Edit\Tabs" name="webapi.role.edit.tabs">
            <block class="Magento\Webapi\Block\Adminhtml\Role\Edit\Tab\Main" name="webapi.role.edit.tab.main"/>
            <block class="Magento\Webapi\Block\Adminhtml\Role\Edit\Tab\Resource" name="webapi.role.edit.tab.resource" template="Magento_Webapi::rolesedit.phtml"/>
            <block class="Magento\Backend\Block\Widget\Grid\Container" name="webapi.role.edit.tab.users.grid.container"/>
        </block>
    </reference>
    <reference name="head">
        <action method="setCanLoadExtJs">
            <argument name="flag" xsi:type="string">1</argument>
        </action>
    </reference>
    <reference name="js">
        <block class="Magento\Core\Block\Template" template="Magento_Webapi::rolesusersgridjs.phtml"/>
    </reference>
</layout>
