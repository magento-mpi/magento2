<layout version="0.1.0">
    <adminhtml_webapi_role_grid_block>
        <reference name="webapi_role.grid.container">
            <block type="Magento_Backend_Block_Widget_Grid" as="grid" name="webapi.role.grid">
                <arguments>
                    <id>webapiRoleGrid</id>
                    <dataSource type="object">Magento_Webapi_Model_Resource_Acl_Role_Collection</dataSource>
                    <use_ajax>true</use_ajax>
                    <default_sort>role_id</default_sort>
                    <default_dir>asc</default_dir>
                    <grid_url type="url">
                        <path>*/*/rolegrid</path>
                        <params>
                            <_current>1</_current>
                        </params>
                    </grid_url>
                </arguments>
                <block type="Magento_Backend_Block_Widget_Grid_ColumnSet" as="grid.columnSet" name="webapi.role.grid.columnSet">
                    <arguments>
                        <rowUrl>
                            <path>*/*/edit</path>
                            <extraParamsTemplate>
                                <role_id>getId</role_id>
                            </extraParamsTemplate>
                        </rowUrl>
                        <empty_text translate="true">No Roles Found</empty_text>
                    </arguments>
                    <block type="Magento_Backend_Block_Widget_Grid_Column" as="role_id">
                        <arguments>
                            <header translate="true">ID</header>
                            <width>80px</width>
                            <type>text</type>
                            <index>role_id</index>
                        </arguments>
                    </block>
                    <block type="Magento_Backend_Block_Widget_Grid_Column" as="role_name">
                        <arguments>
                            <header translate="true">Role Name</header>
                            <index>role_name</index>
                        </arguments>
                    </block>
                </block>
            </block>
        </reference>
    </adminhtml_webapi_role_grid_block>
</layout>
