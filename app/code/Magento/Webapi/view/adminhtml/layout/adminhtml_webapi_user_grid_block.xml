<layout version="0.1.0">
    <adminhtml_webapi_user_grid_block>
        <reference name="webapi_user.grid.container">
            <block type="Magento_Backend_Block_Widget_Grid" as="grid" name="webapi.user.grid">
                <arguments>
                    <id>permissionsUserGrid</id>
                    <dataSource type="object">Magento_Webapi_Model_Resource_Acl_User_Collection</dataSource>
                    <use_ajax>true</use_ajax>
                    <default_sort>user_name</default_sort>
                    <default_dir>asc</default_dir>
                    <grid_url type="url">
                        <path>*/*/grid</path>
                        <params>
                            <_current>1</_current>
                        </params>
                    </grid_url>
                </arguments>
                <block type="Magento_Backend_Block_Widget_Grid_ColumnSet" as="grid.columnSet" name="webapi.user.grid.columnSet">
                    <arguments>
                        <rowUrl>
                            <path>*/*/edit</path>
                            <extraParamsTemplate>
                                <user_id>getId</user_id>
                            </extraParamsTemplate>
                        </rowUrl>
                        <empty_text translate="true">No Users Found</empty_text>
                    </arguments>
                    <block type="Magento_Backend_Block_Widget_Grid_Column" as="user_id">
                        <arguments>
                            <header translate="true">ID</header>
                            <width>80px</width>
                            <type>text</type>
                            <index>user_id</index>
                        </arguments>
                    </block>
                    <block type="Magento_Backend_Block_Widget_Grid_Column" as="contact_email">
                        <arguments>
                            <header translate="true">Contact Email</header>
                            <index>contact_email</index>
                        </arguments>
                    </block>
                    <block type="Magento_Backend_Block_Widget_Grid_Column" as="api_key">
                        <arguments>
                            <header translate="true">API Key</header>
                            <index>api_key</index>
                        </arguments>
                    </block>
                    <block type="Magento_Backend_Block_Widget_Grid_Column" as="role_name">
                        <arguments>
                            <header translate="true">Role Name</header>
                            <index>role_id</index>
                            <width>200px</width>
                            <type>options</type>
                            <options type="options">Magento_Webapi_Model_Source_Acl_Role</options>
                        </arguments>
                    </block>
                </block>
            </block>
        </reference>
    </adminhtml_webapi_user_grid_block>
</layout>
