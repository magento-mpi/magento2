    <?php if ($formData = $this->getFormData()): ?>
    <div>
        <?php foreach ($formData as $name => $value) { ?>
            <input type="hidden" name="<?php echo $this->escapeHtml($name); ?>" value="<?php echo $this->escapeHtml($value); ?>" />
        <?php }?>
    </div>
    <?php endif; ?>
