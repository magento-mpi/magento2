                <?php echo $message->getText();?>
            </li>
        <?php endforeach;?>
    </ul>
</div>
<script type="text/javascript">
    jQuery(function() {
        jQuery( "#system_messages_list" ).dialog({
            autoOpen: true,
            resizable: false,
            width: 650
        });
    });
</script>
