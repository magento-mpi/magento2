<layout version="0.1.0">
    <default>
        <reference name="root">
            <container name="notifications" as="notifications" label="Notifications" after="header">
                <block type="Magento_AdminNotification_Block_System_Messages" name="system_messages" as="system_messages" label="System Messages" before="-" template="Magento_AdminNotification::system/messages.phtml"/>
                <block type="Magento_AdminNotification_Block_System_Messages_UnreadMessagePopup" name="unread_system_messages" as="unread_system_messages" label="Unread System Messages" after="system_messages" template="Magento_AdminNotification::system/messages/popup.phtml"/>
                <block type="Magento_AdminNotification_Block_Window" name="notification_window" as="notification_window" acl="Magento_AdminNotification::show_toolbar" template="notification/window.phtml"/>
            </container>
            <reference name="head">
                <action method="addJs">
                    <file>Magento_AdminNotification::system/notification.js</file>
                </action>
            </reference>
        </reference>
        <reference name="header">
            <block type="Magento_AdminNotification_Block_ToolbarEntry" template="toolbar_entry.phtml" before="-" />
        </reference>
        <reference name="head">
            <action method="addCss">
                <file>Magento_Core::prototype/magento.css</file>
            </action>
            <action method="addJs">
                <file>Magento_AdminNotification::toolbar_entry.js</file>
            </action>
        </reference>
    </default>
</layout>
