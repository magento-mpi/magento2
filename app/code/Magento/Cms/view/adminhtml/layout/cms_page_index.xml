<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="../../../../Core/etc/page.xsd">
    <referenceBlock name="head">
        <block class="Magento\Theme\Block\Html\Head\Css" name="autocomplete-css-styles-css">
            <arguments>
                <argument name="file" xsi:type="string">jquery/autocomplete/autocomplete.css</argument>
            </arguments>
        </block>
    </referenceBlock>
    <referenceContainer name="content">
        <block class="Magento\Ui\Listing\View" name="cms_page" template="Magento_Ui::listing/grid/horizontal.phtml">
            <arguments>
                <argument name="id" xsi:type="string">notificationGrid</argument>
                <argument name="dataSource" xsi:type="object">Magento\Cms\Model\Resource\Page\Collection</argument>
                <argument name="default_dir" xsi:type="string">desc</argument>
                <argument name="default_sort" xsi:type="string">page_id</argument>
                <argument name="save_parameters_in_session" xsi:type="string">1</argument>
                <argument name="config" xsi:type="array">
                    <item name="namespace" xsi:type="string">cms.pages</item>
                </argument>
                <argument name="columns" xsi:type="array">
                    <item name="page_id" xsi:type="array">
                        <item name="title" xsi:type="string" translate="true">ID</item>
                        <item name="align" xsi:type="string">left</item>
                        <item name="index" xsi:type="string">page_id</item>
                        <item name="sortable" xsi:type="string">true</item>
                        <item name="data_type" xsi:type="string">text</item>
                        <item name="filter_type" xsi:type="string">input</item>
                    </item>
                    <item name="title" xsi:type="array">
                        <item name="title" xsi:type="string" translate="true">Title</item>
                        <item name="align" xsi:type="string">left</item>
                        <item name="index" xsi:type="string">title</item>
                        <item name="sortable" xsi:type="string">true</item>
                        <item name="data_type" xsi:type="string">text</item>
                        <item name="filter_type" xsi:type="string">input</item>
                    </item>
                    <item name="identifier" xsi:type="array">
                        <item name="title" xsi:type="string" translate="true">URL Key</item>
                        <item name="align" xsi:type="string">left</item>
                        <item name="index" xsi:type="string">identifier</item>
                        <item name="sortable" xsi:type="string">true</item>
                        <item name="data_type" xsi:type="string">text</item>
                        <item name="filter_type" xsi:type="string">input</item>
                    </item>
                    <item name="page_layout" xsi:type="array">
                        <item name="title" xsi:type="string" translate="true">Layout</item>
                        <item name="align" xsi:type="string">left</item>
                        <item name="index" xsi:type="string">page_layout</item>
                        <item name="data_type" xsi:type="string">text</item>
                        <item name="filter_type" xsi:type="string">select</item>
                    </item>
                    <item name="is_active" xsi:type="array">
                        <item name="title" xsi:type="string" translate="true">Status</item>
                        <item name="align" xsi:type="string">left</item>
                        <item name="index" xsi:type="string">is_active</item>
                        <item name="data_type" xsi:type="string">text</item>
                        <item name="filter_type" xsi:type="string">select</item>
                    </item>
                    <item name="creation_time" xsi:type="array">
                        <item name="title" xsi:type="string" translate="true">Created</item>
                        <item name="align" xsi:type="string">left</item>
                        <item name="index" xsi:type="string">creation_time</item>
                        <item name="sortable" xsi:type="string">true</item>
                        <item name="data_type" xsi:type="string">text</item>
                        <item name="filter_type" xsi:type="string">date</item>
                    </item>
                    <item name="update_time" xsi:type="array">
                        <item name="title" xsi:type="string" translate="true">Modified</item>
                        <item name="align" xsi:type="string">left</item>
                        <item name="index" xsi:type="string">update_time</item>
                        <item name="sortable" xsi:type="string">true</item>
                        <item name="data_type" xsi:type="string">text</item>
                        <item name="filter_type" xsi:type="string">date</item>
                    </item>
                    <item name="actions" xsi:type="array">
                        <item name="title" xsi:type="string" translate="true">Action</item>
                        <item name="align" xsi:type="string">left</item>
                        <item name="index" xsi:type="string">actions</item>
                        <item name="data_type" xsi:type="string">actions</item>
                        <item name="filterable" xsi:type="boolean">false</item>
                    </item>
                </argument>
                <argument name="provider_action_poll" xsi:type="array">
                    <item name="actions" xsi:type="array">
                        <item name="class" xsi:type="string">Magento\Cms\Ui\Provider\Action\Row</item>
                    </item>
                </argument>
            </arguments>
            <container name="cms_page_listing_before" label="" htmlTag="div">
                <block class="Magento\Ui\Listing\Component\Paging\View" template="Magento_Ui::listing/component/paging/default.phtml"/>
            </container>
            <!--<container name="cms_page_listing_after" label="" htmlTag="div">-->
            <!--<block class="Magento\Ui\Listing\Component\Paging\View" template="Magento_Ui::listing/component/paging/default.phtml" />-->
            <!--</container>-->
        </block>
    </referenceContainer>
</page>
