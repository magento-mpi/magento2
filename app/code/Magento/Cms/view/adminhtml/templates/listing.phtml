<div data-m2-init='{"Magento_Cms/js/fixtures/component": ""}' class="grid-actions">
  <div class="filter-actions">
    <button class="action-reset">Demo actions</button>
    <button data-bind="click: empty">Clean</button>
    <button class="primary" data-bind="click: reloadListing">Reload listing</button>
  </div>
</div>
<div data-m2-init='{"Magento_Cms/js/filter/component": ""}' class="grid-actions">
  <input type="text" data-bind="autocomplete: { data: suggestions, writeTo: query }, value: rawQuery, valueUpdate: 'afterkeydown'">
  <div data-bind="text: query().value"></div>
</div>
<div data-m2-init='{"Magento_Cms/js/massaction/component": ""}' class="massaction">
  <div class="entry-edit">
    <div>
      <span class="field-row">
        <label class="label">Select Product Actions</label>
        <select class="select absolute-advice local-validation" data-bind="options: actions, optionsText: 'title', value: currentAction"></select>
      </span>
      <span class="field-row">
        <button title="Submit" type="button" class="action- scalable" data-bind="click: applyAction">
          <span>Submit</span>
        </button>
      </span>
    </div>
  </div>
  <div class="entry-select">
    <select class="select" data-bind="options: massActions, optionsText: 'title', value: currentMassAction, optionsCaption: 'Mass Actions'"></select>
    <span class="items"><strong data-bind="text: getCheckedQuantity()"></strong> items selected</span>
  </div>
  <script type="mage/initial">
    {
      "massactions": [
        {
          "type": "selectAll",
          "title": "Select All"
        },
        {
          "type": "unselectAll",
          "title": "Unselect All"
        },
        {
          "type": "selectVisible",
          "title": "Select Visible"
        },
        {
          "type": "unselectVisible",
          "title": "Unselect Visible"
        }
      ],
      "actions": [
        {
          "type": "remove",
          "title": "Delete"
        },
        {
          "type": "updateAttributes",
          "title": "Update Attributes"
        }
      ]
    }
  </script>
</div>
