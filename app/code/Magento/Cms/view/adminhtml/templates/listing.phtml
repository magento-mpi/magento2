<div data-m2-init='{"Magento_Cms/js/fixtures/component": ""}' class="grid-actions">
  <div class="filter-actions">
    <button data-bind="click: setViewTo('tiles')">Tile view</button>
    <button data-bind="click: setViewTo('grid')">Grid view</button>
    <button data-bind="click: setViewTo('listing')">Listing view</button>
  </div>
</div>

<div class="grid-actions">
  <span data-m2-init='{"Magento_Cms/js/massaction/component": ""}' data-part="actions">
    <div title="Select Items" class="actions-split">
      <button title="Actions" class="action-default scalable  add">
        <span>Actions</span>
      </button>
      <button title="" class="action-toggle scalable  add" data-toggle="dropdown">
        <span>|</span>
      </button>

      <ul class="dropdown-menu" data-bind="foreach: { data: actions, as: 'action' }, on: { 'click li': 'applyAction', data: 'action' }">
        <li data-bind="attr: { 'data-action': action.type }"><span title="Delete" class="item item-default" data-bind="text: action.title"></span></li>
      </ul>
    </div>
    <span class="entry-select">
      <span class="items"><strong data-bind="text: getCheckedQuantity()"></strong> items selected</span>
    </span>
    <script type="mage/initial">
      {
        "actions": [
          {
            "type": "remove",
            "title": "Delete"
          },
          {
            "type": "updateAttributes",
            "title": "Update Attributes"
          }
        ]
      }
    </script>
  </span>
  <span data-m2-init='{"Magento_Cms/js/filter/component": ""}' data-part="search">
      <form>
      <input type="text" class="filter-search" placeholder="Search" data-bind="autocomplete: { data: suggestions, writeTo: query }, value: rawQuery, valueUpdate: 'afterkeydown'"/>
      <button class="action-search" type="submit" data-bind="click: search"><span>Search</span></button>
      </form>
  </span>
</div>
