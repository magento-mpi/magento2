<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="../../../../../../lib/Magento/Event/etc/events.xsd">
    <event name="clean_media_cache_after">
        <observer name="magento_fullpagecache" instance="Magento\FullPageCache\Model\Observer" method="cleanCache" />
    </event>
    <event name="clean_catalog_images_cache_after">
        <observer name="magento_fullpagecache" instance="Magento\FullPageCache\Model\Observer" method="cleanCache" />
    </event>
    <event name="model_save_commit_after">
        <observer name="magento_fullpagecache" instance="Magento\FullPageCache\Model\Observer" method="validateDataChanges" />
    </event>
    <event name="model_delete_commit_after">
        <observer name="magento_fullpagecache" instance="Magento\FullPageCache\Model\Observer" method="validateDataDelete" />
    </event>
    <event name="core_design_save_after">
        <observer name="magento_fullpagecache" instance="Magento\FullPageCache\Model\Observer" method="invalidateDesignChange" />
    </event>
    <event name="core_design_delete_after">
        <observer name="magento_fullpagecache" instance="Magento\FullPageCache\Model\Observer" method="invalidateDesignChange" />
    </event>
