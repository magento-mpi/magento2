        <observer name="magento_fullpagecache" instance="Magento\FullPageCache\Model\Observer" method="cleanCache" />
    </event>
    <event name="adminhtml_cache_flush_system">
        <observer name="magento_fullpagecache" instance="Magento\FullPageCache\Model\Observer" method="cleanCache" />
    </event>
    <event name="adminhtml_cache_flush_all">
        <observer name="magento_fullpagecache" instance="Magento\FullPageCache\Model\Observer" method="cleanCache" />
    </event>
    <event name="assign_theme_to_stores_after">
        <observer name="magento_fullpagecache" instance="Magento\FullPageCache\Model\Observer" method="cleanCache" />
    </event>
