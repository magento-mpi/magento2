<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="../../../Backend/etc/system_file.xsd">
    <system>
        <section id="system">
            <group id="page_cache" translate="label" showInDefault="1" showInWebsite="1" showInStore="1" sortOrder="600">
                <label>Full Page Cache Settings</label>
                <field id="allowed_depth" translate="label" type="text" sortOrder="20" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Max. Allowed Page Depth</label>
                    <comment>Page depth calculated based on page parameters count. (category.html - depth 0, category.html?p=2 - depth 1)</comment>
                </field>
                <field id="multicurrency" translate="label" type="select" sortOrder="30" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Enable Cache for Not Default Currencies</label>
                    <source_model>Magento\Backend\Model\Config\Source\Yesno</source_model>
                </field>
                <field id="max_cache_size" translate="label" type="text" sortOrder="40" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Max. Cache Size (Mb)</label>
                </field>
                <field id="debug" translate="label" type="select" sortOrder="50" showInDefault="0" showInWebsite="1" showInStore="0">
                    <label>Enable Highlight on Dynamic Blocks While Generating</label>
                    <source_model>Magento\Backend\Model\Config\Source\Yesno</source_model>
                </field>
            </group>
            <group id="page_crawl" showInDefault="1" showInWebsite="1" showInStore="1" sortOrder="700">
                <label>Full Page Cache Auto Generation</label>
                <field id="enable" translate="label" type="select" sortOrder="10" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Enable Page Cache Auto Generation</label>
                    <source_model>Magento\Backend\Model\Config\Source\Yesno</source_model>
                </field>
                <field id="threads" translate="label,comment" type="text" sortOrder="20" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Crawler Thread Number</label>
                    <comment>Number of paralel requests for cache auto generation process.</comment>
                </field>
                <field id="multicurrency" translate="label,comment" type="select" sortOrder="30" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Generate Page Cache for Not Default Currencies</label>
                    <source_model>Magento\Backend\Model\Config\Source\Yesno</source_model>
                    <comment>Require enable cache for not default currencies.</comment>
                </field>
            </group>
        </section>
        <section id="web">
            <group id="cookie">
                <field id="cookie_restriction" translate="comment">
                    <comment>To fully restrict cookies, you must also disable full-page caching.</comment>
                </field>
            </group>
        </section>
    </system>
</config>
