<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="../../../../../lib/Magento/Event/etc/events.xsd">
    <event name="design_editor_activate">
        <observer name="magento_fullpagecache" instance="Magento\FullPageCache\Model\Observer" method="setNoCacheCookie" />
    </event>
    <event name="design_editor_deactivate">
        <observer name="magento_fullpagecache" instance="Magento\FullPageCache\Model\Observer" method="deleteNoCacheCookie" />
    </event>
</config>
