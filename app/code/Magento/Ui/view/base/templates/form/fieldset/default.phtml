$legendText = $this->getLegendText();
$attributes = $this->getAttributes();
?>

<div class="fieldset-wrapper-title" tabindex="3" data-bind="click: onClick, keyboard: { 13: toggle }">
    <strong class="title">
        <span data-bind="text: label"><?php echo $this->getData('config/label'); ?></span>
    </strong>
</div>

<div class="fieldset-wrapper-content">
    <fieldset id="<?php echo $this->getData('index'); ?>" class="fieldset">
        <?php if (!empty($legendText)): ?>
            <legend class="label"><span data-bind="text: label"><?php echo $legendText; ?></span></legend><br />
        <?php endif; ?>
        <?php if(!$this->getIsAjax()): ?>
            <?php foreach ($this->getChildren() as $childName): ?>
                <?php $childElement = $this->getLayoutElement($childName);?>
                <p><?php echo $this->renderElement('group', $childElement); ?></p>
            <?php endforeach; ?>
        <?php endif; ?>
    </fieldset>
</div>

