<layout xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="../../../../Core/etc/layout_generic.xsd">
    <block class="Magento\Ui\Listing\View" name="listing">
        <arguments>
            <argument name="template" xsi:type="string">Magento_Ui::listing/grid/horizontal.phtml</argument>
            <argument name="save_parameters_in_session" xsi:type="string">1</argument>
            <argument name="client_root" xsi:type="string">mui/listing/ajax</argument>
        </arguments>
        <block class="Magento\Framework\View\Element\Text\ListText" name="listing_head"/>
        <block class="Magento\Framework\View\Element\Text\ListText" name="listing_before">
            <block class="Magento\Ui\Paging\View" name="paging_small_top">
                <arguments>
                    <argument name="template" xsi:type="string">Magento_Ui::paging/default.phtml</argument>
                </arguments>
            </block>
            <block class="Magento\Ui\Filter\View" name="filter_base">
                <arguments>
                    <argument name="template" xsi:type="string">Magento_Ui::filter/default.phtml</argument>
                </arguments>
            </block>
            <block class="Magento\Ui\Sorting\View" name="sorting_base">
                <arguments>
                    <argument name="template" xsi:type="string">Magento_Ui::sorting/default.phtml</argument>
                    <argument name="config" xsi:type="array">
                        <item name="direction" xsi:type="string">asc</item>
                    </argument>
                </arguments>
            </block>
        </block>
    </block>
</layout>
