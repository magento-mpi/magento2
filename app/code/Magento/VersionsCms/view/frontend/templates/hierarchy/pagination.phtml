/* @var $this \Magento\VersionsCms\Block\Hierarchy\Pagination */
?>
<div class="pager only">
    <div class="pages">
        <strong><?php echo __('Page:') ?></strong>
        <ol>
        <?php if ($this->canShowSequence()):?>
            <?php if ($this->canShowPrevious()):?>
            <li class="item"><a class="action previous" href="<?php echo $this->getPreviousNode()->getUrl()?>"><span><?php echo __('Previous') ?></span></a></li>
            <?php endif;?>
        <?php endif;?>

        <?php if ($this->canShowOuter() && $this->canShowFirst()):?>
            <li class="item"><a class="first" title="<?php echo $this->escapeHtml($this->getFirstNode()->getLabel())?>" href="<?php echo $this->getFirstNode()->getUrl()?>"><span><?php echo $this->getNodeLabel($this->getFirstNode())?></span></a></li>
        <?php endif;?>

        <?php if ($this->canShowPreviousJump()):?>
            <li class="item"><a class="action previous jump" title="<?php echo $this->escapeHtml($this->getPreviousJumpNode()->getLabel())?>" href="<?php echo $this->getPreviousJumpNode()->getUrl()?>"><span>...</span></a></li>
        <?php endif;?>

        <?php foreach ($this->getNodesInRange() as $node):?>
            <?php if ($node->getIsCurrent()):?>
                <li class="item current"><?php echo $this->getNodeLabel($node)?></li>
            <?php else: ?>
                <li class="item"><a title="<?php echo $this->escapeHtml($node->getLabel())?>" href="<?php echo $node->getUrl()?>"><span><?php echo $this->getNodeLabel($node)?></span></a></li>
            <?php endif; ?>
        <?php endforeach;?>

        <?php if ($this->canShowNextJump()):?>
            <li class="item"><a class="action forward jump" title="<?php echo $this->escapeHtml($this->getNextJumpNode()->getLabel())?>" href="<?php echo $this->getNextJumpNode()->getUrl()?>"><span>...</span></a></li>
        <?php endif;?>

        <?php if ($this->canShowOuter() && $this->canShowLast()):?>
          <li class="item"><a class="action last" title="<?php echo $this->escapeHtml($this->getLastNode()->getLabel())?>" href="<?php echo $this->getLastNode()->getUrl()?>"><span><?php echo $this->getNodeLabel($this->getLastNode())?></span></a></li>
        <?php endif;?>

        <?php if ($this->canShowSequence()):?>
            <?php if ($this->canShowNext()):?>
            <li class="item"><a class="action next" href="<?php echo $this->getNextNode()->getUrl()?>"><span><?php echo __('Next') ?></span></a></li>
            <?php endif;?>
        <?php endif;?>
        </ol>
    </div>
</div>
