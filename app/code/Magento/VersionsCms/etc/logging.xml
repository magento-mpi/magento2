<logging>
    <actions>
        <preview translate="label">
            <label>Preview</label>
        </preview>
        <publish translate="label">
            <label>Publish</label>
        </publish>
    </actions>

    <magento_versionscms_hierarchy translate="label">
        <label>CMS Hierarchy</label>
        <expected_models>
            <Magento\VersionsCms\Model\Hierarchy\Node/>
        </expected_models>
        <actions>
            <adminhtml_cms_hierarchy_index>
                <action>view</action>
                <expected_models />
                <post_dispatch>\Magento\VersionsCms\Model\Observer::postDispatchCmsHierachyView</post_dispatch>
            </adminhtml_cms_hierarchy_index>
            <adminhtml_cms_hierarchy_save>
                <action>save</action>
                <skip_on_back>
                    <adminhtml_cms_hierarchy_index />
                </skip_on_back>
            </adminhtml_cms_hierarchy_save>
        </actions>
    </magento_versionscms_hierarchy>

    <magento_versionscms_page_versioning translate="label">
        <label>CMS Versioning</label>
        <actions>
<!--
    Versions
-->
            <adminhtml_cms_page_massDeleteVersions>
                <action>massDelete</action>
                <expected_models>
                    <Magento\VersionsCms\Model\Page\Version/>
                </expected_models>
            </adminhtml_cms_page_massDeleteVersions>

            <adminhtml_cms_page_version_edit>
                <action>view</action>
                <expected_models>
                    <Magento\VersionsCms\Model\Page\Version/>
                </expected_models>
            </adminhtml_cms_page_version_edit>

            <adminhtml_cms_page_version_save>
                <action>save</action>
                <expected_models>
                    <Magento\VersionsCms\Model\Page\Version/>
                </expected_models>
                <skip_on_back>
                    <adminhtml_cms_page_version_edit />
                </skip_on_back>
            </adminhtml_cms_page_version_save>

            <adminhtml_cms_page_version_new>
                <action>save</action>
                <expected_models>
                    <Magento\VersionsCms\Model\Page\Version/>
                </expected_models>
                <skip_on_back>
                    <adminhtml_cms_page_revision_edit />
                </skip_on_back>
            </adminhtml_cms_page_version_new>

            <adminhtml_cms_page_version_delete>
                <action>delete</action>
                <expected_models>
                    <Magento\VersionsCms\Model\Page\Version/>
                </expected_models>
            </adminhtml_cms_page_version_delete>
<!--
    Revisions
-->
            <adminhtml_cms_page_version_massDeleteRevisions>
                <action>massDelete</action>
                <expected_models>
                    <Magento\VersionsCms\Model\Page\Revision/>
                </expected_models>
            </adminhtml_cms_page_version_massDeleteRevisions>

            <adminhtml_cms_page_revision_edit>
                <action>view</action>
                <expected_models>
                    <Magento\VersionsCms\Model\Page\Revision/>
                </expected_models>
            </adminhtml_cms_page_revision_edit>

            <adminhtml_cms_page_revision_preview>
                <action>preview</action>
                <expected_models />
                <post_dispatch>\Magento\VersionsCms\Model\Observer::postDispatchCmsRevisionPreview</post_dispatch>
            </adminhtml_cms_page_revision_preview>

            <adminhtml_cms_page_revision_save>
                <action>save</action>
                <expected_models>
                    <Magento\VersionsCms\Model\Page\Revision/>
                </expected_models>
                <skip_on_back>
                    <adminhtml_cms_page_revision_edit />
                </skip_on_back>
            </adminhtml_cms_page_revision_save>

            <adminhtml_cms_page_revision_delete>
                <action>delete</action>
                <expected_models>
                    <Magento\VersionsCms\Model\Page\Revision/>
                </expected_models>
            </adminhtml_cms_page_revision_delete>

            <adminhtml_cms_page_revision_publish>
                <action>publish</action>
                <post_dispatch>\Magento\VersionsCms\Model\Observer::postDispatchCmsRevisionPublish</post_dispatch>
                <skip_on_back>
                    <adminhtml_cms_page_revision_edit />
                </skip_on_back>
            </adminhtml_cms_page_revision_publish>
        </actions>
    </magento_versionscms_page_versioning>
</logging>
