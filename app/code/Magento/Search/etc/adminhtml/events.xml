        <observer name="magento_search" instance="Magento\Search\Model\Observer" method="eavAttributeEditFormInit" />
    </event>
    <event name="catelogsearch_searchable_attributes_load_after">
        <observer name="magento_search" instance="Magento\Search\Model\Observer" method="storeSearchableAttributes" />
