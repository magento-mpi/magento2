<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
    <preference for="Magento\Search\Helper\ClientInterface" type="Magento\Search\Helper\Data" />
    <preference for="Magento\Catalog\Model\Layer\ItemCollectionProvider" type="Magento\Search\Model\Layer\ItemCollectionProvider" />
    <preference for="Magento\CatalogSearch\Model\Layer" type="SearchResultsLayer" />
    <virtualType name="SearchResultsLayer" type="Magento\CatalogSearch\Model\Layer">
        <arguments>
            <argument name="layer" xsi:type="object">Magento\Search\Model\Search\Layer\ItemCollectionProvider</argument>
        </arguments>
    </virtualType>
    <type name="Magento\Search\Block\Catalogsearch\Layer">
        <arguments>
            <argument name="filterList" xsi:type="object">SearchResultsFilterList</argument>
        </arguments>
    </type>
    <type name="Magento\CatalogSearch\Model\Fulltext">
        <plugin name="fulltextIndexRebuild" type="Magento\Search\Model\Plugin\FulltextIndexRebuild" />
    </type>
    <type name="Magento\Search\Block\Suggestions">
        <arguments>
            <argument name="suggestions" xsi:type="object">Magento\Search\Model\Suggestions\Proxy</argument>
        </arguments>
    </type>
    <type name="Magento\Search\Block\Catalog\Layer\View">
        <arguments>
            <argument name="searchLayer" xsi:type="object">Magento\Search\Model\Catalog\Layer\Proxy</argument>
        </arguments>
    </type>
    <type name="Magento\Search\Model\Catalog\Layer\Filter\Price">
        <arguments>
            <argument name="resourceEngine" xsi:type="object">Magento\Search\Model\Resource\Engine\Proxy</argument>
        </arguments>
    </type>
    <type name="Magento\Search\Model\Observer">
        <arguments>
            <argument name="searchSearchLayer" xsi:type="object">Magento\Search\Model\Search\Layer\Proxy</argument>
            <argument name="searchCatalogLayer" xsi:type="object">Magento\Search\Model\Catalog\Layer\Proxy</argument>
            <argument name="indexer" xsi:type="object">Magento\Index\Model\Indexer\Proxy</argument>
            <argument name="searchData" xsi:type="object">Magento\Search\Helper\Data\Proxy</argument>
            <argument name="coreRegistry" xsi:type="object">Magento\Registry\Proxy</argument>
        </arguments>
    </type>
    <type name="Magento\Search\Model\Resource\Engine">
        <arguments>
            <argument name="catalogSearchResourceFulltext" xsi:type="object">Magento\CatalogSearch\Model\Resource\Fulltext\Proxy</argument>
            <argument name="searchResourceIndex" xsi:type="object">Magento\Search\Model\Resource\Index\Proxy</argument>
            <argument name="catalogProductVisibility" xsi:type="object">Magento\Catalog\Model\Product\Visibility\Proxy</argument>
            <argument name="searchResource" xsi:type="object">Magento\Search\Model\Resource\Advanced\Proxy</argument>
        </arguments>
    </type>
    <type name="Magento\Search\Model\Adapter\AbstractAdapter">
        <arguments>
            <argument name="customerSession" xsi:type="object">Magento\Customer\Model\Session\Proxy</argument>
            <argument name="resourceIndex" xsi:type="object">Magento\Search\Model\Resource\Index\Proxy</argument>
            <argument name="resourceFulltext" xsi:type="object">Magento\CatalogSearch\Model\Resource\Fulltext\Proxy</argument>
        </arguments>
    </type>
    <type name="Magento\Catalog\Model\Layer\Category">
        <arguments>
            <argument name="context">Magento\Search\Model\Layer\Category\Context</argument>
        </arguments>
    </type>
    <type name="Magento\Catalog\Model\Layer\Search">
        <arguments>
            <argument name="context">Magento\Search\Model\Layer\Search\Context</argument>
        </arguments>
    </type>
    <virtualType name="categoryFilterList" type="Magento\Search\Model\Layer\Category\FilterList"/>
    <virtualType name="categorySearchList" type="Magento\Search\Model\Layer\Search\FilterList">
        <arguments>
            <argument name="filterableAttributes" xsi:type="object">Magento\Search\Model\Layer\Search\FilterableAttributeList</argument>
        </arguments>
    </virtualType>
</config>
