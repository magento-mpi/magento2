<config>
    <preference for="Magento\Search\Helper\ClientInterface" type="Magento\Search\Helper\Data" />
    <type name="Magento\CatalogSearch\Model\Fulltext">
        <plugin name="fulltextIndexRebuild" type="Magento\Search\Model\Plugin\FulltextIndexRebuild" />
    </type>
    <type name="Magento\Search\Block\Suggestions">
        <param name="suggestions">
            <instance type="Magento\Search\Model\Suggestions\Proxy" />
        </param>
    </type>
    <type name="Magento\Search\Block\Catalog\Layer\View">
        <param name="searchLayer">
            <instance type="Magento\Search\Model\Search\Layer\Proxy" />
        </param>
    </type>
    <type name="Magento\Search\Block\Catalogsearch\Layer">
        <param name="searchLayer">
            <instance type="Magento\Search\Model\Search\Layer\Proxy" />
        </param>
    </type>
    <type name="Magento\Search\Model\Catalog\Layer\Filter\Price">
        <param name="resourceEngine">
            <instance type="Magento\Search\Model\Resource\Engine\Proxy" />
        </param>
    </type>
    <type name="Magento\Search\Model\Observer">
        <param name="searchSearchLayer">
            <instance type="Magento\Search\Model\Search\Layer\Proxy" />
        </param>
        <param name="searchCatalogLayer">
            <instance type="Magento\Search\Model\Catalog\Layer\Proxy" />
        </param>
        <param name="indexer">
            <instance type="Magento\Index\Model\Indexer\Proxy" />
        </param>
        <param name="searchData">
            <instance type="Magento\Search\Helper\Data\Proxy" />
        </param>
        <param name="coreRegistry">
            <instance type="Magento\Core\Model\Registry\Proxy" />
        </param>
    </type>
    <type name="Magento\Search\Model\Resource\Engine">
        <param name="catalogSearchResourceFulltext">
            <instance type="Magento\CatalogSearch\Model\Resource\Fulltext\Proxy" />
        </param>
        <param name="searchResourceIndex">
            <instance type="Magento\Search\Model\Resource\Index\Proxy" />
        </param>
        <param name="catalogProductVisibility">
            <instance type="Magento\Catalog\Model\Product\Visibility\Proxy" />
        </param>
        <param name="searchResource">
            <instance type="Magento\Search\Model\Resource\Advanced\Proxy" />
        </param>
    </type>
    <type name="Magento\Search\Model\Adapter\AbstractAdapter">
        <param name="customerSession">
            <instance type="Magento\Customer\Model\Session\Proxy" />
        </param>
        <param name="resourceIndex">
            <instance type="Magento\Search\Model\Resource\Index\Proxy" />
        </param>
        <param name="resourceFulltext">
            <instance type="Magento\CatalogSearch\Model\Resource\Fulltext\Proxy" />
        </param>
    </type>
</config>
