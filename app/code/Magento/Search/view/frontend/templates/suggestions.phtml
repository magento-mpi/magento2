$countResultsEnabled = $this->isCountResultsEnabled();
$suggestions = $this->getSuggestions();
$suggestionsCount = count($suggestions);
if ($suggestionsCount): ?>
<dl class="block recommendations">
    <dt class="title"><?php echo __('Did you mean');?></dt>
    <?php for($i=0; $i<$suggestionsCount; $i++) :?>
    <dd class="item">
        <a href="<?php echo $suggestions[$i]['link'] ?>"><?php echo $suggestions[$i]['word'] ?></a>
        <?php if ($countResultsEnabled) : ?>
            <span class="count"><?php echo $suggestions[$i]['num_results'] ?></span>
        <?php endif; ?>
    </dd>
    <?php endfor;?>
</dl>
<?php endif; ?>
