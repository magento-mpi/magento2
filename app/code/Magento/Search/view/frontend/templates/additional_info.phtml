 */
?>
<?php
/** @var \Magento\Search\Model\QueryResult[] $recommendations */
$recommendations = $this->getAdditionalInfo();
if (count($recommendations)):?>
    <dl class="block recommendations">
        <dt class="title"><?php echo __('Related search terms'); ?></dt>
        <?php foreach ($recommendations as $recommendation) : ?>
            <dd class="item">
                <a href="<?php echo $this->getLink($recommendation->getQueryText()) ?>"
                    ><?php echo $recommendation->getQueryText() ?></a>
                <?php if ($this->isCountResultsEnabled()): ?>
                    <span class="count"><?php echo $recommendation->getResultsCount() ?></span>
                <?php endif; ?>
            </dd>
        <?php endforeach; ?>
    </dl>
<?php endif; ?>
