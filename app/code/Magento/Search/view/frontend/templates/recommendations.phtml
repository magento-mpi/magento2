<?php
$countResultsEnabled = $this->isCountResultsEnabled();
$recommendations = $this->getRecommendations();
$recommendationsCount = count($recommendations);
if ($recommendationsCount):?>
<dl class="block recommendations">
    <dt class="title"><?php echo __('Related search terms');?></dt>
    <?php for($i=0;$i<$recommendationsCount;$i++) :?>
    <dd class="item">
        <a href="<?php echo $recommendations[$i]['link']?>"><?php echo $recommendations[$i]['word']?></a>
        <?php if($countResultsEnabled):?>
            <span class="count"><?php echo $recommendations[$i]['num_results']?></span>
        <?php endif;?>
    </dd>
    <?php endfor;?>
</dl>
<?php endif; ?>
