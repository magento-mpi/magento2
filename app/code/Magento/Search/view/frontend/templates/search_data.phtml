 */
?>
<?php
/** @var \Magento\Search\Model\QueryResult[] $data */
$data = $this->getAdditionalInfo();
if (count($data)):?>
    <dl class="block">
        <dt class="title"><?php echo __($this->getTitle()); ?></dt>
        <?php foreach ($data as $additionalInfo) : ?>
            <dd class="item">
                <a href="<?php echo $this->getLink($additionalInfo->getQueryText()) ?>"
                    ><?php echo $additionalInfo->getQueryText() ?></a>
                <?php if ($this->isCountResultsEnabled()): ?>
                    <span class="count"><?php echo $additionalInfo->getResultsCount() ?></span>
                <?php endif; ?>
            </dd>
        <?php endforeach; ?>
    </dl>
<?php endif; ?>
