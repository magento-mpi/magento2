<layout xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
    <referenceContainer name="left">
        <remove name="catalogsearch.leftnav"/>
        <block class="Magento\Search\Block\Catalogsearch\Layer" name="magentosearch.leftnav" before="-" template="Magento_Catalog::layer/view.phtml"/>
    </referenceContainer>
    <referenceBlock name="search_result_list">
        <container name="additional" label="Additional Info" after="product_list_toolbar">
            <block class="Magento\Search\Block\Suggestions" name="search_suggestions" template="suggestions.phtml"/>
            <block class="Magento\Search\Block\Recommendations" name="search_recommendations" template="recommendations.phtml"/>
        </container>
    </referenceBlock>
</layout>
