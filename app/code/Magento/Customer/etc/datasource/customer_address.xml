<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="../../../../../../app/code/Magento/Ui/etc/dataSource.xsd">
    <datasource name="customer_address" dataset="Magento\Customer\Model\Resource\Address\Collection">
        <fields>
            <field name="entity_id" dataType="int" visible="false"/>
            <field name="parent_id" dataType="int" visible="false"/>
            <field name="city" source="eav"/>
            <field name="street" source="eav"/>
        </fields>
        <references>
            <reference target="customer"
               referencedField="parent_id"
               targetField="entity_id"
            />
        </references>
    </datasource>
</config>