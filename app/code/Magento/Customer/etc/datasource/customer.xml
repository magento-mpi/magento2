<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
    <fieldset
            name="customer"
            dataset="Magento\Customer\Model\Resource\Customer\Collection"
    >
        <fields>
            <field name="entity_id" datatype="int" visible="false"/>
            <field name="entity_type_id" datatype="smallint" visible="false"/>
            <field name="email" datatype="string" visible="true"/>
            <field name="attribute_set_id" datatype="smallint" visible="false"/>
            <field name="customer_group_id" datatype="int" visible="false"/>
            <field name="website_id" datatype="int" visible="false"/>
            <field name="default_billing" datatype="eav" visible="false"/>
            <field name="gender" datatype="eav" visible="false"/>
            <field name="firstname" datatype="eav" visible="false"/>
            <field name="lastname" datatype="eav" visible="false"/>
            <field name="customer_group_code" datatype="lookup" visible="true">
                <reference target="customer_group"
                    referenced_field="customer_group_id"
                    target_field="customer_group_id"
                    needed_field="customer_group_code"
                />
            </field>
            <field name="website_code" datatype="lookup" visible="true">
                <reference target="website"
                    referenced_field="website_id"
                    target_field="website_id"
                    needed_field="name"
                />
            </field>
        </fields>
    </fieldset>
</config>