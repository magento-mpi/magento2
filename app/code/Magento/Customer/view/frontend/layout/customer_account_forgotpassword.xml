<layout version="0.1.0">
    <customer_account_forgotpassword translate="label" type="page" parent="customer_account">
        <label>Customer Forgot Password Form</label>
        <reference name="head">
            <action method="setTitle" translate="title">
                <title>Forgot Your Password</title>
            </action>
        </reference>
        <reference name="root">
            <action method="setTemplate">
                <template>1column.phtml</template>
            </action>
            <action method="setHeaderTitle" translate="title">
                <title>Password forgotten</title>
            </action>
        </reference>
        <reference name="content">
            <block type="Magento_Customer_Block_Account_Forgotpassword" name="forgotPassword" template="form/forgotpassword.phtml"/>
        </reference>
    </customer_account_forgotpassword>
</layout>
