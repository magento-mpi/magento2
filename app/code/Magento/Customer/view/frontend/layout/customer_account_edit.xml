<layout version="0.1.0">
    <customer_account_edit translate="label" type="page" parent="customer_account">
        <label>Customer Account Edit Form</label>
        <update handle="customer_account"/>
        <reference name="root">
            <action method="setHeaderTitle" translate="title">
                <title>Edit Account Info</title>
            </action>
        </reference>
        <reference name="my.account.wrapper">
            <block type="Magento_Customer_Block_Form_Edit" name="customer_edit" template="form/edit.phtml"/>
        </reference>
        <reference name="left">
            <action method="unsetChild">
                <name>left.permanent.callout</name>
            </action>
        </reference>
    </customer_account_edit>
</layout>
