<config>
    <global>
        <sales>
            <quote>
                <item>
                    <product_attributes>
                        <enable_googlecheckout />
                    </product_attributes>
                </item>
            </quote>
        </sales>
        <resources>
            <googlecheckout_setup>
                <setup>
                    <module>Magento_GoogleCheckout</module>
                    <class>Magento_GoogleCheckout_Model_Resource_Setup</class>
                </setup>
            </googlecheckout_setup>
        </resources>
    </global>
    <frontend>
        <secure_url>
            <googlecheckout_redirect>/googlecheckout/redirect/</googlecheckout_redirect>
            <googlecheckout_beacon>/googlecheckout/api/beacon/</googlecheckout_beacon>
            <googlecheckout_api>/googlecheckout/api/</googlecheckout_api>
        </secure_url>
        <translate>
            <modules>
                <Magento_GoogleCheckout>
                    <files>
                        <default>Magento_GoogleCheckout.csv</default>
                    </files>
                </Magento_GoogleCheckout>
            </modules>
        </translate>
    </frontend>
    <adminhtml>
        <translate>
            <modules>
                <Magento_GoogleCheckout>
                    <files>
                        <default>Magento_GoogleCheckout.csv</default>
                    </files>
                </Magento_GoogleCheckout>
            </modules>
        </translate>
    </adminhtml>
    <default>
        <carriers>
            <googlecheckout>
                <active>1</active>
                <model>Magento_GoogleCheckout_Model_Shipping</model>
            </googlecheckout>
        </carriers>
        <payment>
            <googlecheckout>
                <active>1</active>
                <model>Magento_GoogleCheckout_Model_Payment</model>
                <title>Google Checkout</title>
            </googlecheckout>
        </payment>
        <google>
            <checkout>
                <merchant_id backend_model="Magento_Backend_Model_Config_Backend_Encrypted" />
                <merchant_key backend_model="Magento_Backend_Model_Config_Backend_Encrypted" />
                <use_secure_callback_url>0</use_secure_callback_url>
                <disable_default_tax_tables>0</disable_default_tax_tables>
                <hide_cart_contents>1</hide_cart_contents>
                <title>Google Checkout</title>
            </checkout>
            <checkout_shipping_carrier>
                <address_category>COMMERCIAL</address_category>
                <default_price>0</default_price>
                <default_height>10</default_height>
                <default_length>10</default_length>
                <default_width>10</default_width>
            </checkout_shipping_carrier>
            <checkout_shipping_flatrate>
                <sallowspecific_1>0</sallowspecific_1>
                <sallowspecific_2>0</sallowspecific_2>
                <sallowspecific_3>0</sallowspecific_3>
            </checkout_shipping_flatrate>
            <checkout_shipping_virtual>
                <active>1</active>
                <schedule>OPTIMISTIC</schedule>
                <method>email</method>
            </checkout_shipping_virtual>
        </google>
    </default>
</config>