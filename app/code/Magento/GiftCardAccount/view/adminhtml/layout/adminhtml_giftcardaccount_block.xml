<layout xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
    <handle id="adminhtml_giftcardaccount_block">
        <reference name="adminhtml.gift.card.account.grid.container">
            <block class="Magento_Backend_Block_Widget_Grid" name="gift.card.account.grid" as="grid">
                <arguments>
                    <id>giftcardaccountGrid</id>
                    <dataSource type="object">Magento_GiftCardAccount_Model_Resource_Giftcardaccount_Collection</dataSource>
                    <default_sort>giftcardaccount_id</default_sort>
                    <default_dir>desc</default_dir>
                    <save_parameters_in_session>1</save_parameters_in_session>
                    <use_ajax>1</use_ajax>
                    <var_name_filter>giftcardaccount_filter</var_name_filter>
                    <grid_url type="url">
                        <path>*/*/grid</path>
                        <params>
                            <_current>1</_current>
                        </params>
                    </grid_url>
                </arguments>
                <block class="Magento_Backend_Block_Widget_Grid_Export" name="gift.card.account.grid.export" as="grid.export">
                    <arguments>
                        <exportTypes>
                            <csv>
                                <urlPath>*/*/exportCsv</urlPath>
                                <label translate="true">CSV</label>
                            </csv>
                            <excel>
                                <urlPath>*/*/exportMsxml</urlPath>
                                <label translate="true">Excel XML</label>
                            </excel>
                        </exportTypes>
                    </arguments>
                </block>
                <block class="Magento_Backend_Block_Widget_Grid_Massaction" name="gift.card.account.grid.massaction" as="grid.massaction">
                    <arguments>
                        <massaction_id_field>giftcardaccount_id</massaction_id_field>
                        <form_field_name>giftcardaccount</form_field_name>
                        <use_select_all>1</use_select_all>
                        <options>
                            <delete>
                                <label translate="true">Delete</label>
                                <url>*/*/massDelete</url>
                                <confirm translate="true">Are you sure you want to delete these gift card accounts?</confirm>
                            </delete>
                        </options>
                    </arguments>
                </block>
                <block class="Magento_Backend_Block_Widget_Grid_ColumnSet" name="adminhtml.logging.archive.grid.columnSet" as="grid.columnSet">
                    <arguments>
                        <rowUrl>
                            <path>*/*/edit</path>
                            <extraParamsTemplate>
                                <id>getId</id>
                            </extraParamsTemplate>
                        </rowUrl>
                    </arguments>
                    <block class="Magento_Backend_Block_Widget_Grid_Column" as="giftcardaccount_id">
                        <arguments>
                            <header translate="true">ID</header>
                            <type>number</type>
                            <index>giftcardaccount_id</index>
                            <width>30</width>
                        </arguments>
                    </block>
                    <block class="Magento_Backend_Block_Widget_Grid_Column" as="code">
                        <arguments>
                            <header translate="true">Code</header>
                            <index>code</index>
                        </arguments>
                    </block>
                    <block class="Magento_Backend_Block_Widget_Grid_Column_Multistore" as="website">
                        <arguments>
                            <header translate="true">Website</header>
                            <type>options</type>
                            <index>website_id</index>
                            <width>100</width>
                            <column_css_class>col-store</column_css_class>
                            <header_css_class>col-store</header_css_class>
                            <options type="options">Magento_Backend_Model_Config_Source_Website_OptionHash</options>
                        </arguments>
                    </block>
                    <block class="Magento_Backend_Block_Widget_Grid_Column" as="date_created">
                        <arguments>
                            <header translate="true">Created</header>
                            <index>date_created</index>
                            <width>120</width>
                            <type>date</type>
                        </arguments>
                    </block>
                    <block class="Magento_Backend_Block_Widget_Grid_Column" as="date_expires">
                        <arguments>
                            <header translate="true">End on</header>
                            <index>date_expires</index>
                            <width>120</width>
                            <type>date</type>
                            <default>--</default>
                        </arguments>
                    </block>
                    <block class="Magento_Backend_Block_Widget_Grid_Column" as="status">
                        <arguments>
                            <header translate="true">Active</header>
                            <index>status</index>
                            <width>50</width>
                            <type>options</type>
                            <align>center</align>
                            <options type="options">Magento_GiftCardAccount_Model_Resource_Giftcardaccount_Grid_Active</options>
                        </arguments>
                    </block>
                    <block class="Magento_Backend_Block_Widget_Grid_Column" as="state">
                        <arguments>
                            <header translate="true">Status</header>
                            <index>state</index>
                            <width>100</width>
                            <type>options</type>
                            <align>center</align>
                            <options type="options">Magento_GiftCardAccount_Model_Resource_Giftcardaccount_Grid_Status</options>
                        </arguments>
                    </block>
                    <block class="Magento_Backend_Block_Widget_Grid_Column" as="balance">
                        <arguments>
                            <header translate="true">Balance</header>
                            <index>balance</index>
                            <type>currency</type>
                            <currency>base_currency_code</currency>
                            <renderer>Magento_GiftCardAccount_Block_Adminhtml_Widget_Grid_Column_Renderer_Currency</renderer>
                        </arguments>
                    </block>
                </block>
            </block>
        </reference>
    </handle>
</layout>
