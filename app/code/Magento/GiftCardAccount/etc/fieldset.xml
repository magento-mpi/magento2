<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="../../../Magento/Core/etc/fieldset.xsd">
    <scope id="global">
        <fieldset id="sales_convert_quote_address">
            <field name="base_gift_cards_amount">
                <aspect name="to_order" />
            </field>
            <field name="gift_cards_amount">
                <aspect name="to_order" />
            </field>
            <field name="used_gift_cards">
                <aspect name="to_order" targetField="gift_cards" />
            </field>
        </fieldset>
    </scope>
</config>
