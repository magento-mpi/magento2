<config>
    <event name="adminhtml_customer_save_after">
        <observer name="enterprise_customerbalance" instance="Enterprise_CustomerBalance_Model_Observer" method="customerSaveAfter" />
    </event>
    <event name="sales_quote_payment_import_data_before">
        <observer name="enterprise_customerbalance" instance="Enterprise_CustomerBalance_Model_Observer" method="paymentDataImport" />
    </event>
    <event name="sales_model_service_quote_submit_before">
        <observer name="enterprise_customerbalance" instance="Enterprise_CustomerBalance_Model_Observer" method="processOrderPlace" />
    </event>
    <event name="sales_model_service_quote_submit_failure">
        <observer name="enterprise_customerbalance" instance="Enterprise_CustomerBalance_Model_Observer" method="revertStoreCredit" />
    </event>
    <event name="paypal_payment_cancel">
        <observer name="enterprise_customerbalance" instance="Enterprise_CustomerBalance_Model_Observer" method="revertStoreCredit" />
    </event>
    <event name="checkout_type_multishipping_create_orders_single">
        <observer name="enterprise_customerbalance" instance="Enterprise_CustomerBalance_Model_Observer" method="processOrderPlace" />
    </event>
    <event name="checkout_multishipping_refund_all">
        <observer name="enterprise_customerbalance" instance="Enterprise_CustomerBalance_Model_Observer" method="revertStoreCreditForAllOrders" />
    </event>
    <event name="adminhtml_sales_order_create_process_data">
        <observer name="enterprise_customerbalance" instance="Enterprise_CustomerBalance_Model_Observer" method="processOrderCreationData" />
    </event>
    <event name="payment_method_is_active">
        <observer name="enterprise_customerbalance" instance="Enterprise_CustomerBalance_Model_Observer" method="togglePaymentMethods" />
    </event>
    <event name="sales_quote_collect_totals_before">
        <observer name="enterprise_customerbalance" instance="Enterprise_CustomerBalance_Model_Observer" method="quoteCollectTotalsBefore" />
    </event>
    <event name="sales_quote_merge_after">
        <observer name="enterprise_customerbalance" instance="Enterprise_CustomerBalance_Model_Observer" method="quoteMergeAfter" />
    </event>
    <event name="sales_order_invoice_save_after">
        <observer name="enterprise_customerbalance_sales_order_invoice_save_after" instance="Enterprise_CustomerBalance_Model_Observer" method="increaseOrderInvoicedAmount" />
    </event>
    <event name="sales_order_creditmemo_save_after">
        <observer name="enterprise_customerbalance" instance="Enterprise_CustomerBalance_Model_Observer" method="creditmemoSaveAfter" />
    </event>
    <event name="adminhtml_sales_order_creditmemo_register_before">
        <observer name="enterprise_customerbalance" instance="Enterprise_CustomerBalance_Model_Observer" method="creditmemoDataImport" />
    </event>
    <event name="sales_order_load_after">
        <observer name="enterprise_customerbalance" instance="Enterprise_CustomerBalance_Model_Observer" method="salesOrderLoadAfter" />
    </event>
    <event name="sales_order_creditmemo_refund">
        <observer name="enterprise_customerbalance" instance="Enterprise_CustomerBalance_Model_Observer" method="refund" />
    </event>
    <event name="website_delete_before">
        <observer name="enterprise_customerbalance" instance="Enterprise_CustomerBalance_Model_Observer" method="setCustomersBalanceCurrencyToWebsiteBaseCurrency" />
    </event>
    <event name="paypal_prepare_line_items">
        <observer name="enterprise_customerbalance" instance="Enterprise_CustomerBalance_Model_Observer" method="addPaypalCustomerBalanceItem" />
    </event>
</config>