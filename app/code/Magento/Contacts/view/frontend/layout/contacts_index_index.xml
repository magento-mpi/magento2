<layout version="0.1.0">
    <contacts_index_index translate="label" type="page" parent="cms_page_view">
        <label>Contact Us Form</label>
        <reference name="head">
            <action method="setTitle" translate="title">
                <title>Contact Us</title>
            </action>
        </reference>
        <reference name="root">
            <action method="setTemplate">
                <template>2columns-right.phtml</template>
            </action>
            <action method="setHeaderTitle" translate="title">
                <title>Contact Us</title>
            </action>
        </reference>
        <reference name="content">
            <block type="Magento_Core_Block_Template" name="contactForm" template="Magento_Contacts::form.phtml">
                <container name="form.additional.info" label="Form Additional Info"/>
            </block>
        </reference>
    </contacts_index_index>
</layout>
