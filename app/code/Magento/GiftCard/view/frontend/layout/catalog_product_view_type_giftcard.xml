<layout xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="../../../../Core/etc/layout_single.xsd">
    <move element="product.price.final" destination="product.info.form.options" before="product.info.giftcard"/>
    <referenceBlock name="product.price.final">
        <arguments>
            <argument name="render_form" xsi:type="string">1</argument>
        </arguments>
    </referenceBlock>
    <referenceBlock name="product.info.form.options">
        <block class="Magento\GiftCard\Block\Catalog\Product\View\Type\Giftcard" name="product.info.giftcard" as="product_type_data" template="catalog/product/view/type/giftcard.phtml" before="-" cacheable="false">
            <block class="Magento\CatalogInventory\Block\Stockqty\DefaultStockqty" name="product.info.giftcard.extra" as="product_type_data_extra" template="stockqty/default.phtml"/>
        </block>
    </referenceBlock>
</layout>
