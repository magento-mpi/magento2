<?php if ($this->canShow() && $this->getEvents() && count($this->getEvents())): ?>
<div class="block block-balance-history">
    <div class="block-title">
        <strong><?php echo __('Balance History'); ?></strong>
    </div>
    <div class="block-content">
        <div class="table-wrapper balance-history">
            <table id="customerbalance-history" class="data table table-balance-history">
                <caption class="table-caption"><?php echo __('Balance History') ?></caption>
                <thead>
                    <tr>
                        <th scope="col" class="col actions"><?php echo __('Action'); ?></th>
                        <th scope="col" class="col change"><?php echo __('Balance Change'); ?></th>
