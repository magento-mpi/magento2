<layout xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
    <referenceBlock name="creditmemo_totals">
        <block class="Magento\CustomerBalance\Block\Sales\Order\Customerbalance" name="customerbalance" template="order/customerbalance.phtml" cacheable="0"/>
        <block class="Magento\CustomerBalance\Block\Sales\Order\Customerbalance" name="customerbalance_total_refunded" template="order/customerbalance_refunded.phtml" after="-" cacheable="0">
            <action method="setAfterTotal">
                <argument name="value" xsi:type="string">grand_total</argument>
            </action>
        </block>
    </referenceBlock>
</layout>
