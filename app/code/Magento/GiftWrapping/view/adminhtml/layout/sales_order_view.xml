<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="../../../../../../../lib/internal/Magento/Framework/View/Layout/etc/page_configuration.xsd">
    <referenceBlock name="gift_options">
        <block class="Magento\GiftWrapping\Block\Adminhtml\Order\View\Info" name="wrapping_order_view_info" template="order/view/info.phtml"/>
    </referenceBlock>
    <referenceBlock name="popup_window">
        <block class="Magento\GiftWrapping\Block\Adminhtml\Order\View\Items" name="wrapping_order_view_items" template="order/view/items.phtml"/>
    </referenceBlock>
    <referenceBlock name="order_item_extra_info">
        <block class="Magento\GiftWrapping\Block\Adminhtml\Sales\Order\View\Items" name="giftwrapping_extra_info" template="sales/order/view/renderer.phtml" before="-"/>
    </referenceBlock>
    <referenceBlock name="gift_options_link">
        <block class="Magento\GiftWrapping\Block\Adminhtml\Sales\Order\View\Link" name="giftwrapping_item_info" template="sales/order/link.phtml"/>
    </referenceBlock>
    <referenceBlock name="order_totals">
        <block class="Magento\GiftWrapping\Block\Adminhtml\Sales\Totals" name="giftwrapping_totals"/>
    </referenceBlock>
</page>
