<config>
    <system>
        <section id="system">
            <group id="external_page_cache" translate="label" showInDefault="1" showInWebsite="1" showInStore="1" sortOrder="500">
                <label>External Full Page Cache Settings</label>
                <field id="enabled" translate="label" type="select" sortOrder="1" showInDefault="1" showInWebsite="0" showInStore="0">
                    <label>Enable External Cache</label>
                    <source_model>Magento\Backend\Model\Config\Source\Yesno</source_model>
                </field>
                <field id="cookie_lifetime" translate="label comment" type="text" sortOrder="5" showInDefault="1" showInWebsite="0" showInStore="0">
                    <label>Cookie Lifetime (seconds)</label>
                    <depends>
                        <field id="enabled">1</field>
                    </depends>
                    <comment>If you leave this empty, we'll use the default value.</comment>
                </field>
                <field id="control" translate="label" type="select" sortOrder="10" showInDefault="1" showInWebsite="0" showInStore="0">
                    <label>External Cache Control</label>
                    <source_model>Magento\PageCache\Model\System\Config\Source\Controls</source_model>
                    <depends>
                        <field id="enabled">1</field>
                    </depends>
                </field>
            </group>
            <group id="varnish_configuratrion_settings" translate="label" showInDefault="1" showInWebsite="0" showInStore="0" sortOrder="600">
                <label>Varnish Configuration Settings</label>
                <field id="varnish_caching" translate="label" type="select" sortOrder="1" showInDefault="1" showInWebsite="0" showInStore="0">
                    <label>Enable Varnish Caching</label>
                    <source_model>Magento\PageCache\Model\System\Config\Source\Yesno</source_model>
                </field>
                <field id="varnish_configuration" type="button" sortOrder="60" showInDefault="1" showInWebsite="0" showInStore="0">
                    <label>Export Varnish Configuration</label>
                    <frontend_model>Magento\PageCache\Block\System\Config\Form\Field\Export</frontend_model>
                    <depends>
                        <field id="varnish_caching">1</field>
                    </depends>
                </field>
                <field id="pagecache_ttl" type="text" translate="label comment" sortOrder="70" showInDefault="1" showInWebsite="0" showInStore="0">
                    <label>TTL for public contend</label>
                    <comment>If you leave this empty, we'll use the default value.</comment>
                    <depends>
                        <field id="varnish_caching">1</field>
                    </depends>
                </field>
                <field id="pagecache_esi" type="select" translate="label comment" sortOrder="80" showInDefault="1" showInWebsite="0" showInStore="0">
                    <label>ESI</label>
                    <source_model>Magento\PageCache\Model\System\Config\Source\Yesno</source_model>
                    <comment>Cache invalidation</comment>
                    <depends>
                        <field id="varnish_caching">1</field>
                    </depends>
                </field>
                <field id="pagecache_access_list" type="text" translate="label comment" sortOrder="90" showInDefault="1" showInWebsite="0" showInStore="0">
                    <label>Access list</label>
                    <comment>IPs access list that can purge Varnish configuration con for config file generation</comment>
                    <depends>
                        <field id="varnish_caching">1</field>
                    </depends>
                </field>
                <field id="pagecache_backend_host" type="text" translate="label comment" sortOrder="100" showInDefault="1" showInWebsite="0" showInStore="0">
                    <label>Backend host</label>
                    <comment>Specify backend host for config file generation</comment>
                    <depends>
                        <field id="varnish_caching">1</field>
                    </depends>
                </field>
                <field id="pagecache_debug" type="select" translate="label comment" sortOrder="110" showInDefault="1" showInWebsite="0" showInStore="0">
                    <label>Debug</label>
                    <source_model>Magento\PageCache\Model\System\Config\Source\Yesno</source_model>
                    <depends>
                        <field id="varnish_caching">1</field>
                    </depends>
                </field>
            </group>
        </section>
    </system>
</config>
