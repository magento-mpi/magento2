<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="../../Core/etc/config.xsd">
    <default>
        <system>
            <full_page_cache>
                <varnish>
                    <path>Magento/PageCache/etc/varnish.vcl</path>
                </varnish>
                <ttl>120</ttl>
                <default>
                    <access_list>localhost</access_list>
                    <backend_host>localhost</backend_host>
                    <backend_port>8080</backend_port>
                    <ttl>120</ttl>
                </default>
            </full_page_cache>
        </system>
    </default>
</config>