<config>
    <global>
        <resources>
            <catalogrule_setup>
                <setup>
                    <module>Magento_CatalogRule</module>
                </setup>
            </catalogrule_setup>
        </resources>
        <events>
            <prepare_catalog_product_price_index_table>
                <observers>
                    <catalogrule>
                        <class>Magento_CatalogRule_Model_Observer</class>
                        <method>prepareCatalogProductPriceIndexTable</method>
                    </catalogrule>
                </observers>
            </prepare_catalog_product_price_index_table>
            <catalog_product_type_configurable_price>
                <observers>
                    <catalogrule>
                        <class>Magento_CatalogRule_Model_Observer</class>
                        <method>catalogProductTypeConfigurablePrice</method>
                    </catalogrule>
                </observers>
            </catalog_product_type_configurable_price>
            <catalogrule_apply_all>
                <observers>
                    <catalogrule>
                        <class>Magento_CatalogRule_Model_Observer</class>
                        <method>processApplyAll</method>
                    </catalogrule>
                </observers>
            </catalogrule_apply_all>
        </events>
        <catalogrule>
            <related_cache_types>
                <block_html />
            </related_cache_types>
        </catalogrule>
    </global>
    <frontend>
        <events>
            <catalog_product_get_final_price>
                <observers>
                    <catalogrule>
                        <class>Magento_CatalogRule_Model_Observer</class>
                        <method>processFrontFinalPrice</method>
                    </catalogrule>
                </observers>
            </catalog_product_get_final_price>
            <prepare_catalog_product_collection_prices>
                <observers>
                    <catalogrule>
                        <class>Magento_CatalogRule_Model_Observer</class>
                        <method>prepareCatalogProductCollectionPrices</method>
                    </catalogrule>
                </observers>
            </prepare_catalog_product_collection_prices>
        </events>
    </frontend>
    <adminhtml>
        <events>
            <catalog_product_get_final_price>
                <observers>
                    <catalogrule>
                        <class>Magento_CatalogRule_Model_Observer</class>
                        <method>processAdminFinalPrice</method>
                    </catalogrule>
                </observers>
            </catalog_product_get_final_price>
            <catalog_product_save_after>
                <observers>
                    <catalogrule>
                        <class>Magento_CatalogRule_Model_Observer</class>
                        <method>applyAllRulesOnProduct</method>
                    </catalogrule>
                </observers>
            </catalog_product_save_after>
            <catalog_product_import_finish_before>
                <observers>
                    <catalogrule>
                        <class>Magento_CatalogRule_Model_Observer</class>
                        <method>createCatalogRulesRelations</method>
                    </catalogrule>
                </observers>
            </catalog_product_import_finish_before>
            <catalog_product_import_after>
                <observers>
                    <catalogrule>
                        <class>Magento_CatalogRule_Model_Observer</class>
                        <method>applyAllRules</method>
                    </catalogrule>
                </observers>
            </catalog_product_import_after>
            <catalog_entity_attribute_delete_after>
                <observers>
                    <catalogrule>
                        <class>Magento_CatalogRule_Model_Observer</class>
                        <method>catalogAttributeDeleteAfter</method>
                    </catalogrule>
                </observers>
            </catalog_entity_attribute_delete_after>
            <catalog_entity_attribute_save_after>
                <observers>
                    <catalogrule>
                        <class>Magento_CatalogRule_Model_Observer</class>
                        <method>catalogAttributeSaveAfter</method>
                    </catalogrule>
                </observers>
            </catalog_entity_attribute_save_after>
        </events>
    </adminhtml>
    <crontab>
        <jobs>
            <catalogrule_apply_all>
                <schedule>
                    <cron_expr>0 1 * * *</cron_expr>
                </schedule>
                <run>
                    <model>Magento_CatalogRule_Model_Observer::dailyCatalogUpdate</model>
                </run>
            </catalogrule_apply_all>
        </jobs>
        <events>
            <catalog_product_get_final_price>
                <observers>
                    <catalogrule>
                        <class>Magento_CatalogRule_Model_Observer</class>
                        <method>processAdminFinalPrice</method>
                    </catalogrule>
                </observers>
            </catalog_product_get_final_price>
        </events>
    </crontab>
</config>
