<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="../../../../../../lib/internal/Magento/Event/etc/events.xsd">
    <event name="catalog_product_get_final_price">
        <observer name="catalogrule" instance="Magento\CatalogRule\Model\Observer" method="processAdminFinalPrice" />
    </event>
    <event name="catalog_product_save_after">
        <observer name="catalogrule" instance="Magento\CatalogRule\Model\Observer" method="applyAllRulesOnProduct" />
    </event>
    <event name="catalog_product_import_finish_before">
        <observer name="catalogrule" instance="Magento\CatalogRule\Model\Observer" method="createCatalogRulesRelations" />
    </event>
    <event name="catalog_product_import_after">
        <observer name="catalogrule" instance="Magento\CatalogRule\Model\Observer" method="applyAllRules" />
    </event>
    <event name="catalog_entity_attribute_delete_after">
        <observer name="catalogrule" instance="Magento\CatalogRule\Model\Observer" method="catalogAttributeDeleteAfter" />
    </event>
    <event name="catalog_entity_attribute_save_after">
        <observer name="catalogrule" instance="Magento\CatalogRule\Model\Observer" method="catalogAttributeSaveAfter" />
    </event>
</config>
