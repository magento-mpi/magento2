<layout version="0.1.0">
    <catalog_product_view>
        <reference name="product.info">
            <block type="Magento_Payment_Block_Catalog_Product_View_Profile" name="product.info.additional.recurring.schedule" as="recurring_info" template="catalog/product/view/profile/schedule.phtml">
                <action method="addToParentGroup">
                    <group>detailed_info</group>
                </action>
                <action method="setTitle" translate="value">
                    <value>Recurring Profile</value>
                </action>
            </block>
        </reference>
        <reference name="product.info.options.wrapper">
            <block type="Magento_Payment_Block_Catalog_Product_View_Profile" name="product.info.options.recurring" as="recurring_options" template="catalog/product/view/profile/options.phtml"/>
        </reference>
    </catalog_product_view>
</layout>
