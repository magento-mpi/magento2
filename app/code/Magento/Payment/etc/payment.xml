<payment xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:noNamespaceSchemaLocation="../../../Magento/Payment/etc/payment.xsd">
    <credit_cards>
        <type id="AE" order="0">
            <label>American Express</label>
        </type>
        <type id="VI" order="10">
            <label>Visa</label>
        </type>
        <type id="MC" order="20">
            <label>MasterCard</label>
        </type>
        <type id="DI" order="30">
            <label>Discover</label>
        </type>
        <type id="SM" order="40">
            <label>Maestro/Switch</label>
        </type>
        <type id="SO" order="45">
            <label>Solo</label>
        </type>
        <type id="JCB" order="50">
            <label>JCB</label>
        </type>
        <type id="OT" order="1000">
            <label>Other</label>
        </type>
    </credit_cards>
    <groups>
        <group id="offline">
            <label>Offline Payment Methods</label>
        </group>
    </groups>
    <methods>
        <method name="authorizenet_directpost">
            <deny_multiple_address>1</deny_multiple_address>
        </method>
        <method name="googlecheckout">
            <deny_multiple_address>1</deny_multiple_address>
        </method>
        <method name="ogone">
            <deny_multiple_address>1</deny_multiple_address>
        </method>
        <method name="paypal_express">
            <deny_multiple_address>1</deny_multiple_address>
        </method>
        <method name="hosted_pro">
            <deny_multiple_address>1</deny_multiple_address>
        </method>
        <method name="payflow_link">
            <deny_multiple_address>1</deny_multiple_address>
        </method>
        <method name="paypal_standard">
            <deny_multiple_address>1</deny_multiple_address>
        </method>
        <method name="firstdata">
            <deny_multiple_address>1</deny_multiple_address>
        </method>
        <method name="payone_gate">
            <deny_multiple_address>1</deny_multiple_address>
        </method>
        <method name="sagepay_direct">
            <deny_multiple_address_if3dsecure>1</deny_multiple_address_if3dsecure>
        </method>
    </methods>
</payment>
