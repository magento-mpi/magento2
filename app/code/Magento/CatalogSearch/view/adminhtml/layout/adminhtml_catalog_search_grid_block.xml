<layout version="0.1.0">
    <adminhtml_catalog_search_grid_block>
        <reference name="adminhtml.catalog.search.grid.container">
            <block type="Magento_Backend_Block_Widget_Grid" name="adminhtml.catalog.search.grid" as="grid">
                <arguments>
                    <id>catalog_search_grid</id>
                    <dataSource type="object">Magento_CatalogSearch_Model_Resource_Query_Collection</dataSource>
                    <default_sort>name</default_sort>
                    <default_dir>ASC</default_dir>
                    <save_parameters_in_session>1</save_parameters_in_session>
                </arguments>
                <block type="Magento_Backend_Block_Widget_Grid_Massaction" name="adminhtml.catalog.search.grid.massaction" as="grid.massaction">
                    <arguments>
                        <massaction_id_field>query_id</massaction_id_field>
                        <form_field_name>search</form_field_name>
                        <use_select_all>1</use_select_all>
                        <options>
                            <delete>
                                <label translate="true">Delete</label>
                                <url>*/*/massDelete</url>
                                <confirm translate="true">Are you sure?</confirm>
                            </delete>
                        </options>
                    </arguments>
                </block>
                <block type="Magento_Backend_Block_Widget_Grid_ColumnSet" name="adminhtml.catalog.search.grid.columnSet" as="grid.columnSet">
                    <arguments>
                        <rowUrl>
                            <path>*/*/edit</path>
                            <extraParamsTemplate>
                                <id>getId</id>
                            </extraParamsTemplate>
                        </rowUrl>
                    </arguments>
                    <block type="Magento_Backend_Block_Widget_Grid_Column" as="search_query">
                        <arguments>
                            <header translate="true">Search Query</header>
                            <index>query_text</index>
                        </arguments>
                    </block>
                    <block type="Magento_Backend_Block_Widget_Grid_Column_Multistore" as="store_id">
                        <arguments>
                            <header translate="true">Store</header>
                            <type>store</type>
                            <id>store_id</id>
                            <index>store_id</index>
                            <store_view>1</store_view>
                            <sortable>0</sortable>
                        </arguments>
                    </block>
                    <block type="Magento_Backend_Block_Widget_Grid_Column" as="num_results">
                        <arguments>
                            <header translate="true">Results</header>
                            <index>num_results</index>
                            <type>number</type>
                        </arguments>
                    </block>
                    <block type="Magento_Backend_Block_Widget_Grid_Column" as="popularity">
                        <arguments>
                            <header translate="true">Uses</header>
                            <index>popularity</index>
                            <type>number</type>
                        </arguments>
                    </block>
                    <block type="Magento_Backend_Block_Widget_Grid_Column" as="synonym_for">
                        <arguments>
                            <header translate="true">Synonym</header>
                            <index>synonym_for</index>
                            <align>left</align>
                            <width>160px</width>
                        </arguments>
                    </block>
                    <block type="Magento_Backend_Block_Widget_Grid_Column" as="redirect">
                        <arguments>
                            <header translate="true">Redirect URL</header>
                            <align>left</align>
                            <index>redirect</index>
                            <width>200px</width>
                        </arguments>
                    </block>
                    <block type="Magento_Backend_Block_Widget_Grid_Column" as="display_in_terms">
                        <arguments>
                            <header translate="true">Suggested Terms</header>
                            <sortable>1</sortable>
                            <index>display_in_terms</index>
                            <width>100px</width>
                            <align>left</align>
                            <type>options</type>
                            <options>
                                <yes>
                                    <value>1</value>
                                    <label translate="true">yes</label>
                                </yes>
                                <no>
                                    <value>0</value>
                                    <label translate="true">no</label>
                                </no>
                            </options>
                        </arguments>
                    </block>
                    <block type="Magento_Backend_Block_Widget_Grid_Column" as="action">
                        <arguments>
                            <type>action</type>
                            <header translate="true">Action</header>
                            <width>100px</width>
                            <filter>0</filter>
                            <sortable>0</sortable>
                            <index>query_id</index>
                            <actions>
                                <edit>
                                    <caption translate="true">Edit</caption>
                                    <url>
                                        <base>*/*/edit</base>
                                    </url>
                                    <field>id</field>
                                </edit>
                            </actions>
                        </arguments>
                    </block>
                </block>
            </block>
        </reference>
    </adminhtml_catalog_search_grid_block>
</layout>
