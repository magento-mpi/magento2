<layout version="0.1.0">
    <catalogsearch_advanced_index translate="label" type="page" parent="default">
        <label>Advanced Search Form</label>
        <reference name="root">
            <action method="setTemplate">
                <template>2columns-right.phtml</template>
            </action>
        </reference>
        <reference name="head">
            <action method="setTitle" translate="title">
                <title>Advanced Search</title>
            </action>
        </reference>
        <update handle="page_calendar"/>
        <reference name="content">
            <block type="Magento_CatalogSearch_Block_Advanced_Form" name="catalogsearch_advanced_form" template="advanced/form.phtml"/>
            <block type="Magento_Core_Block_Html_Calendar" name="html_calendar" as="html_calendar" template="Magento_Page::js/calendar.phtml"/>
        </reference>
    </catalogsearch_advanced_index>
</layout>
