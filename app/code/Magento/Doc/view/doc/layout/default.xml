<layout xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="../../../../Core/etc/layout_single.xsd">
    <block class="Magento\Doc\Ui\Page" name="root" output="1" template="Magento_Doc::html/page/default.xhtml">
        <block class="Magento\Theme\Block\Html\Head" name="head" as="head" template="Magento_Doc::html/page/element/head.phtml">
            <block class="Magento\Theme\Block\Html\Head\Css" name="css-styles-css">
                <arguments>
                    <argument name="file" xsi:type="string">css/styles.css</argument>
                </arguments>
            </block>
        </block>
        <container name="page_top" as="page_top" label="After Page Header">
            <block class="Magento\Doc\Ui\Widget\Navigation\Top" name="main_navigation" template="Magento_Doc::html/widget/navigation/top.phtml" ttl="3600"/>
            <container name="top.container" as="topContainer" label="After Page Header Top" htmlTag="div"
                htmlClass="top-container"/>
        </container>
        <container name="main" as="main" label="Main Content Container" htmlTag="div" htmlClass="column main">
            <container name="content.top" label="Main Content Top"/>
            <container name="content" label="Main Content Area"/>
            <container name="content.aside" label="Main Content Aside"/>
            <container name="content.bottom" label="Main Content Bottom"/>
        </container>
        <container name="sidebar.main" as="sidebar_main" label="Sidebar Main"/>
        <container name="sidebar.additional" as="sidebar_additional" label="Sidebar Additional"/>
    </block>
    <update handle="default_head_blocks"/>
</layout>
