<layout xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="../../../../Core/etc/layout_generic.xsd">
    <container name="root">
        <block class="Magento\Doc\Ui\Page" name="page.content" template="Magento_Doc::html/page/default.xhtml">
            <head>
                <css src="css/styles.css"/>
            </head>
            <container name="page.header" as="header" label="Page Header">
                <block class="Magento\Doc\Ui\Widget\Navigation\Top" name="main_navigation" template="Magento_Doc::html/widget/navigation/top.phtml" ttl="3600"/>
            </container>
            <container name="column.toolbar" as="toolbar" label="Toolbar" htmlTag="div" htmlClass="column-toolbar"/>
            <container name="column.main" as="content" label="Main Content" htmlTag="div" htmlClass="column-main"/>
            <container name="column.sidebar" as="sidebar" label="Sidebar" htmlTag="div" htmlClass="column-sidebar"/>
        </block>
    </container>
    <update handle="default_head_blocks"/>
</layout>
