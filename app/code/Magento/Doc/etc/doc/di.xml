    <type name="Magento\Framework\View\Layout">
        <arguments>
            <argument name="area" xsi:type="string">doc</argument>
        </arguments>
    </type>
    <type name="Magento\Core\Model\View\Design">
        <arguments>
            <argument name="themes" xsi:type="array">
                <item name="doc" xsi:type="string">Magento/blank</item>
            </argument>
        </arguments>
    </type>
</config>
