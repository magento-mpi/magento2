<layout version="0.1.0">
    <adminhtml_report_customer_orders_grid>
        <update handle="adminhtml_report_grid"/>
        <reference name="adminhtml.report.grid">
            <arguments>
                <id>gridOrdersCustomer</id>
                <dataSource type="object">Magento_Reports_Model_Resource_Customer_Orders_Collection_Initial</dataSource>
            </arguments>
        </reference>
        <reference name="adminhtml.report.grid.export">
            <arguments>
                <exportTypes>
                    <csv>
                        <urlPath>*/*/exportOrdersCsv</urlPath>
                    </csv>
                    <excel>
                        <urlPath>*/*/exportOrdersExcel</urlPath>
                    </excel>
                </exportTypes>
            </arguments>
        </reference>
        <reference name="adminhtml.report.grid.columnSet">
            <arguments>
                <count_totals>1</count_totals>
            </arguments>
            <block type="Magento_Backend_Block_Widget_Grid_Column" as="name">
                <arguments>
                    <header translate="true">Customer</header>
                    <sortable>0</sortable>
                    <type>text</type>
                    <index>name</index>
                    <id>name</id>
                    <column_css_class>col-name</column_css_class>
                    <header_css_class>col-name</header_css_class>
                </arguments>
            </block>
            <block type="Magento_Backend_Block_Widget_Grid_Column" as="orders_count">
                <arguments>
                    <header translate="true">Orders</header>
                    <sortable>0</sortable>
                    <type>number</type>
                    <index>orders_count</index>
                    <total>sum</total>
                    <id>orders_count</id>
                    <column_css_class>col-qty</column_css_class>
                    <header_css_class>col-qty</header_css_class>
                </arguments>
            </block>
            <block type="Magento_Backend_Block_Widget_Grid_Column" as="orders_avg_amount">
                <arguments>
                    <header translate="true">Average</header>
                    <sortable>0</sortable>
                    <type>currency</type>
                    <total>orders_sum_amount/orders_count</total>
                    <index>orders_avg_amount</index>
                    <id>orders_avg_amount</id>
                    <column_css_class>col-average</column_css_class>
                    <header_css_class>col-average</header_css_class>
                </arguments>
            </block>
            <block type="Magento_Backend_Block_Widget_Grid_Column" as="orders_sum_amount">
                <arguments>
                    <header translate="true">Total</header>
                    <sortable>0</sortable>
                    <type>currency</type>
                    <total>sum</total>
                    <index>orders_sum_amount</index>
                    <id>orders_sum_amount</id>
                    <column_css_class>col-total</column_css_class>
                    <header_css_class>col-total</header_css_class>
                </arguments>
            </block>
        </reference>
    </adminhtml_report_customer_orders_grid>
</layout>
