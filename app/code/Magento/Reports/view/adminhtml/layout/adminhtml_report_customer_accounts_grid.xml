<layout xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
    <handle id="adminhtml_report_customer_accounts_grid">
        <update handle="adminhtml_report_grid"/>
        <reference name="adminhtml.report.grid">
            <arguments>
                <id>gridAccounts</id>
                <dataSource type="object">Magento_Reports_Model_Resource_Accounts_Collection_Initial</dataSource>
            </arguments>
        </reference>
        <reference name="adminhtml.report.grid.export">
            <arguments>
                <exportTypes>
                    <csv>
                        <urlPath>*/*/exportAccountsCsv</urlPath>
                    </csv>
                    <excel>
                        <urlPath>*/*/exportAccountsExcel</urlPath>
                    </excel>
                </exportTypes>
            </arguments>
        </reference>
        <reference name="adminhtml.report.grid.columnSet">
            <arguments>
                <id>gridAccounts</id>
                <count_totals>1</count_totals>
            </arguments>
            <block class="Magento_Backend_Block_Widget_Grid_Column" as="accounts">
                <arguments>
                    <header translate="true">New Accounts</header>
                    <index>accounts</index>
                    <total>sum</total>
                    <type>number</type>
                    <id>accounts</id>
                    <column_css_class>col-qty</column_css_class>
                    <header_css_class>col-qty</header_css_class>
                </arguments>
            </block>
        </reference>
    </handle>
</layout>
