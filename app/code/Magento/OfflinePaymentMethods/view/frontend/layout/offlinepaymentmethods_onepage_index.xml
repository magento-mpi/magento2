<layout xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
    <update handle="checkout.onepage"/>
    <referenceContainer name="payment">
        <block class="Magento\Checkout\Block\Onepage\Payment\Methods" name="checkout.payment.methods" as="methods" template="onepage/payment/methods.phtml" cacheable="false" before="additional">
            <action method="setMethodFormTemplate">
                <argument name="method" xsi:type="string">purchaseorder</argument>
                <argument name="template" xsi:type="string">Magento_Payment::form/purchaseorder.phtml</argument>
            </action>
        </block>
    </referenceContainer>
</layout>
