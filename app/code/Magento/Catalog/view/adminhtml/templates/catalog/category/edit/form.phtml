    if (activeAnchor.length) {
        $('active_tab_id').value = activeAnchor.prop('id');
    }
    $('active_tab_id').tabsJsObject = jQuery('#<?php echo $tabsBlock->getId() ?>');
        <?php endif; ?>
</script>
