/** @var $this Magento_Catalog_Block_Product_Configurable_AttributeSelector */
?>
<script type="text/javascript">
jQuery(function($) {
    var options = <?php echo Mage::helper('Magento_Core_Helper_Data')->jsonEncode($this->getSuggestWidgetOptions())?>;
    $('#configurable-attribute-selector')
        .mage('suggest', options)
        .on('suggestselect', function (event, ui) {
            if (ui.item.id) {
                $('#configurable-attributes-container').trigger('add', ui.item);
            }
            $(this).val('');
            return false;
        })
        .on('suggestresponse', function(e, data, renderer) {
            var items = [];
            $.each(data, function(index, item) {
                if (!$('#configurable_attribute_' + item.id ).length) {
                    items.push(item);
                }
            })
            renderer(items);
            return false;
        })
});
</script>
