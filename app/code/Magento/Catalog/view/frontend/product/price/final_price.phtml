<?php
/** @var \Magento\Catalog\Pricing\Render\FinalPriceBox $this */

$id = $this->getSaleableItem()->getId();

/** @var \Magento\Catalog\Pricing\Price\RegularPrice $priceModel */
$priceModel = $this->getPriceType('regular_price');

/** @var \Magento\Catalog\Pricing\Price\FinalPrice $finalPriceModel */
$finalPriceModel = $this->getPriceType('final_price');
?>
<?php
if (isset($_GET['showmeprice'])) {
    echo 'Regular Price :' . $this->getPriceType('regular_price')->getDisplayValue() . "<br />";
    echo 'Special Price :' . $this->getPriceType('special_price')->getDisplayValue(). "<br />";
    echo 'Group Price :' . $this->getPriceType('group_price')->getDisplayValue(). "<br />";
    echo 'Catalog Rule Price :' . $this->getPriceType('catalog_rule_price')->getDisplayValue(). "<br />";
    echo 'Tier Price :' . $this->getPriceType('tier_price')->getDisplayValue(). "<br />";
    echo 'Base Price :' . $this->getPriceType('base_price')->getDisplayValue(). "<br />";
    echo 'Final Price :' . $this->getPriceType('final_price')->getDisplayValue(). "<br />";
    echo  "<br />";
}

?>
<?php if ($this->showSpecialPrice()): ?>
    <p class="old-price">
        <?php echo $this->renderAmount($priceModel, [
            'display_label'     => __('Regular Price:'),
            'price_id'          => $this->getPriceId() ? $this->getPriceId() : 'old-price-' . $id,
            'include_container' => true,
            'skip_adjustments'  => true
        ]); ?>
    </p>
    <p class="special-price">
        <?php echo $this->renderAmount($finalPriceModel, [
            'display_label'     => __('Special Price:'),
            'price_id'          => $this->getPriceId() ? $this->getPriceId() : 'old-price-' . $id,
            'include_container' => false
        ]); ?>
    </p>
<?php else: ?>
    <?php echo $this->renderAmount($finalPriceModel, [
        'price_id'          => $this->getPriceId() ? $this->getPriceId() : 'regular-price-' . $id,
        'include_container' => true
    ]); ?>
<?php endif; ?>


<?php if ($this->showMinimalPrice()): ?>
    <?php if ($this->getUseLinkForAsLowAs()):?>
        <a href="<?php echo $this->getSaleableItem()->getProductUrl(); ?>" class="minimal-price-link">
            <?php echo $this->renderAmountMinimal(); ?>
        </a>
    <?php else:?>
        <span class="minimal-price-link">
            <?php echo $this->renderAmountMinimal(); ?>
        </span>
    <?php endif?>

<?php endif; ?>
