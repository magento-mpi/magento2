<layout xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
    <block class="Magento\View\Element\RendererList" name="price.render.prices">
        <block class="Magento\Pricing\Render\PriceBox" name="product.type.default.price.default" as="default.default"
               template="Magento_Catalog::product/price/default.phtml"/>
        <block class="Magento\Catalog\Pricing\Render\FinalPriceBox" name="product.default.price.final_price" as="default.final_price"
               template="Magento_Catalog::product/price/final_price.phtml">
            <arguments>
                <argument name="amount_render" xsi:type="string">Magento\Pricing\Render\Amount</argument>
                <argument name="amount_render_template" xsi:type="string">Magento_Catalog::product/price/default/amount.phtml</argument>
            </arguments>
            <block class="Magento\Pricing\Render\PriceBox" name="msrp" as="price.render"
                   template="Magento_Catalog::product/price/msrp_item.phtml">
                <arguments>
                    <argument name="amount_render" xsi:type="string">Magento\Pricing\Render\Amount</argument>
                    <argument name="amount_render_template" xsi:type="string">Magento_Catalog::product/price/default/amount.phtml</argument>
                </arguments>
            </block>
        </block>
        <block class="Magento\Pricing\Render\PriceBox" name="product.default.price.tier_prices" as="default.tier_price"
               template="Magento_Catalog::product/price/tier_prices.phtml">
            <arguments>
                <argument name="amount_render" xsi:type="string">Magento\Pricing\Render\Amount</argument>
                <argument name="amount_render_template" xsi:type="string">Magento_Catalog::product/price/default/amount.phtml</argument>
            </arguments>
       </block>
    </block>

    <block class="Magento\View\Element\RendererList" name="price.render.adjustments" />
</layout>
