<layout version="0.1.0">
    <default>
        <reference name="head">
            <action method="addCss">
                <file>Magento_Catalog::widgets.css</file>
            </action>
        </reference>
        <reference name="left">
            <block type="Magento_Core_Block_Template" name="left.permanent.callout" template="Magento_Page::callouts/left_col.phtml">
                <action method="setImgSrc">
                    <src>Magento_Catalog::images/media/col_left_callout.jpg</src>
                </action>
                <action method="setImgAlt" translate="alt">
                    <alt>Our customer service is available 24/7.</alt>
                </action>
                <action method="setLinkUrl">
                    <url>checkout/cart</url>
                </action>
            </block>
        </reference>
        <reference name="right">
            <block type="Magento_Catalog_Block_Product_Compare_Sidebar" before="cart_sidebar" name="catalog.compare.sidebar" template="product/compare/sidebar.phtml"/>
            <block type="Magento_Core_Block_Template" name="right.permanent.callout" template="Magento_Page::callouts/right_col.phtml">
                <action method="setImgSrc">
                    <src>Magento_Catalog::images/media/col_right_callout.jpg</src>
                </action>
                <action method="setImgAlt" translate="alt">
                    <alt>Look for our special back-to-school items and save bunches!</alt>
                </action>
            </block>
        </reference>
        <block type="Magento_Catalog_Block_Product_Price_Template" name="catalog_product_price_template"/>
        <reference name="catalog_product_price_template">
            <action method="addPriceBlockType">
                <type>msrp</type>
                <block>Magento_Catalog_Block_Product_Price</block>
                <template>product/price_msrp.phtml</template>
            </action>
            <action method="addPriceBlockType">
                <type>msrp_item</type>
                <block>Magento_Catalog_Block_Product_Price</block>
                <template>product/price_msrp_item.phtml</template>
            </action>
            <action method="addPriceBlockType">
                <type>msrp_noform</type>
                <block>Magento_Catalog_Block_Product_Price</block>
                <template>product/price_msrp_noform.phtml</template>
            </action>
        </reference>
    </default>
</layout>
