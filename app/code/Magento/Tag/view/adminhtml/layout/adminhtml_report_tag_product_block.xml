<layout version="0.1.0">
    <adminhtml_report_tag_product_block>
        <reference name="report.tag.product.container">
            <block type="Magento_Backend_Block_Widget_Grid" name="adminhtml.report.tag.product.grid" as="grid">
                <arguments>
                    <id>gridProducts</id>
                    <dataSource type="object">Magento_Tag_Model_Resource_Reports_Product_Grid_Collection</dataSource>
                </arguments>
                <block type="Magento_Backend_Block_Widget_Grid_Export" name="adminhtml.report.tag.product.grid.export" as="grid.export">
                    <arguments>
                        <exportTypes>
                            <csv>
                                <urlPath>*/*/exportProductCsv</urlPath>
                                <label translate="true">CSV</label>
                            </csv>
                            <excel>
                                <urlPath>*/*/exportProductExcel</urlPath>
                                <label translate="true">Excel XML</label>
                            </excel>
                        </exportTypes>
                    </arguments>
                </block>
                <block type="Magento_Backend_Block_Widget_Grid_ColumnSet" as="grid.columnSet" name="adminhtml.report.tag.product.grid.columnSet">
                    <arguments>
                        <filter_visibility>0</filter_visibility>
                        <rowUrl>
                            <path>*/*/productDetail</path>
                            <extraParamsTemplate>
                                <id>getId</id>
                            </extraParamsTemplate>
                        </rowUrl>
                    </arguments>
                    <block type="Magento_Backend_Block_Widget_Grid_Column" as="entity_id">
                        <arguments>
                            <header translate="true">ID</header>
                            <index>entity_id</index>
                            <column_css_class>col-id</column_css_class>
                            <header_css_class>col-id</header_css_class>
                        </arguments>
                    </block>
                    <block type="Magento_Backend_Block_Widget_Grid_Column" as="name">
                        <arguments>
                            <header translate="true">Product</header>
                            <index>name</index>
                            <column_css_class>col-product</column_css_class>
                            <header_css_class>col-product</header_css_class>
                        </arguments>
                    </block>
                    <block type="Magento_Backend_Block_Widget_Grid_Column" as="utaged">
                        <arguments>
                            <header translate="true">Unique Tags</header>
                            <index>utaged</index>
                            <column_css_class>col-unique-numbers</column_css_class>
                            <header_css_class>col-unique-numbers</header_css_class>
                        </arguments>
                    </block>
                    <block type="Magento_Backend_Block_Widget_Grid_Column" as="taged">
                        <arguments>
                            <header translate="true">Total Tags</header>
                            <index>taged</index>
                            <column_css_class>col-total-numbers</column_css_class>
                            <header_css_class>col-total-numbers</header_css_class>
                        </arguments>
                    </block>
                    <block type="Magento_Backend_Block_Widget_Grid_Column" as="action">
                        <arguments>
                            <header translate="true">Action</header>
                            <type>action</type>
                            <getter>getId</getter>
                            <index>stores</index>
                            <is_system>1</is_system>
                            <filter>0</filter>
                            <sortable>0</sortable>
                            <actions>
                                <show_tag>
                                    <caption translate="true">Show Tags</caption>
                                    <url>
                                        <base>*/*/productDetail</base>
                                    </url>
                                    <field>id</field>
                                </show_tag>
                            </actions>
                            <column_css_class>col-actions</column_css_class>
                            <header_css_class>col-actions</header_css_class>
                        </arguments>
                    </block>
                </block>
            </block>
        </reference>
    </adminhtml_report_tag_product_block>
</layout>
