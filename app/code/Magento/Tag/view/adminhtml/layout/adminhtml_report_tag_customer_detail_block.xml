<layout version="0.1.0">
    <adminhtml_report_tag_customer_detail_block>
        <reference name="report.tag.customer.detail.container">
            <block type="Magento_Backend_Block_Widget_Grid" name="adminhtml.report.tag.customer.detail.grid" as="grid">
                <arguments>
                    <id>customers_grid</id>
                    <dataSource type="object">Magento_Tag_Model_Resource_Reports_Customer_Detail_Collection</dataSource>
                </arguments>
                <block type="Magento_Backend_Block_Widget_Grid_Export" name="adminhtml.report.tag.customer.detail.grid.export" as="grid.export">
                    <arguments>
                        <exportTypes>
                            <csv>
                                <urlPath>*/*/exportCustomerDetailCsv</urlPath>
                                <label translate="true">CSV</label>
                            </csv>
                            <excel>
                                <urlPath>*/*/exportCustomerDetailExcel</urlPath>
                                <label translate="true">Excel XML</label>
                            </excel>
                        </exportTypes>
                    </arguments>
                </block>
                <block type="Magento_Backend_Block_Widget_Grid_ColumnSet" as="grid.columnSet" name="adminhtml.report.tag.customer.detail.grid.columnSet">
                    <arguments>
                        <filter_visibility>0</filter_visibility>
                    </arguments>
                    <block type="Magento_Backend_Block_Widget_Grid_Column" as="name">
                        <arguments>
                            <header translate="true">Product</header>
                            <index>original_name</index>
                        </arguments>
                    </block>
                    <block type="Magento_Backend_Block_Widget_Grid_Column" as="tag_name">
                        <arguments>
                            <header translate="true">Tag</header>
                            <index>tag_name</index>
                        </arguments>
                    </block>
                    <block type="Magento_Backend_Block_Widget_Grid_Column_Multistore" as="visible">
                        <arguments>
                            <header translate="true">Visibility</header>
                            <sortable>0</sortable>
                            <index>stores</index>
                            <type>store</type>
                            <store_view>1</store_view>
                        </arguments>
                    </block>
                    <block type="Magento_Backend_Block_Widget_Grid_Column" as="added_in">
                        <arguments>
                            <header translate="true">Submit Locale</header>
                            <index>store_id</index>
                            <type>store</type>
                            <store_view>1</store_view>
                        </arguments>
                    </block>
                    <block type="Magento_Backend_Block_Widget_Grid_Column" as="created_at">
                        <arguments>
                            <header translate="true">Submit Date</header>
                            <index>created_at</index>
                            <width>140px</width>
                            <type>datetime</type>
                        </arguments>
                    </block>
                </block>
            </block>
        </reference>
    </adminhtml_report_tag_customer_detail_block>
</layout>
