<layout version="0.1.0">
    <adminhtml_report_tag_detail_block>
        <reference name="report.tag.detail.container">
            <block type="Magento_Backend_Block_Widget_Grid" name="adminhtml.report.tag.detail.grid" as="grid">
                <arguments>
                    <id>tag_grid</id>
                    <dataSource type="object">Magento_Tag_Model_Resource_Reports_Detail_Collection</dataSource>
                </arguments>
                <block type="Magento_Backend_Block_Widget_Grid_Export" name="adminhtml.report.tag.detail.grid.export" as="grid.export">
                    <arguments>
                        <exportTypes>
                            <csv>
                                <urlPath>*/*/exportTagDetailCsv</urlPath>
                                <label translate="true">CSV</label>
                            </csv>
                            <excel>
                                <urlPath>*/*/exportTagDetailExcel</urlPath>
                                <label translate="true">Excel XML</label>
                            </excel>
                        </exportTypes>
                    </arguments>
                </block>
                <block type="Magento_Backend_Block_Widget_Grid_ColumnSet" as="grid.columnSet" name="adminhtml.report.tag.detail.grid.columnSet">
                    <arguments>
                        <filter_visibility>0</filter_visibility>
                    </arguments>
                    <block type="Magento_Backend_Block_Widget_Grid_Column" as="firstname">
                        <arguments>
                            <header translate="true">First Name</header>
                            <index>firstname</index>
                        </arguments>
                    </block>
                    <block type="Magento_Backend_Block_Widget_Grid_Column" as="lastname">
                        <arguments>
                            <header translate="true">Last Name</header>
                            <index>lastname</index>
                        </arguments>
                    </block>
                    <block type="Magento_Backend_Block_Widget_Grid_Column" as="product">
                        <arguments>
                            <header translate="true">Product</header>
                            <index>product_name</index>
                        </arguments>
                    </block>
                    <block type="Magento_Backend_Block_Widget_Grid_Column_Multistore" as="added_in">
                        <arguments>
                            <header translate="true">Submit Locale</header>
                            <index>added_in</index>
                            <type>store</type>
                            <store_view>1</store_view>
                        </arguments>
                    </block>
                </block>
            </block>
        </reference>
    </adminhtml_report_tag_detail_block>
</layout>
