<layout version="0.1.0">
    <adminhtml_giftregistry_grid_block>
        <reference name="adminhtml.giftregistry.grid.container">
            <block type="Magento_Backend_Block_Widget_Grid" name="adminhtml.giftregistry.grid" as="grid">
                <arguments>
                    <id>giftregistryGrid</id>
                    <dataSource type="object">Magento_GiftRegistry_Model_Resource_GiftRegistry_Collection</dataSource>
                    <default_sort>type_id</default_sort>
                    <default_dir>ASC</default_dir>
                </arguments>
                <block type="Magento_Backend_Block_Widget_Grid_ColumnSet" name="adminhtml.giftregistry.grid.columnSet" as="grid.columnSet">
                    <arguments>
                        <rowUrl>
                            <path>*/*/edit</path>
                            <extraParamsTemplate>
                                <id>getId</id>
                            </extraParamsTemplate>
                        </rowUrl>
                    </arguments>
                    <block type="Magento_Backend_Block_Widget_Grid_Column" as="type_id">
                        <arguments>
                            <header translate="true">ID</header>
                            <align>right</align>
                            <width>50px</width>
                            <index>type_id</index>
                        </arguments>
                    </block>
                    <block type="Magento_Backend_Block_Widget_Grid_Column" as="code">
                        <arguments>
                            <header translate="true">Code</header>
                            <index>code</index>
                        </arguments>
                    </block>
                    <block type="Magento_Backend_Block_Widget_Grid_Column" as="label">
                        <arguments>
                            <header translate="true">Label</header>
                            <index>label</index>
                        </arguments>
                    </block>
                    <block type="Magento_Backend_Block_Widget_Grid_Column" as="sort_order">
                        <arguments>
                            <header translate="true">Sort Order</header>
                            <index>sort_order</index>
                            <default>-</default>
                        </arguments>
                    </block>
                    <block type="Magento_Backend_Block_Widget_Grid_Column" as="is_listed">
                        <arguments>
                            <header translate="true">Listed</header>
                            <index>is_listed</index>
                            <type>options</type>
                            <type>options</type>
                            <options>
                                <yes>
                                    <value>1</value>
                                    <label translate="true">Yes</label>
                                </yes>
                                <no>
                                    <value>0</value>
                                    <label translate="true">No</label>
                                </no>
                            </options>
                        </arguments>
                    </block>
                </block>
            </block>
        </reference>
    </adminhtml_giftregistry_grid_block>
</layout>
