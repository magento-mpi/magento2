<layout xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
    <update handle="customer_account"/>
    <update handle="page_calendar"/>
    <referenceBlock name="customer_account_navigation">
        <action method="setActive">
            <argument name="path" xsi:type="string">magento_giftregistry/index/index</argument>
        </action>
    </referenceBlock>
    <referenceBlock name="customer-account-navigation-giftregistry-link">
        <arguments>
            <argument name="is_highlighted" xsi:type="boolean">true</argument>
        </arguments>
    </referenceBlock>
    <referenceContainer name="content">
        <block class="Magento\GiftRegistry\Block\Customer\Edit" name="giftregistry_edit" template="edit/edit.phtml">
            <action method="addInputTypeTemplate">
                <argument name="type" xsi:type="string">text</argument>
                <argument name="template" xsi:type="string">Magento_GiftRegistry::attributes/text.phtml</argument>
            </action>
            <action method="addInputTypeTemplate">
                <argument name="type" xsi:type="string">region</argument>
                <argument name="template" xsi:type="string">Magento_GiftRegistry::attributes/region.phtml</argument>
            </action>
            <block class="Magento\GiftRegistry\Block\Customer\Edit\Registry" name="giftregistry_edit_registry" template="edit/registry.phtml"/>
            <block class="Magento\GiftRegistry\Block\Customer\Edit\Registrants" name="giftregistry_edit_registrants" template="edit/registrants.phtml"/>
            <block class="Magento\GiftRegistry\Block\Customer\Address\Edit" name="giftregistry_address_edit" template="address/edit.phtml"/>
        </block>
    </referenceContainer>
</layout>
