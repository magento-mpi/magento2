<layout version="0.1.0">
    <catalog_product_view>
        <reference name="product.info">
            <block type="Magento_GiftRegistry_Block_Product_View" name="giftregistry.product.view.customize.button">
                <action method="setGiftRegistryTemplate">
                    <blockName>product.info.addtocart.additional</blockName>
                    <template>Magento_GiftRegistry::product/addtocart.phtml</template>
                </action>
                <action method="setGiftRegistryUrl">
