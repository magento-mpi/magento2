<layout xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
    <referenceBlock name="head">
        <block class="Magento\Theme\Block\Html\Head\Script" name="magento-giftregistry-js-opcheckout-js">
            <arguments>
                <argument name="file" xsi:type="string">Magento_GiftRegistry::js/opcheckout.js</argument>
                <argument name="properties" xsi:type="array">
                    <item name="attributes" xsi:type="string"/>
                    <item name="flag_name" xsi:type="string">giftregistry_enabled</item>
                </argument>
            </arguments>
        </block>
    </referenceBlock>
    <referenceContainer name="content">
        <block class="Magento\GiftRegistry\Block\Customer\Checkout" name="giftregistry.customer.checkout" template="customer/checkout/onepage.phtml" cacheable="false"/>
    </referenceContainer>
</layout>
