<config>
    <frontend>
        <secure_url>
            <install>/install/wizard/checkSecureHost</install>
        </secure_url>
    </frontend>
    <install>
        <databases>
            <mysql4>
                <type>pdo_mysql</type>
                <initStatements>SET NAMES utf8</initStatements>
                <min_version>4.1.20</min_version>
                <extensions>
                    <pdo_mysql>1</pdo_mysql>
                </extensions>
            </mysql4>
        </databases>
        <translate>
            <modules>
                <Magento_Install>
                    <files>
                        <default>Magento_Install.csv</default>
                    </files>
                </Magento_Install>
            </modules>
        </translate>
        <eula_file>LICENSE.html</eula_file>
    </install>
