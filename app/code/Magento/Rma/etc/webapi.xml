<routes xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="../../../../../app/code/Magento/Webapi/etc/webapi.xsd">
    <route url="/V1/returns/:return-id/tracking-numbers" method="POST">
        <service class="Magento\Rma\Service\V1\RmaWriteInterface" method="addTrack"/>
        <resources>
            <resource ref="Magento_Rma::magento_rma" />
        </resources>
    </route>
    <route url="/V1/returns/:return-id/tracking-numbers/:tracking-id" method="DELETE">
        <service class="Magento\Rma\Service\V1\RmaWriteInterface" method="removeTrackById"/>
        <resources>
            <resource ref="Magento_Rma::magento_rma" />
        </resources>
    </route>
    <route url="/V1/returns/:return-id/label" method="POST">
        <service class="Magento\Rma\Service\V1\RmaWriteInterface" method="createLabel"/>
        <resources>
            <resource ref="Magento_Rma::magento_rma" />
        </resources>
    </route>


    <route url="/V1/returns/:id/comment" method="POST">
        <service class="Magento\Rma\Service\V1\CommentWriteInterface" method="addComment"/>
        <resources>
            <resource ref="Magento_Rma::magento_rma" />
        </resources>
    </route>
    <route url="/V1/returns/:id/comments" method="GET">
        <service class="Magento\Rma\Service\V1\CommentReadInterface" method="commentsList"/>
        <resources>
            <resource ref="Magento_Rma::magento_rma" />
        </resources>
    </route>
</routes>
