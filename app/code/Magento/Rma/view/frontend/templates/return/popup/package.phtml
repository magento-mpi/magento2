                    <tr>
                        <th class="col weight"><?php echo __('Total Weight') ?></th>
                        <td class="col weight"><?php echo $params->getWeight() .' '. $this->helper('Magento\Usa\Helper\Data')->getMeasureWeightName($params->getWeightUnits()) ?></td>
