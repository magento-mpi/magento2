<?php $_returns = $this->getReturns(); ?>
<?php echo $this->getChildHtml('info');?>
<?php if($_returns->getSize()): ?>
    <?php if ($this->getPagerHtml()): ?>
        <div class="order-products-toolbar toolbar top">
            <?php echo $this->getPagerHtml(); ?>
        </div>
    <?php endif ?>
    <table class="data table table-returns" id="my-returns-table">
        <thead>
            <tr>
                <th class="col id"><?php echo __('Return #') ?></th>
                <th class="col date"><?php echo __('Date') ?></th>
                <th class="col shipping"><?php echo __('Ship From') ?></th>
                <th class="col status"><?php echo __('Return Status') ?></th>
                <th class="col actions">&nbsp;</th>
            </tr>
        </thead>
        <tbody>
            <?php $_odd = ''; ?>
            <?php foreach ($_returns as $_return): ?>
            <tr>
                <td class="col id"><?php echo $_return->getIncrementId() ?></td>
                <td class="col date"><?php echo $this->helper('Magento\Rma\Helper\Data')->getFormatedDate($_return->getDateRequested()) ?></td>
                <td class="col shipping"><?php echo $this->escapeHtml($_return->getCustomerName()) ?></td>
                <td class="col status"><?php echo $this->escapeHtml($_return->getStatusLabel()) ?></td>
                <td class="col actions">
                    <a href="<?php echo $this->getViewUrl($_return) ?>" class="action view"><span><?php echo __('View Return') ?></span></a>
                </td>
            </tr>
            <?php endforeach; ?>
        </tbody>
    </table>
    <?php if ($this->getPagerHtml()): ?>
        <div class="order-products-toolbar toolbar bottom">
            <?php echo $this->getPagerHtml(); ?>
        </div>
    <?php endif ?>
<?php else: ?>
    <div class="message info empty"><span><?php echo __('You have placed no returns.'); ?></span></div>
<?php endif ?>
