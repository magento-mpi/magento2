<?php $_returns = $this->getReturns(); ?>
<?php if($_returns->getSize()): ?>
<div class="order returns">
    <?php echo $this->getChildHtml('info');?>
    <div class="toolbar">
        <?php echo $this->getPagerHtml(); ?>
    </div>
    <div class="title"><span><?php echo __('My Returns') ?></span></div>
    <?php echo $this->getLayout()->getMessagesBlock()->getGroupedHtml() ?>
    <?php echo $this->getChildHtml('info');?>
    <table class="data table returns items" id="my-returns-table">
        <thead>
            <tr>
                <th class="col id"><?php echo __('Return #') ?></th>
                <th class="col date"><?php echo __('Date') ?></th>
                <th class="col shipping"><?php echo __('Ship From') ?></th>
