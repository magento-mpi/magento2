            </tr>
        </thead>
        <tbody>
            <?php $_odd = ''; ?>
            <?php foreach ($_returns as $_return): ?>
            <tr>
                <td class="col id"><?php echo $_return->getIncrementId() ?></td>
                <td class="col date"><?php echo $this->helper('Magento\Rma\Helper\Data')->getFormatedDate($_return->getDateRequested()) ?></td>
                <td class="col shipping"><?php echo $this->escapeHtml($_return->getCustomerName()) ?></td>
                <td class="col status"><?php echo $this->escapeHtml($_return->getStatusLabel()) ?></td>
                <td class="col actions">
                    <a href="<?php echo $this->getViewUrl($_return) ?>" class="cation view"><span><?php echo __('View Return') ?></span></a>
                </td>
            </tr>
            <?php endforeach; ?>
        </tbody>
    </table>
