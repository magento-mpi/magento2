<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="../../../../../../../lib/internal/Magento/Framework/View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceBlock name="sales.order.info.links">
            <block class="Magento\Rma\Block\Order\Link" name="sales.order.info.links.returns">
                <arguments>
                    <argument name="path" xsi:type="string">rma/returns/returns</argument>
                    <argument name="label" xsi:type="string">Returns</argument>
                </arguments>
            </block>
        </referenceBlock>
        <referenceBlock name="sales.order.info.buttons">
            <block class="Magento\Rma\Block\Order\Button" name="magento.rma.info.button" template="order/button.phtml"/>
        </referenceBlock>
    </body>
</page>
