<layout version="0.1.0">
    <magento_rma_return_create_handle translate="label" type="page" parent="default">
        <label>RMA Return Create</label>
        <reference name="content">
            <block name="magento_rma_item_form_template" type="Magento_CustomAttribute_Block_Form_Template">
                <action method="addRenderer">
                    <type>text</type>
                    <renderer_block>Magento_CustomAttribute_Block_Form_Renderer_Text</renderer_block>
                    <template>Magento_Rma::form/renderer/text.phtml</template>
                </action>
                <action method="addRenderer">
                    <type>textarea</type>
                    <renderer_block>Magento_CustomAttribute_Block_Form_Renderer_Textarea</renderer_block>
                    <template>Magento_Rma::form/renderer/textarea.phtml</template>
                </action>
                <action method="addRenderer">
                    <type>select</type>
                    <renderer_block>Magento_Rma_Block_Form_Renderer_Select</renderer_block>
                    <template>form/renderer/select.phtml</template>
                </action>
                <action method="addRenderer">
                    <type>image</type>
                    <renderer_block>Magento_Rma_Block_Form_Renderer_Image</renderer_block>
                    <template>form/renderer/image.phtml</template>
                </action>
            </block>
        </reference>
    </magento_rma_return_create_handle>
</layout>
