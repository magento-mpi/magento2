<layout xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" label="Guest Order View Return" type="page" parent="magento_rma_return_view_handle">
    <referenceBlock name="root">
        <action method="setTemplate">
            <argument name="template" xsi:type="string">1column.phtml</argument>
        </action>
    </referenceBlock>
    <update handle="customer_account"/>
    <referenceContainer name="content">
        <block class="Magento\Sales\Block\Order\Info" as="info" name="sales.order.info">
            <block class="Magento\Sales\Block\Order\Info\Buttons" as="buttons" name="sales.order.info.buttons">
                <block class="Magento\Rma\Block\Order\Button" name="magento.rma.info.button" template="order/button.phtml"/>
            </block>
        </block>
        <block class="Magento\Rma\Block\Returns\View" name="rma.return.history">
            <container name="rma.return.history.info" as="info" label="View Return"/>
        </block>
        <block class="Magento\Rma\Block\Returns\View" name="customer.account.link.back" template="Magento_Customer::account/link/back.phtml"/>
    </referenceContainer>
    <update handle="magento_rma_return_view_handle"/>
    <update handle="sales_order_info_rma_guest_links"/>
    <block class="Magento\Rma\Block\Returns\Tracking" name="rma.return.tracking" as="tracking"/>
</layout>
