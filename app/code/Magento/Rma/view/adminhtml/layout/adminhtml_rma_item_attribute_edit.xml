<layout version="0.1.0">
    <adminhtml_rma_item_attribute_edit>
        <update handle="scope_switcher"/>
        <reference name="content">
            <block type="Magento_Rma_Block_Adminhtml_Rma_Item_Attribute_Edit" name="magento_rma_item_attribute_edit"/>
        </reference>
        <reference name="left">
            <block type="Magento_Rma_Block_Adminhtml_Rma_Item_Attribute_Edit_Tabs" name="magento_rma_item_attribute_edit_tabs">
                <block type="Magento_Rma_Block_Adminhtml_Rma_Item_Attribute_Edit_Tab_Main" name="magento_rma_item_attribute_edit_tab_general"/>
                <action method="addTab">
                    <name>general</name>
                    <block>magento_rma_item_attribute_edit_tab_general</block>
                </action>
                <block type="Magento_Rma_Block_Adminhtml_Rma_Item_Attribute_Edit_Tab_Options" name="magento_rma_item_attribute_edit_tab_options"/>
                <action method="addTab">
                    <name>options</name>
                    <block>magento_rma_item_attribute_edit_tab_options</block>
                </action>
            </block>
        </reference>
        <reference name="js">
            <block type="Magento_Rma_Block_Adminhtml_Rma_Item_Attribute_Edit_Js" template="attribute/js.phtml"/>
        </reference>
    </adminhtml_rma_item_attribute_edit>
</layout>
