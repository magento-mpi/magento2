              <span class="label"><?php echo __('Incl. Tax'); ?>:</span>
          <?php endif; ?>

          <?php if ($_item->getWeeeTaxAppliedRowAmount() && $this->helper('Magento_Weee_Helper_Data')->typeOfDisplay($_item, 0, 'sales')): // including ?>
