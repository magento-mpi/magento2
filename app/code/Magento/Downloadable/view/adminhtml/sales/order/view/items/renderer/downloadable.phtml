              <?php endforeach; ?>
              </small>
          <?php elseif ($_item->getWeeeTaxAppliedRowAmount() && $this->helper('Magento_Weee_Helper_Data')->typeOfDisplay($_item, 2, 'sales')): // excl. + weee + final ?>
              <?php echo $this->helper('Magento_Checkout_Helper_Data')->formatPrice($this->helper('Magento_Checkout_Helper_Data')->getSubtotalInclTax($_item)); ?>
