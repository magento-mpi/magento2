<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="../../../../../../lib/Magento/Framework/Acl/etc/acl.xsd">
    <acl>
        <resources>
            <resource id="Magento_Adminhtml::admin">
                <resource id="Magento_Adminhtml::marketing">
                    <resource id="Magento_CatalogRule::promo">
                        <resource id="Magento_CatalogRule::promo_catalog">
                            <resource id="Magento_PromotionPermissions::edit" title="Edit Catalog Price Rules" />
                        </resource>
                        <resource id="Magento_SalesRule::quote">
                            <resource id="Magento_PromotionPermissions::quote_edit" title="Edit Shopping Cart Price Rules" />
                        </resource>
                    </resource>
                    <resource id="Magento_Adminhtml::marketing_communications">
                        <resource id="Magento_Reminder::magento_reminder">
                            <resource id="Magento_PromotionPermissions::magento_reminder_edit" title="Edit Automated Email Reminder Rules" />
                        </resource>
                    </resource>
                </resource>
            </resource>
        </resources>
    </acl>
</config>
