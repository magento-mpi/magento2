/**
 * Create account form template
 */
/* @var $this \Magento\CustomAttributeManagement\Block\Form\Renderer\Multiline */
?>
<?php
$fieldCssClass = 'field multiline field-' . $this->getHtmlId();
$fieldCssClass .= $this->isRequired() ? ' required' : '';
?>
<div class="<?php echo $fieldCssClass; ?>">
    <label class="label" for="<?php echo $this->getHtmlId(0)?>"><span><?php echo $this->getLabel() ?></span></label>
    <div class="control">
        <input type="text" id="<?php echo $this->getHtmlId(0)?>" name="<?php echo $this->getFieldName('')?>" value="<?php echo $this->getEscapedValue(0) ?>" class="input-text<?php echo $this->getHtmlClass(); ?>">
        <?php $_message = $this->getAdditionalDescription(); ?>
        <?php if ($this->getLineCount() == 1 && $_message) : ?>
        <div class="note"><?php echo $_message; ?></div>
        <?php endif; ?>
        <?php if ($this->getLineCount() > 1): ?>
        <div class="nested">
            <?php for ($i = 1, $lc = $this->getLineCount(); $i < $lc; $i ++): ?>
            <div class="field additional no-label">
                <div class="control">
                    <input type="text" id="<?php echo $this->getHtmlId($i)?>" name="<?php echo $this->getFieldName('')?>" value="<?php echo $this->getEscapedValue($i) ?>" class="input-text<?php echo $this->getLineHtmlClass();?>">
                <?php if ($this->getLineCount() == $i+1 && $_message) : ?>
                    <div class="note"><?php echo $_message; ?></div>
                <?php endif; ?>
                </div>
            </div>
            <?php endfor; ?>
        </div>
        <?php endif;?>
    </div>
</div>
