<layout xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
    <handle id="adminhtml_customer_attribute_edit">
        <update handle="scope_switcher"/>
        <reference name="content">
            <block class="Magento\CustomerCustomAttributes\Block\Adminhtml\Customer\Attribute\Edit" name="magento_customercustomattributes_attribute_edit"/>
        </reference>
        <reference name="left">
            <block class="Magento\CustomerCustomAttributes\Block\Adminhtml\Customer\Attribute\Edit\Tabs" name="magento_customercustomattributes_attribute_edit_tabs">
                <block class="Magento\CustomerCustomAttributes\Block\Adminhtml\Customer\Attribute\Edit\Tab\Main" name="magento_customercustomattributes_attribute_edit_tab_general"/>
                <action method="addTab">
                    <argument name="name" xsi:type="string">general</argument>
                    <argument name="block" xsi:type="string">magento_customercustomattributes_attribute_edit_tab_general</argument>
                </action>
                <block class="Magento\CustomerCustomAttributes\Block\Adminhtml\Customer\Attribute\Edit\Tab\Options" name="magento_customercustomattributes_attribute_edit_tab_options"/>
                <action method="addTab">
                    <argument name="name" xsi:type="string">options</argument>
                    <argument name="block" xsi:type="string">magento_customercustomattributes_attribute_edit_tab_options</argument>
                </action>
            </block>
        </reference>
        <reference name="js">
            <block class="Magento\CustomerCustomAttributes\Block\Adminhtml\Customer\Attribute\Edit\Js" template="attribute/js.phtml"/>
        </reference>
    </handle>
</layout>
