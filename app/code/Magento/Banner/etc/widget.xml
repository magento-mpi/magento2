<widgets>
    <magento_banner type="Magento\Banner\Block\Widget\Banner" translate="name description">
        <name>Banner Rotator</name>
        <description>Displays Specified or Promotion Banners</description>
        <placeholder_image>Magento_Banner::widget_banner.gif</placeholder_image>
        <parameters>
            <display_mode translate="label">
                <required>1</required>
                <visible>1</visible>
                <value>fixed</value>
                <label>Banners to Display</label>
                <type>select</type>
                <values>
                    <fixed translate="label">
                        <value>fixed</value>
                        <label>Specified Banners</label>
                    </fixed>
                    <salesrule translate="label">
                        <value>salesrule</value>
                        <label>Shopping Cart Promotions Related</label>
                    </salesrule>
                    <catalogrule translate="label">
                        <value>catalogrule</value>
                        <label>Catalog Promotions Related</label>
                    </catalogrule>
                </values>
            </display_mode>
            <types translate="label">
                <visible>1</visible>
                <label>Restrict by Banner Types</label>
                <type>multiselect</type>
                <source_model>Magento\Banner\Model\Config</source_model>
            </types>
            <rotate translate="label">
                <visible>1</visible>
                <label>Rotation Mode</label>
                <type>select</type>
                <values>
                    <none translate="label">
                        <value></value>
                        <label>Display all instead of rotating.</label>
                    </none>
                    <random translate="label">
                        <value>random</value>
                        <label>One at the time, Random</label>
                    </random>
                    <series translate="label">
                        <value>series</value>
                        <label>One at the time, Series</label>
                    </series>
                    <shuffle translate="label">
                        <value>shuffle</value>
                        <label>One at the time, Shuffle</label>
                    </shuffle>
                </values>
            </rotate>
            <banner_ids translate="label">
                <visible>1</visible>
                <label>Specify Banners</label>
                <type>label</type>
                <helper_block>
                    <type>\Magento\Banner\Block\Adminhtml\Widget\Chooser</type>
                </helper_block>
                <depends>
                    <display_mode>
                        <value>fixed</value>
                    </display_mode>
                </depends>
            </banner_ids>
            <template>
                <required>1</required>
                <value>widget/block.phtml</value>
                <values>
                    <block translate="label">
                        <value>widget/block.phtml</value>
                        <label>Banner Block Template</label>
                    </block>
                    <inline translate="label">
                        <value>widget/inline.phtml</value>
                        <label>Banner Inline Template</label>
                    </inline>
                </values>
            </template>
            <unique_id>
                <required>1</required>
            </unique_id>
        </parameters>
    </magento_banner>
</widgets>
