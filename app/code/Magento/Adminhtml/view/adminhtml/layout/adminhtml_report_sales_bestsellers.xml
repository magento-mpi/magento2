<layout version="0.1.0">
    <adminhtml_report_sales_bestsellers>
        <update handle="report_sales"/>
        <reference name="content">
            <block type="Magento_Adminhtml_Block_Report_Sales_Bestsellers" template="report/grid/container.phtml" name="sales.report.grid.container">
                <block type="Magento_Backend_Block_Store_Switcher" template="Magento_Reports::store/switcher/enhanced.phtml" name="store.switcher">
                    <action method="setStoreVarName">
                        <var_name>store_ids</var_name>
                    </action>
                </block>
                <block type="Magento_Sales_Block_Adminhtml_Report_Filter_Form" name="grid.filter.form">
                    <action method="setFieldVisibility">
                        <field>report_type</field>
                        <visibility>0</visibility>
                    </action>
                    <action method="setFieldVisibility">
                        <field>show_order_statuses</field>
                        <visibility>0</visibility>
                    </action>
                    <action method="setFieldVisibility">
                        <field>order_statuses</field>
                        <visibility>0</visibility>
                    </action>
                </block>
            </block>
        </reference>
    </adminhtml_report_sales_bestsellers>
</layout>
