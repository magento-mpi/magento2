<layout version="0.1.0">
    <adminhtml_catalog_product_set_block>
        <reference name="adminhtml.catalog.product.set.container">
            <block type="Magento_Backend_Block_Widget_Grid" name="adminhtml.catalog.product.set.grid" as="grid">
                <arguments>
                    <id>setGrid</id>
                    <dataSource type="object">Magento_Eav_Model_Resource_Entity_Attribute_Grid_Collection</dataSource>
                    <default_sort>set_name</default_sort>
                    <default_dir>ASC</default_dir>
                    <save_parameters_in_session>1</save_parameters_in_session>
                </arguments>
                <block type="Magento_Backend_Block_Widget_Grid_ColumnSet" name="adminhtml.catalog.product.set.grid.columnSet" as="grid.columnSet">
                    <arguments>
                        <id>setGrid</id>
                        <rowUrl>
                            <path>*/*/edit</path>
                            <extraParamsTemplate>
                                <id>getAttributeSetId</id>
                            </extraParamsTemplate>
                        </rowUrl>
                    </arguments>
                    <block type="Magento_Backend_Block_Widget_Grid_Column" as="set_name">
                        <arguments>
                            <header translate="true">Set</header>
                            <align>left</align>
                            <sortable>1</sortable>
                            <index>attribute_set_name</index>
                        </arguments>
                    </block>
                </block>
            </block>
        </reference>
    </adminhtml_catalog_product_set_block>
</layout>
