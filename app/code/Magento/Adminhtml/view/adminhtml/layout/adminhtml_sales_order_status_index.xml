<layout version="0.1.0">
    <adminhtml_sales_order_status_index>
        <reference name="content">
            <block type="Magento_Adminhtml_Block_Sales_Order_Status" name="sales_order_status.grid.container">
                <block type="Magento_Backend_Block_Widget_Grid" name="sales_order_status.grid" as="grid">
                    <arguments>
                        <id>sales_order_status_grid</id>
                        <dataSource type="object">Magento_Sales_Model_Resource_Status_Collection</dataSource>
                        <default_sort>state</default_sort>
                        <default_dir>desc</default_dir>
                        <pager_visibility>0</pager_visibility>
                    </arguments>
                    <block type="Magento_Backend_Block_Widget_Grid_ColumnSet" as="grid.columnSet" name="sales_order_status.grid.columnSet">
                        <arguments>
                            <rowUrl>
                                <path>*/sales_order_status/edit</path>
                                <extraParamsTemplate>
                                    <status>getStatus</status>
                                </extraParamsTemplate>
                            </rowUrl>
                            <filter_visibility>1</filter_visibility>
                        </arguments>
                        <block type="Magento_Backend_Block_Widget_Grid_Column" as="label">
                            <arguments>
                                <header translate="true">Status</header>
                                <index>label</index>
                            </arguments>
                        </block>
                        <block type="Magento_Backend_Block_Widget_Grid_Column" as="status">
                            <arguments>
                                <header translate="true">Status Code</header>
                                <index>status</index>
                                <type>text</type>
                                <filter_index>main_table.status</filter_index>
                                <width>200</width>
                            </arguments>
                        </block>
                        <block type="Magento_Backend_Block_Widget_Grid_Column" as="is_default">
                            <arguments>
                                <header translate="true">Default Status</header>
                                <index>is_default</index>
                                <type>options</type>
                                <width>100</width>
                                <sortable>0</sortable>
                                <options>
                                    <no>
                                        <value>0</value>
                                        <label translate="true">No</label>
                                    </no>
                                    <yes>
                                        <value>1</value>
                                        <label translate="true">Yes</label>
                                    </yes>
                                </options>
                            </arguments>
                        </block>
                        <block type="Magento_Sales_Block_Status_Grid_Column_State" as="state">
                            <arguments>
                                <header translate="true">State Code and Title</header>
                                <index>state</index>
                                <type>text</type>
                                <width>250</width>
                            </arguments>
                        </block>
                        <block type="Magento_Sales_Block_Status_Grid_Column_Unassign" as="unassign">
                            <arguments>
                                <header translate="true">Action</header>
                                <index>unassign</index>
                                <type>text</type>
                                <width>100</width>
                                <sortable>0</sortable>
                                <filter>0</filter>
                            </arguments>
                        </block>
                    </block>
                </block>
            </block>
        </reference>
    </adminhtml_sales_order_status_index>
</layout>
