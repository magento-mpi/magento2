<layout version="0.1.0">
    <adminhtml_tax_rule_block>
        <reference name="adminhtml.block.tax.rule.container">
            <block type="Magento_Backend_Block_Widget_Grid" name="adminhtml.block.tax.rule.grid" as="grid">
                <arguments>
                    <id>taxRuleGrid</id>
                    <dataSource type="object">Magento_Tax_Model_Resource_Rule_Grid_Collection</dataSource>
                    <default_sort>tax_rule_id</default_sort>
                    <default_dir>ASC</default_dir>
                    <save_parameters_in_session>1</save_parameters_in_session>
                </arguments>
                <block type="Magento_Backend_Block_Widget_Grid_ColumnSet" name="adminhtml.block.tax.rule.columnSet" as="grid.columnSet">
                    <arguments>
                        <rowUrl>
                            <path>*/*/edit</path>
                            <extraParamsTemplate>
                                <rule>getId</rule>
                            </extraParamsTemplate>
                        </rowUrl>
                    </arguments>
                    <block type="Magento_Backend_Block_Widget_Grid_Column" as="code">
                        <arguments>
                            <header translate='true' module='Magento_Tax'>Name</header>
                            <index>code</index>
                            <align>left</align>
                            <type>longtext</type>
                            <filter_index>code</filter_index>
                        </arguments>
                    </block>
                    <block type="Magento_Backend_Block_Widget_Grid_Column" as="customer_tax_classes">
                        <arguments>
                            <header translate='true' module='Magento_Tax'>Customer Tax Class</header>
                            <sortable>0</sortable>
                            <align>left</align>
                            <index>customer_tax_classes</index>
                            <filter_index>ctc.customer_tax_class_id</filter_index>
                            <show_missing_option_values>1</show_missing_option_values>
                            <type>options</type>
                            <options type="options">Magento_Tax_Model_Resource_Rule_Grid_Options_CustomerTaxClass</options>
                        </arguments>
                    </block>
                    <block type="Magento_Backend_Block_Widget_Grid_Column" as="product_tax_classes">
                        <arguments>
                            <header translate='true' module='Magento_Tax'>Product Tax Class</header>
                            <sortable>0</sortable>
                            <align>left</align>
                            <index>product_tax_classes</index>
                            <filter_index>ptc.product_tax_class_id</filter_index>
                            <show_missing_option_values>1</show_missing_option_values>
                            <type>options</type>
                            <options type="options">Magento_Tax_Model_Resource_Rule_Grid_Options_ProductTaxClass</options>
                        </arguments>
                    </block>
                    <block type="Magento_Backend_Block_Widget_Grid_Column" as="tax_rates">
                        <arguments>
                            <header translate='true' module='Magento_Tax'>Tax Rate</header>
                            <sortable>0</sortable>
                            <align>left</align>
                            <index>tax_rates</index>
                            <filter_index>rate.tax_calculation_rate_id</filter_index>
                            <show_missing_option_values>1</show_missing_option_values>
                            <type>options</type>
                            <options type="options">Magento_Tax_Model_Resource_Rule_Grid_Options_HashOptimized</options>
                        </arguments>
                    </block>
                    <block type="Magento_Backend_Block_Widget_Grid_Column" as="priority">
                        <arguments>
                            <header translate='true' module='Magento_Tax'>Priority</header>
                            <index>priority</index>
                            <width>50</width>
                            <type>text</type>
                        </arguments>
                    </block>
                    <block type="Magento_Backend_Block_Widget_Grid_Column" as="position">
                        <arguments>
                            <header translate='true' module='Magento_Tax'>Sort Order</header>
                            <index>position</index>
                            <width>50</width>
                            <type>text</type>
                        </arguments>
                    </block>
                </block>
            </block>
        </reference>
    </adminhtml_tax_rule_block>
</layout>
