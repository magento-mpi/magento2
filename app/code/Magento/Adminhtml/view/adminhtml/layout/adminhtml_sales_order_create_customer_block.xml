<layout version="0.1.0">
    <adminhtml_sales_order_create_customer_block>
        <reference name='customer.grid.container'>
            <block type="Magento_Backend_Block_Widget_Grid" name='adminhtml.customer.grid.container' as='grid'>
                <arguments>
                    <id>sales_order_create_customer_grid</id>
                    <use_ajax>1</use_ajax>
                    <default_sort>entity_id</default_sort>
                    <dataSource type="object">Magento_Sales_Model_Resource_Order_Customer_Collection</dataSource>
                    <pager_visibility>1</pager_visibility>
                    <grid_url type="url">
                        <path>*/*/loadBlock</path>
                        <params>
                            <block>customer_grid</block>
                        </params>
                    </grid_url>
                    <row_click_callback>order.selectCustomer.bind(order)</row_click_callback>
                </arguments>
                <block type='Magento_Backend_Block_Widget_Grid_ColumnSet' name='adminhtml.customer.grid.columnSet' as='grid.columnSet'>
                    <arguments>
                        <filter_visibility>1</filter_visibility>
                        <rowUrl>
                            <generatorClass>Magento_Backend_Model_Widget_Grid_Row_UrlGeneratorId</generatorClass>
                        </rowUrl>
                    </arguments>
                    <block type='Magento_Backend_Block_Widget_Grid_Column' as='entity_id'>
                        <arguments>
                            <header translate='true' module='Magento_Sales'>ID</header>
                            <index>entity_id</index>
                            <width>50</width>
                            <align>right</align>
                        </arguments>
                    </block>
                    <block type='Magento_Backend_Block_Widget_Grid_Column' as='name'>
                        <arguments>
                            <header translate='true' module='Magento_Sales'>Name</header>
                            <index>name</index>
                        </arguments>
                    </block>
                    <block type='Magento_Backend_Block_Widget_Grid_Column' as='email'>
                        <arguments>
                            <header translate='true' module='Magento_Sales'>Email</header>
                            <index>email</index>
                            <width>150</width>
                        </arguments>
                    </block>
                    <block type='Magento_Backend_Block_Widget_Grid_Column' as='Telephone'>
                        <arguments>
                            <header translate='true' module='Magento_Sales'>Phone</header>
                            <index>billing_telephone</index>
                            <width>100</width>
                        </arguments>
                    </block>
                    <block type='Magento_Backend_Block_Widget_Grid_Column' as='billing_postcode'>
                        <arguments>
                            <header translate='true' module='Magento_Sales'>ZIP/Post Code</header>
                            <index>billing_postcode</index>
                            <width>120</width>
                        </arguments>
                    </block>
                    <block type='Magento_Backend_Block_Widget_Grid_Column' as='billing_country_id'>
                        <arguments>
                            <header translate='true' module='Magento_Sales'>Country</header>
                            <index>billing_country_id</index>
                            <width>100</width>
                            <type>country</type>
                        </arguments>
                    </block>
                    <block type='Magento_Backend_Block_Widget_Grid_Column' as='billing_regione'>
                        <arguments>
                            <header translate='true' module='Magento_Sales'>State/Province</header>
                            <index>billing_regione</index>
                            <width>100</width>
                        </arguments>
                    </block>
                    <block type='Magento_Backend_Block_Widget_Grid_Column' as='store_name'>
                        <arguments>
                            <header translate='true' module='Magento_Sales'>Signed-up Point</header>
                            <index>store_name</index>
                            <width>130</width>
                            <align>center</align>
                        </arguments>
                    </block>
                </block>
            </block>
        </reference>
    </adminhtml_sales_order_create_customer_block>
</layout>
