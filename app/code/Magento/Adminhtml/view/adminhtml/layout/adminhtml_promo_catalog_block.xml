<layout version="0.1.0">
    <adminhtml_promo_catalog_block>
        <reference name="adminhtml.promo.catalog.grid.container">
            <block type="Magento_Backend_Block_Widget_Grid" name="promo.catalog.grid" as="grid">
                <arguments>
                    <id>promo_catalog_grid</id>
                    <dataSource type="object">Magento_CatalogRule_Model_Resource_Grid_Collection</dataSource>
                    <default_sort>name</default_sort>
                    <default_dir>ASC</default_dir>
                    <save_parameters_in_session>1</save_parameters_in_session>
                </arguments>
                <block type="Magento_Backend_Block_Widget_Grid_ColumnSet" name="promo.catalog.grid.columnSet" as="grid.columnSet">
                    <arguments>
                        <rowUrl>
                            <path>*/*/edit</path>
                            <extraParamsTemplate>
                                <id>getRuleId</id>
                            </extraParamsTemplate>
                        </rowUrl>
                    </arguments>
                    <block type="Magento_Backend_Block_Widget_Grid_Column" as="rule_id">
                        <arguments>
                            <header translate="true">ID</header>
                            <index>rule_id</index>
                            <align>right</align>
                            <width>50</width>
                            <type>text</type>
                        </arguments>
                    </block>
                    <block type="Magento_Backend_Block_Widget_Grid_Column" as="name">
                        <arguments>
                            <header translate="true">Rule</header>
                            <align>left</align>
                            <index>name</index>
                            <type>text</type>
                        </arguments>
                    </block>
                    <block type="Magento_Backend_Block_Widget_Grid_Column" as="from_date">
                        <arguments>
                            <header translate="true">Start on</header>
                            <align>left</align>
                            <width>120</width>
                            <type>date</type>
                            <index>from_date</index>
                        </arguments>
                    </block>
                    <block type="Magento_Backend_Block_Widget_Grid_Column" as="to_date">
                        <arguments>
                            <header translate="true">End on</header>
                            <align>left</align>
                            <width>120</width>
                            <type>date</type>
                            <default>--</default>
                            <index>to_date</index>
                        </arguments>
                    </block>
                    <block type="Magento_Backend_Block_Widget_Grid_Column" as="is_active">
                        <arguments>
                            <header translate="true">Status</header>
                            <align>left</align>
                            <width>80</width>
                            <index>is_active</index>
                            <type>options</type>
                            <options>
                                <active>
                                    <value>1</value>
                                    <label translate="true">Active</label>
                                </active>
                                <inactive>
                                    <value>0</value>
                                    <label translate="true">Inactive</label>
                                </inactive>
                            </options>
                        </arguments>
                    </block>
                    <block type="Magento_Backend_Block_Widget_Grid_Column_Multistore" as="rule_website">
                        <arguments>
                            <header translate="true">Web Site</header>
                            <align>left</align>
                            <index>website_ids</index>
                            <sortable>0</sortable>
                            <type>options</type>
                            <width>200</width>
                            <options type="options">Magento_Backend_Model_Config_Source_Website_OptionHash</options>
                        </arguments>
                    </block>
                </block>
            </block>
        </reference>
    </adminhtml_promo_catalog_block>
</layout>
