<layout version="0.1.0">
    <adminhtml_sales_billing_agreement_view>
        <update handle="adminhtml_sales_order_grid_block"/>
        <reference name="sales.order.grid">
            <arguments>
                <dataSource>
                    <updater>Magento_Sales_Model_Billing_Agreement_OrdersUpdater</updater>
                </dataSource>
                <grid_url>
                    <path>*/*/ordersgrid</path>
                </grid_url>
            </arguments>
        </reference>
        <remove name="sales.order.grid.export"/>
        <remove name="sales.order.grid.massaction"/>
        <reference name="content">
            <block type="Magento_Sales_Block_Adminhtml_Billing_Agreement_View" name="sales.billing.agreement.view"/>
        </reference>
        <reference name="left">
            <block type="Magento_Sales_Block_Adminhtml_Billing_Agreement_View_Tabs" name="sales.billing.agreement.tabs">
                <action method="addTab">
                    <name>billing_agreement_info</name>
                    <block>Magento_Sales_Block_Adminhtml_Billing_Agreement_View_Tab_Info</block>
                </action>
                <block name="sales_order.grid.container" type="Magento_Sales_Block_Adminhtml_Billing_Agreement_View_Tab_Orders"/>
                <action method="addTab">
                    <name>billing_agreement_orders</name>
                    <block>sales_order.grid.container</block>
                </action>
            </block>
        </reference>
    </adminhtml_sales_billing_agreement_view>
</layout>
