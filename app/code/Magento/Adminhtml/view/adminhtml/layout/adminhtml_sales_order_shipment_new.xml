<layout version="0.1.0">
    <adminhtml_sales_order_shipment_new>
        <reference name="head">
            <action method="addJs">
                <file>Magento_Adminhtml::sales/order/shipment/packaging.js</file>
            </action>
        </reference>
        <reference name="content">
            <block type="Magento_Adminhtml_Block_Sales_Order_Shipment_Create" name="sales_shipment_create">
                <block type="Magento_Adminhtml_Block_Sales_Order_Shipment_Create_Form" name="form" template="sales/order/shipment/create/form.phtml">
                    <block type="Magento_Adminhtml_Block_Sales_Order_View_Info" name="order_info" template="sales/order/view/info.phtml"/>
                    <block type="Magento_Adminhtml_Block_Sales_Order_Payment" name="order_payment"/>
                    <block type="Magento_Adminhtml_Block_Sales_Order_Shipment_Create_Tracking" name="shipment_tracking" template="sales/order/shipment/create/tracking.phtml"/>
                    <block type="Magento_Adminhtml_Block_Sales_Order_Shipment_Create_Items" name="order_items" template="sales/order/shipment/create/items.phtml">
                        <action method="addItemRender">
                            <type>default</type>
                            <block>Magento_Adminhtml_Block_Sales_Items_Renderer_Default</block>
                            <template>sales/order/shipment/create/items/renderer/default.phtml</template>
                        </action>
                        <action method="addColumnRender">
                            <column>qty</column>
                            <block>Magento_Adminhtml_Block_Sales_Items_Column_Qty</block>
                            <template>sales/items/column/qty.phtml</template>
                        </action>
                        <action method="addColumnRender">
                            <column>name</column>
                            <block>Magento_Adminhtml_Block_Sales_Items_Column_Name</block>
                            <template>sales/items/column/name.phtml</template>
                        </action>
                        <block type="Magento_Core_Block_Text_List" name="order_item_extra_info"/>
                    </block>
                    <block type="Magento_Adminhtml_Block_Sales_Order_Shipment_Packaging" name="shipment_packaging" template="sales/order/shipment/packaging/popup.phtml"/>
                </block>
            </block>
        </reference>
    </adminhtml_sales_order_shipment_new>
</layout>
