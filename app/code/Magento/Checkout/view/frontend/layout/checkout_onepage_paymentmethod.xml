<layout version="0.1.0">
    <checkout_onepage_paymentmethod translate="label" type="fragment" owner="checkout_onepage_index">
        <label>One Page Checkout Choose Payment Method</label>
        <block type="Magento_Page_Block_Html" name="root" output="1" template="page_fragment.phtml">
            <block type="Magento_Checkout_Block_Onepage_Payment_Methods" name="payment_method" template="onepage/payment/methods.phtml">
                <action method="setMethodFormTemplate">
                    <method>purchaseorder</method>
                    <template>Magento_Payment::form/purchaseorder.phtml</template>
                </action>
            </block>
        </block>
    </checkout_onepage_paymentmethod>
</layout>
