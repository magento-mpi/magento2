/* @var \Magento\Wishlist\Model\Item $item */
$item = $this->getItem();
$product = $item->getProduct();
?>
<strong class="product-item-name">
    <a href="<?php echo $this->getProductUrl($item) ?>" title="<?php echo $this->escapeHtml($product->getName()) ?>" class="product-item-link">
        <?php echo $this->escapeHtml($product->getName()) ?>
    </a>
</strong>

<?php $description = $product->getShortDescription(); ?>
<?php if ($description): ?>
<div class="product-item-description">
    <?php echo $this->escapeHtml($this->stripTags($description));?>
</div>
<?php endif; ?>

<?php $children = $this->getChildNames(); ?>
<?php if ($children): ?>
    <?php foreach($children as $childName):?>
        <?php echo $this->getLayout()->renderElement($childName, false);?>
    <?php endforeach;?>
<?php endif; ?>
