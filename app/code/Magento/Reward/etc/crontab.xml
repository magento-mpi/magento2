<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="../../Cron/etc/crontab.xsd">
    <group id="default">
        <job name="magento_reward_balance_warning_notification" instance="Magento\Reward\Model\Observer" method="scheduledBalanceExpireNotification">
            <schedule>1 * * * *</schedule>
        </job>
        <job name="magento_reward_expire_points" instance="Magento\Reward\Model\Observer" method="scheduledPointsExpiration">
            <schedule>1 * * * *</schedule>
        </job>
    </group>
</config>
