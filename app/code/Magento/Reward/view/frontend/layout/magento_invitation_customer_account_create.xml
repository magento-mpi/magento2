<layout version="0.1.0">
    <magento_invitation_customer_account_create>
        <reference name="customer.form.register.invitation.fields.before">
            <block type="Magento_Reward_Block_Tooltip" name="reward.tooltip.register" template="tooltip.phtml">
                <action method="initRewardType">
                    <type>Magento_Reward_Model_Action_Register</type>
                </action>
                <action method="setRewardMessage" translate="message">
                    <message>Register on our site now and earn %s.</message>
                </action>
            </block>
            <block type="Magento_Reward_Block_Tooltip" name="reward.tooltip.newsletter" template="tooltip.phtml" after="reward.tooltip.register">
                <action method="initRewardType">
                    <type>Magento_Reward_Model_Action_Newsletter</type>
                </action>
                <action method="setRewardMessage" translate="message">
                    <message>Subscribe to our newsletter now and earn %s.</message>
                </action>
            </block>
        </reference>
    </magento_invitation_customer_account_create>
</layout>
