<layout xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="../../../../Core/etc/layout_single.xsd">
    <referenceBlock name="sales.order.grid.massaction">
        <arguments>
            <argument name="options" xsi:type="array">
                <updater>Magento\SalesArchive\Model\Order\Grid\Massaction\ItemsUpdater</updater>
                <item name="add_order_to_archive" xsi:type="array">
                    <item name="label" xsi:type="string" translate="true">Move to Archive</item>
                    <item name="url" xsi:type="string">adminhtml/sales_archive/massAdd</item>
                </item>
            </argument>
        </arguments>
    </referenceBlock>
    <referenceBlock name="sales_order.grid.container">
        <block class="Magento\SalesArchive\Block\Adminhtml\Sales\Order\Grid\Button" name="sales_order.grid.archive.button"/>
    </referenceBlock>
</layout>
