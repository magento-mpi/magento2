<layout xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
    <handle id="adminhtml_sales_order_index">
        <reference name="sales.order.grid.massaction">
            <arguments>
                <argument name="options" xsi:type="array">
                    <updater>Magento\SalesArchive\Model\Order\Grid\Massaction\ItemsUpdater</updater>
                    <item name="add_order_to_archive" xsi:type="array">
                        <item name="label" xsi:type="string" translate="true">Move to Archive</item>
                        <item name="url" xsi:type="string">*/sales_archive/massAdd</item>
                    </item>
                </argument>
            </arguments>
        </reference>
        <reference name="sales_order.grid.container">
            <block class="Magento\SalesArchive\Block\Adminhtml\Sales\Order\Grid\Button" name="sales_order.grid.archive.button"/>
        </reference>
    </handle>
</layout>
