<div class="invitations">
    <?php echo $this->getChildHtml('list_before')?>

    <?php if (count($this->getInvitationCollection())): ?>
        <div class="table-wrapper invitations">
            <table class="data table table-invitations" id="invitations-list-table">
                <caption class="table-caption"><?php echo __('My Invitations'); ?></caption>
                <thead>
                    <tr>
                        <th scope="col" class="col email"><?php echo __('Email'); ?></th>
                        <th scope="col" class="col status"><?php echo __('Status'); ?></th>
                    </tr>
                </thead>
                <tbody>
                <?php foreach ($this->getInvitationCollection() as $invitation): ?>
                    <tr>
                        <td data-th="<?php echo $this->escapeHtml(__('Email')); ?>" class="col email"><?php echo $this->escapeHtml($invitation->getEmail()); ?></td>
                        <td data-th="<?php echo $this->escapeHtml(__('Status')); ?>" class="col status"> <?php echo $this->helper('Magento\Invitation\Helper\Data')->getInvitationStatusText($invitation);?></td>
                    </tr>
                <?php endforeach; ?>
                </tbody>
            </table>
        </div>
    <?php else: ?>
        <div class="message info empty"><span><?php echo __('There are no sent invitations.'); ?></span></div>
    <?php endif; ?>

    <div class="actions-toolbar">
        <div class="primary">
            <a href="<?php echo $this->helper('Magento\Invitation\Helper\Data')->getCustomerInvitationFormUrl(); ?>" class="action send primary"><span><?php echo __('Send Invitations') ?></span></a>
        </div>
        <div class="secondary">
            <a href="<?php echo $this->escapeUrl($this->getBackUrl()) ?>" class="action back"><span><?php echo __('Back') ?></span></a>
        </div>
    </div>
</div>
