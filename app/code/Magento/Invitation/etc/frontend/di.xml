<config>
    <type name="Magento\Customer\Helper\Data">
        <plugin name="invitation_customer_registration_plugin" type="Magento\Invitation\Model\Plugin\CustomerRegistration"/>
    </type>
    <type name="Magento\Core\Model\Url\SecurityInfo">
        <param name="secureUrlList">
            <array>
                <item key="invitation"><value>/invitation/</value></item>
            </array>
        </param>
    </type>
    <virtualType name="customerInvitationAccountInitSession" type="Magento\Core\App\Action\Plugin\Session">
        <param name="cookieCheckActions">
            <array>
                <item key="customerInvitationCreate"><value>createPost</value></item>
            </array>
        </param>
    </virtualType>
    <type name="Magento\Invitation\Controller\Customer\Account">
        <plugin name="sessionInitializer" type="customerInvitationAccountInitSession" />
    </type>
</config>
