<config>
    <global>
        <resources>
            <review_setup>
                <setup>
                    <module>Magento_Review</module>
                </setup>
            </review_setup>
        </resources>
    </global>
    <adminhtml>
        <translate>
            <modules>
                <Magento_Review>
                    <files>
                        <default>Magento_Review.csv</default>
                    </files>
                </Magento_Review>
            </modules>
        </translate>
        <events>
            <catalog_product_delete_after_done>
                <observers>
                    <review>
                        <class>Magento_Review_Model_Observer</class>
                        <method>processProductAfterDeleteEvent</method>
                    </review>
                </observers>
            </catalog_product_delete_after_done>
        </events>
    </adminhtml>
    <frontend>
        <routers>
            <review>
                <use>standard</use>
                <args>
                    <module>Magento_Review</module>
                    <frontName>review</frontName>
                </args>
            </review>
        </routers>
        <translate>
            <modules>
                <Magento_Review>
                    <files>
                        <default>Magento_Review.csv</default>
                    </files>
                </Magento_Review>
            </modules>
        </translate>
        <events>
            <tag_tag_product_collection_load_after>
                <observers>
                    <review>
                        <type>model</type>
                        <class>Magento_Review_Model_Observer</class>
                        <method>tagProductCollectionLoadAfter</method>
                    </review>
                </observers>
            </tag_tag_product_collection_load_after>
            <catalog_block_product_list_collection>
                <observers>
                    <review>
                        <type>model</type>
                        <class>Magento_Review_Model_Observer</class>
                        <method>catalogBlockProductCollectionBeforeToHtml</method>
                    </review>
                </observers>
            </catalog_block_product_list_collection>
        </events>
        <secure_url>
            <review_customer>/review/customer/</review_customer>
        </secure_url>
    </frontend>
    <default>
        <catalog>
            <review>
                <allow_guest>1</allow_guest>
            </review>
        </catalog>
    </default>
</config>
