<config>
    <global>
        <resources>
            <enterprise_setup>
                <setup>
                    <module>Magento_Enterprise</module>
                    <class>Magento_Core_Model_Resource_Setup</class>
                </setup>
            </enterprise_setup>
        </resources>
    </global>
    <frontend>
        <design>
            <theme>
                <full_name>magento_fixed_width</full_name>
            </theme>
        </design>
    </frontend>
    <adminhtml>
        <events>
            <backend_auth_user_login_success>
                <observers>
                    <magento_enterprise>
                        <class>Magento_Enterprise_Model_Observer</class>
                        <method>setHideSurveyQuestion</method>
                    </magento_enterprise>
                </observers>
            </backend_auth_user_login_success>
        </events>
        <design>
            <theme>
                <full_name>magento_backend</full_name>
            </theme>
        </design>
    </adminhtml>
    <install>
        <eula_file>LICENSE_EE.html</eula_file>
        <events>
            <controller_action_predispatch_install>
                <observers>
                    <enterprise_install>
                        <class>Magento_Enterprise_Model_Observer_Install</class>
                        <method>setDesignTheme</method>
                    </enterprise_install>
                </observers>
            </controller_action_predispatch_install>
        </events>
        <design>
            <theme>
                <full_name>magento_enterprise</full_name>
            </theme>
        </design>
    </install>
    <default>
        <design>
            <head>
                <default_title>Magento Enterprise Edition</default_title>
                <default_keywords>Magento, Varien, E-commerce</default_keywords>
            </head>
            <footer>
                <copyright>&amp;copy; 2012 Magento Enterprise Edition Demo Store. All Rights Reserved.</copyright>
            </footer>
        </design>
        <system>
            <media_storage_configuration>
                <allowed_resources>
                    <enterprise_folder>enterprise</enterprise_folder>
                </allowed_resources>
            </media_storage_configuration>
            <adminnotification>
                <feed_url>notifications.magentocommerce.com/enterprise/notifications.rss</feed_url>
            </adminnotification>
        </system>
    </default>
</config>
