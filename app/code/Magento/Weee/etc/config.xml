<config>
    <global>
        <resources>
            <weee_setup>
                <setup>
                    <module>Magento_Weee</module>
                    <class>Magento_Weee_Model_Resource_Setup</class>
                </setup>
            </weee_setup>
        </resources>
        <events>
            <catalog_entity_attribute_save_before>
                <observers>
                    <weee>
                        <type>model</type>
                        <class>Magento_Weee_Model_Observer</class>
                        <method>assignBackendModelToAttribute</method>
                    </weee>
                </observers>
            </catalog_entity_attribute_save_before>
            <catalogrule_after_apply>
                <observers>
                    <weee>
                        <class>Magento_Weee_Model_Observer</class>
                        <method>updateDiscountPercents</method>
                    </weee>
                </observers>
            </catalogrule_after_apply>
            <catalog_product_view_config>
                <observers>
                    <weee>
                        <class>Magento_Weee_Model_Observer</class>
                        <method>updateConfigurableProductOptions</method>
                    </weee>
                </observers>
            </catalog_product_view_config>
            <bundle_product_view_config>
                <observers>
                    <weee>
                        <class>Magento_Weee_Model_Observer</class>
                        <method>updateBundleProductOptions</method>
                    </weee>
                </observers>
            </bundle_product_view_config>
        </events>
        <sales>
            <quote>
                <totals>
                    <weee>
                        <class>Magento_Weee_Model_Total_Quote_Weee</class>
                        <after>subtotal,tax_subtotal</after>
                        <before>tax,discount</before>
                    </weee>
                </totals>
                <nominal_totals>
                    <nominal_weee>
                        <class>Magento_Weee_Model_Total_Quote_Nominal_Weee</class>
                        <sort_order>600</sort_order>
                    </nominal_weee>
                </nominal_totals>
            </quote>
            <order_invoice>
                <totals>
                    <weee>
                        <class>Magento_Weee_Model_Total_Invoice_Weee</class>
                        <after>subtotal,tax,discount,grand_total,cost_total,shipping</after>
                        <before />
                    </weee>
                </totals>
            </order_invoice>
            <order_creditmemo>
                <totals>
                    <weee>
                        <class>Magento_Weee_Model_Total_Creditmemo_Weee</class>
                        <after>subtotal</after>
                        <before>tax,discount,grand_total</before>
                    </weee>
                </totals>
            </order_creditmemo>
        </sales>
    </global>
    <adminhtml>
        <events>
            <adminhtml_catalog_product_edit_prepare_form>
                <observers>
                    <weee>
                        <class>Magento_Weee_Model_Observer</class>
                        <method>setWeeeRendererInForm</method>
                    </weee>
                </observers>
            </adminhtml_catalog_product_edit_prepare_form>
            <adminhtml_catalog_product_form_prepare_excluded_field_list>
                <observers>
                    <weee>
                        <class>Magento_Weee_Model_Observer</class>
                        <method>updateExcludedFieldList</method>
                    </weee>
                </observers>
            </adminhtml_catalog_product_form_prepare_excluded_field_list>
            <adminhtml_product_attribute_types>
                <observers>
                    <weee>
                        <type>model</type>
                        <class>Magento_Weee_Model_Observer</class>
                        <method>addWeeeTaxAttributeType</method>
                    </weee>
                </observers>
            </adminhtml_product_attribute_types>
            <adminhtml_catalog_product_edit_element_types>
                <observers>
                    <weee>
                        <class>Magento_Weee_Model_Observer</class>
                        <method>updateElementTypes</method>
                    </weee>
                </observers>
            </adminhtml_catalog_product_edit_element_types>
        </events>
        <translate>
            <modules>
                <Magento_Weee>
                    <files>
                        <default>Magento_Weee.csv</default>
                    </files>
                </Magento_Weee>
            </modules>
        </translate>
    </adminhtml>
    <default>
        <sales>
            <totals_sort>
                <weee>50</weee>
            </totals_sort>
        </sales>
        <tax>
            <weee>
                <enable>0</enable>
                <display>0</display>
                <display_list>0</display_list>
                <display_sales>0</display_sales>
                <display_email>0</display_email>
                <discount>0</discount>
                <apply_vat>0</apply_vat>
                <include_in_subtotal>0</include_in_subtotal>
            </weee>
        </tax>
        <general>
            <validator_data>
                <input_types>
                    <weee>weee</weee>
                </input_types>
            </validator_data>
        </general>
    </default>
    <frontend>
        <translate>
            <modules>
                <Magento_Weee>
                    <files>
                        <default>Magento_Weee.csv</default>
                    </files>
                </Magento_Weee>
            </modules>
        </translate>
    </frontend>
</config>
