<?php if ($this->getSearchResults() && $this->getSearchResults()->getSize()): ?>
    <div class="block wishlist find results">
        <div class="title">
            <strong><?php echo __('Search Results') ?></strong>
        </div>
        <?php echo $this->getChildHtml('pager') ?>
        <table class="wishlist data table" id="wishlist-search-results">
            <thead>
            <tr>
                <th class="col name"><?php echo __('Name') ?></th>
                <th class="col list"><?php echo __('Wish List Name') ?></th>
                <th class="col actions"><?php echo __('Actions') ?></th>
            </tr>
            </thead>
            <tbody>
            <?php foreach($this->getSearchResults() as $item): ?>
                <tr>
                    <td class="col name"><?php echo $this->escapeHtml($item->getCustomer()->getName()) ?></td>
                    <td class="col list"><?php echo $this->escapeHtml($item->getName()) ?></td>
                    <td class="col actions"><a href="<?php echo $this->getWishlistLink($item) ?>" title="<?php echo __('View') ?>" class="action view"><?php echo __('View') ?></a></td>
                </tr>
            <?php endforeach; ?>
            </tbody>
        </table>
        <?php echo $this->getChildHtml('pager') ?>
    </div>
<?php else: ?>
    <div class="error-msg"><span><?php echo __('Your search returned no results.') ?></span></div>
<?php endif; ?>
