<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="../../../../../../../lib/internal/Magento/Framework/View/Layout/etc/page_configuration.xsd">
    <head>
        <title>My Wish Lists</title>
    </head>
    <body>
        <attribute name="class" value="page-multiple-wishlist"/>
        <referenceBlock name="page.main.title">
            <action method="setPageTitle" ifconfig="wishlist/general/multiple_enabled">
                <argument translate="true" name="title" xsi:type="string">My Wish Lists</argument>
            </action>
        </referenceBlock>
        <referenceBlock name="customer.wishlist">
            <block class="Magento\MultipleWishlist\Block\Customer\Wishlist\Management" name="customer.wishlist.management" as="top" template="view/management.phtml" cacheable="false">
        </block>
            <referenceBlock name="customer.wishlist.items">
                <block class="Magento\MultipleWishlist\Block\Customer\Wishlist\Item\Column\Selector" name="customer.wishlist.item.selector" after="customer.wishlist.item.image" template="item/column/selector.phtml" cacheable="false"/>
            </referenceBlock>
            <referenceBlock name="customer.wishlist.item.actions">
                <block class="Magento\MultipleWishlist\Block\Customer\Wishlist\Item\Column\Management" name="customer.wishlist.item.mananagement" template="item/column/management.phtml" cacheable="false" before="customer.wishlist.item.remove"/>
            </referenceBlock>
            <referenceContainer name="customer.wishlist.buttons">
                <block class="Magento\MultipleWishlist\Block\Customer\Wishlist\Button\Delete" name="customer.wishlist.button.delete" template="button/delete.phtml" cacheable="false"/>
            </referenceContainer>
        </referenceBlock>
    </body>
</page>
