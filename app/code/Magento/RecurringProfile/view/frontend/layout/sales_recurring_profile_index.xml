<layout xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
    <update handle="customer_account"/>
    <referenceContainer name="content">
        <block class="Magento\RecurringProfile\Block\Profile" name="sales.recurring.profiles" template="recurring/profiles.phtml" cacheable="false">
            <block class="Magento\RecurringProfile\Block\Profile\Grid" name="sales.recurring.profiles.grid" as="grid" template="recurring/grid.phtml" cacheable="false">
                <action method="setEmptyGridMessage">
                    <argument translate="true" name="value" xsi:type="string">There are no recurring profiles yet.</argument>
                </action>
                <action method="setGridHtmlId">
                    <argument name="value" xsi:type="string">recurring_profile_list_view</argument>
                </action>
            </block>
        </block>
    </referenceContainer>
</layout>
