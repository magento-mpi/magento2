<layout xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
    <handle id="adminhtml_user_role_grid_block">
        <reference name="permission.role.grid.columnSet">
            <block class="Magento\Backend\Block\Widget\Grid\Column" as="gws">
                <arguments>
                    <argument name="header" xsi:type="string" translate="true">Allowed Scopes</argument>
                    <argument name="width" xsi:type="string">200px</argument>
                    <argument name="sortable" xsi:type="string">0</argument>
                    <argument name="filter" xsi:type="string">0</argument>
                    <argument name="renderer" xsi:type="string">Magento\AdminGws\Block\Adminhtml\Permissions\Grid\Renderer\Gws</argument>
                </arguments>
            </block>
        </reference>
    </handle>
</layout>
