<config>
    <global>
        <resources>
            <productalert_setup>
                <setup>
                    <module>Magento_ProductAlert</module>
                </setup>
            </productalert_setup>
        </resources>
        <template>
            <email>
                <catalog_productalert_email_stock_template translate="label" module="Magento_ProductAlert">
                    <label>Stock Alert</label>
                    <file>email/stock_alert.html</file>
                    <type>html</type>
                </catalog_productalert_email_stock_template>
                <catalog_productalert_email_price_template translate="label" module="Magento_ProductAlert">
                    <label>Price Alert</label>
                    <file>email/price_alert.html</file>
                    <type>html</type>
                </catalog_productalert_email_price_template>
                <catalog_productalert_cron_error_email_template translate="label" module="Magento_ProductAlert">
                    <label>Cron Error Warning</label>
                    <file>email/cron_error.html</file>
                    <type>html</type>
                </catalog_productalert_cron_error_email_template>
            </email>
        </template>
    </global>
    <adminhtml>
        <translate>
            <modules>
                <Magento_ProductAlert>
                    <files>
                        <default>Magento_ProductAlert.csv</default>
                    </files>
                </Magento_ProductAlert>
            </modules>
        </translate>
    </adminhtml>
    <frontend>
        <translate>
            <modules>
                <Magento_ProductAlert>
                    <files>
                        <default>Magento_ProductAlert.csv</default>
                    </files>
                </Magento_ProductAlert>
            </modules>
        </translate>
    </frontend>
    <default>
        <catalog>
            <productalert>
                <allow_price>0</allow_price>
                <allow_stock>0</allow_stock>
                <email_price_template>catalog_productalert_email_price_template</email_price_template>
                <email_stock_template>catalog_productalert_email_stock_template</email_stock_template>
                <email_identity>general</email_identity>
            </productalert>
            <productalert_cron>
                <error_email />
                <error_email_template>catalog_productalert_cron_error_email_template</error_email_template>
                <error_email_identity>general</error_email_identity>
            </productalert_cron>
        </catalog>
    </default>
    <crontab>
        <jobs>
            <catalog_product_alert>
                <run>
                    <model>Magento_ProductAlert_Model_Observer::process</model>
                </run>
            </catalog_product_alert>
        </jobs>
    </crontab>
</config>
