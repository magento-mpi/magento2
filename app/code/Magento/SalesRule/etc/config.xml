<config>
    <global>
        <resources>
            <salesrule_setup>
                <setup>
                    <module>Magento_SalesRule</module>
                    <class>Magento_Sales_Model_Resource_Setup</class>
                </setup>
            </salesrule_setup>
        </resources>
        <events>
            <sales_order_place_after>
                <observers>
                    <salesrule>
                        <class>Magento_SalesRule_Model_Observer</class>
                        <method>salesOrderAfterPlace</method>
                    </salesrule>
                </observers>
            </sales_order_place_after>
            <sales_quote_config_get_product_attributes>
                <observers>
                    <salesrule>
                        <class>Magento_SalesRule_Model_Observer</class>
                        <method>addProductAttributes</method>
                    </salesrule>
                </observers>
            </sales_quote_config_get_product_attributes>
            <sales_convert_quote_to_order>
                <observers>
                    <salesrule>
                        <class>Magento_SalesRule_Model_Observer</class>
                        <method>addSalesRuleNameToOrder</method>
                    </salesrule>
                </observers>
            </sales_convert_quote_to_order>
        </events>
        <sales>
            <quote>
                <totals>
                    <freeshipping>
                        <class>Magento_SalesRule_Model_Quote_Freeshipping</class>
                        <after>subtotal</after>
                        <before>tax_subtotal,shipping</before>
                    </freeshipping>
                    <discount>
                        <class>Magento_SalesRule_Model_Quote_Discount</class>
                        <after>subtotal,shipping</after>
                        <before>grand_total</before>
                    </discount>
                </totals>
                <nominal_totals>
                    <nominal_discount>
                        <class>Magento_SalesRule_Model_Quote_Nominal_Discount</class>
                        <sort_order>550</sort_order>
                    </nominal_discount>
                </nominal_totals>
            </quote>
        </sales>
        <salesrule>
            <coupon>
                <separator>-</separator>
                <charset>
                    <alphanum>ABCDEFGHIJKLMNOPQRSTUVWXYZ0123456789</alphanum>
                    <alpha>ABCDEFGHIJKLMNOPQRSTUVWXYZ</alpha>
                    <num>0123456789</num>
                </charset>
            </coupon>
        </salesrule>
    </global>
    <adminhtml>
        <translate>
            <modules>
                <Magento_SalesRule>
                    <files>
                        <default>Magento_SalesRule.csv</default>
                    </files>
                </Magento_SalesRule>
            </modules>
        </translate>
        <events>
            <catalog_entity_attribute_delete_after>
                <observers>
                    <salesrule>
                        <class>Magento_SalesRule_Model_Observer</class>
                        <method>catalogAttributeDeleteAfter</method>
                    </salesrule>
                </observers>
            </catalog_entity_attribute_delete_after>
            <catalog_entity_attribute_save_after>
                <observers>
                    <salesrule>
                        <class>Magento_SalesRule_Model_Observer</class>
                        <method>catalogAttributeSaveAfter</method>
                    </salesrule>
                </observers>
            </catalog_entity_attribute_save_after>
        </events>
    </adminhtml>
    <frontend>
        <translate>
            <modules>
                <Magento_SalesRule>
                    <files>
                        <default>Magento_SalesRule.csv</default>
                    </files>
                </Magento_SalesRule>
            </modules>
        </translate>
    </frontend>
    <crontab>
        <jobs>
            <aggregate_sales_report_coupons_data>
                <schedule>
                    <cron_expr>0 0 * * *</cron_expr>
                </schedule>
                <run>
                    <model>Magento_SalesRule_Model_Observer::aggregateSalesReportCouponsData</model>
                </run>
            </aggregate_sales_report_coupons_data>
        </jobs>
    </crontab>
    <default>
        <promo>
            <auto_generated_coupon_codes>
                <length>12</length>
                <format>1</format>
            </auto_generated_coupon_codes>
        </promo>
    </default>
</config>
