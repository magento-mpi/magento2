<config>
    <modules>
        <Social_Facebook>
            <version>1.6.0.1</version>
            <active>true</active>
            <depends>
                <Mage_Catalog/>
            </depends>
        </Social_Facebook>
    </modules>
    <global>
        <resources>
            <social_facebook_setup>
                <setup>
                    <module>Social_Facebook</module>
                    <class>Social_Facebook_Model_Resource_Setup</class>
                </setup>
            </social_facebook_setup>
        </resources>
    </global>
    <admin>
        <routers>
            <adminhtml>
                <args>
                    <modules>
                        <social_facebook before="Mage_Adminhtml">Social_Facebook_Adminhtml</social_facebook>
                    </modules>
                </args>
            </adminhtml>
        </routers>
    </admin>
    <frontend>
        <translate>
            <modules>
                <Social_Facebook>
                    <files>
                        <default>Social_Facebook.csv</default>
                    </files>
                </Social_Facebook>
            </modules>
        </translate>
        <routers>
            <social_facebook>
                <use>standard</use>
                <args>
                    <module>Social_Facebook</module>
                    <frontName>facebook</frontName>
                </args>
            </social_facebook>
        </routers>
        <events>
            <controller_action_predispatch_catalog_product_view>
                <observers>
                    <social_facebook_code>
                        <class>Social_Facebook_Model_Observer</class>
                        <method>catalogProduct</method>
                    </social_facebook_code>
                </observers>
            </controller_action_predispatch_catalog_product_view>
        </events>
    </frontend>
</config>
