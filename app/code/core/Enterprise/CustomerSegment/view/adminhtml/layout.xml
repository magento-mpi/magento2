<layout>
    <!-- segments grid page -->
    <adminhtml_customersegment_index>
        <reference name="content">
            <block type="Enterprise_CustomerSegment_Block_Adminhtml_Customersegment" name="customersegment.list">
                <block type="Mage_Adminhtml_Block_Store_Switcher" name="store_switcher" as="store_switcher">
                    <action method="setUseConfirm"><params>0</params></action>
                </block>
            </block>
        </reference>
    </adminhtml_customersegment_index>

    <!-- segment ajax grid -->
    <adminhtml_customersegment_grid>
        <block type="Enterprise_CustomerSegment_Block_Adminhtml_Customersegment_Grid" name="root" output="1"/>
    </adminhtml_customersegment_grid>

    <!-- segment chooser ajax grid -->
    <adminhtml_customersegment_choosergrid>
        <block type="Enterprise_CustomerSegment_Block_Adminhtml_Customersegment_Grid_Chooser" name="root" output="1"/>
    </adminhtml_customersegment_choosergrid>

    <adminhtml_report_customer_customersegment_detail>
        <reference name="content">
            <block type="Enterprise_CustomerSegment_Block_Adminhtml_Report_Customer_Segment_Detail" name="report.customersegment.detail.grid.container" template="report/detail/grid/container.phtml" />
        </reference>
    </adminhtml_report_customer_customersegment_detail>
</layout>
