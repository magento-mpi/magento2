<layout version="0.1.0">
    <customer_account>
        <block type="Enterprise_Rma_Block_Link" name="enterprise_rma_link_dashboard">
            <action method="addDashboardLink" translate="label" module="Enterprise_Rma"><block>customer_account_navigation</block><name>return</name><path>rma/return/history/</path><label>My Returns</label></action>
        </block>
    </customer_account>

    <enterprise_rma_return_history translate="label" type="page" parent="enterprise_rma_return_view">
        <label>Customer My Returns History</label>
        <update handle="customer_account"/>
        <reference name="customer_account_navigation">
            <action method="setActive"><path>rma/return/history/</path></action>
        </reference>
        <reference name="my.account.wrapper">
            <block type="Enterprise_Rma_Block_Return_History" name="rma.return.history">
                <container name="rma.return.history.info" as="info" label="Returns History Info"/>
            </block>
            <block type="Enterprise_Rma_Block_Return_History" name="customer.account.link.back" template="Mage_Customer::account/link/back.phtml"/>
        </reference>
    </enterprise_rma_return_history>

    <enterprise_rma_return_create translate="label" type="page" parent="enterprise_rma_return_create_handle">
        <label>Customer My Return Create</label>
        <update handle="customer_account"/>
        <reference name="customer_account_navigation">
            <action method="setActive"><path>rma/return/history/</path></action>
        </reference>
        <reference name="my.account.wrapper">
            <block type="Enterprise_Rma_Block_Return_Create" as="create" name="rma.return.create" template="return/create.phtml">
                <action method="setFormCode"><code>default</code></action>
                <action method="setEntityModelClass"><code>Enterprise_Rma_Model_Item</code></action>
            </block>
        </reference>
        <update handle="enterprise_rma_return_create_handle"/>
    </enterprise_rma_return_create>

    <enterprise_rma_return_create_handle translate="label" type="page" parent="default">
        <label>RMA Return Create</label>
        <reference name="content">
            <block name="enterprise_rma_item_form_template" type="Enterprise_Eav_Block_Form_Template">
                <action method="addRenderer">
                    <type>text</type>
                    <renderer_block>Enterprise_Eav_Block_Form_Renderer_Text</renderer_block>
                    <template>Enterprise_Rma::form/renderer/text.phtml</template>
                </action>
                <action method="addRenderer">
                    <type>textarea</type>
                    <renderer_block>Enterprise_Eav_Block_Form_Renderer_Textarea</renderer_block>
                    <template>Enterprise_Rma::form/renderer/textarea.phtml</template>
                </action>
                <action method="addRenderer">
                    <type>select</type>
                    <renderer_block>Enterprise_Rma_Block_Form_Renderer_Select</renderer_block>
                    <template>form/renderer/select.phtml</template>
                </action>
                <action method="addRenderer">
                    <type>image</type>
                    <renderer_block>Enterprise_Rma_Block_Form_Renderer_Image</renderer_block>
                    <template>form/renderer/image.phtml</template>
                </action>
            </block>
        </reference>
    </enterprise_rma_return_create_handle>

    <enterprise_rma_return_view translate="label" type="page" parent="enterprise_rma_return_view_handle">
        <label>Customer My Account Return View</label>
        <reference name="customer_account_navigation">
            <action method="setActive"><path>rma/return/history/</path></action>
        </reference>
        <update handle="customer_account"/>
        <reference name="my.account.wrapper">
            <block type="Enterprise_Rma_Block_Return_View" name="rma.return.history">
                <container name="rma.return.history.info" as="info" label="Customer My Account Return View"/>
            </block>
            <block type="Enterprise_Rma_Block_Return_View" name="customer.account.link.back" template="Mage_Customer::account/link/back.phtml"/>
        </reference>
        <update handle="enterprise_rma_return_view_handle"/>
        <block type="Enterprise_Rma_Block_Return_Tracking" name="rma.return.tracking" as="tracking" />
    </enterprise_rma_return_view>

    <enterprise_rma_return_view_handle translate="label" type="page" parent="enterprise_rma_return_create_handle">
        <label>RMA Return View Image</label>
        <reference name="content">
            <block name="enterprise_rma_item_form_template" type="Enterprise_Eav_Block_Form_Template">
                <action method="addRenderer">
                    <type>image</type>
                    <renderer_block>Enterprise_Rma_Block_Form_Renderer_Image</renderer_block>
                    <template>form/view/image.phtml</template>
                </action>
            </block>
        </reference>
    </enterprise_rma_return_view_handle>

    <enterprise_rma_return_returns translate="label" type="page" parent="enterprise_rma_return_view">
        <label>Customer My Account Order Returns View</label>
        <update handle="customer_account"/>
        <reference name="my.account.wrapper">
            <block type="Mage_Sales_Block_Order_Info" as="info" name="sales.order.info">
                <block type="Mage_Sales_Block_Order_Info_Buttons" as="buttons" name="sales.order.info.buttons">
                    <block type="Enterprise_Rma_Block_Order_Button" name="enterprise.rma.info.button" template="order/button.phtml" />
                </block>
            </block>
            <block type="Enterprise_Rma_Block_Return_Returns" name="rma.return.returns" />
        </reference>
        <reference name="sales.order.info">
            <action method="addLink" translate="label" module="Mage_Sales"><name>view</name><path>sales/order/view</path><label>Order Information</label></action>
            <action method="addLink" translate="label" module="Mage_Sales"><name>invoice</name><path>sales/order/invoice</path><label>Invoices</label></action>
            <action method="addLink" translate="label" module="Mage_Sales"><name>shipment</name><path>sales/order/shipment</path><label>Shipments</label></action>
            <action method="addLink" translate="label" module="Mage_Sales"><name>creditmemo</name><path>sales/order/creditmemo</path><label>Refunds</label></action>
            <action method="addLink" translate="label" module="Mage_Sales"><name>returns</name><path></path><label>Returns</label></action>
        </reference>
    </enterprise_rma_return_returns>

