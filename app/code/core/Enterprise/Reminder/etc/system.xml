<config>
    <sections>
        <promo translate="label" module="Enterprise_Reminder">
            <class>separator-top</class>
            <label>Promotions</label>
            <tab>customer</tab>
            <frontend_type>text</frontend_type>
            <sort_order>400</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>
            <groups>
                <enterprise_reminder translate="label" module="Enterprise_Reminder">
                    <label>Automated Email Reminder Rules</label>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <sort_order>1</sort_order>
                    <fields>
                        <enabled translate="label" module="Enterprise_Reminder">
                            <label>Enable Reminder Emails</label>
                            <frontend_type>select</frontend_type>
                            <source_model>Mage_Adminhtml_Model_System_Config_Source_Yesno</source_model>
                            <sort_order>1</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                        </enabled>
                        <frequency translate="label" module="Enterprise_Reminder">
                            <label>Frequency</label>
                            <frontend_type>select</frontend_type>
                            <source_model>Enterprise_Reminder_Model_Observer::getCronFrequencyTypes</source_model>
                            <backend_model>Enterprise_Reminder_Model_System_Config_Backend_Cron</backend_model>
                            <sort_order>2</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                        </frequency>
                        <interval translate="label comment" module="Enterprise_Reminder">
                            <label>Interval</label>
                            <frontend_type>select</frontend_type>
                            <source_model>Enterprise_Reminder_Model_Observer::getCronMinutes</source_model>
                            <sort_order>3</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                            <comment>Set this value not less than your cron.php launch period.</comment>
                            <depends><frequency>I</frequency></depends> 
                        </interval>
                        <minutes translate="label comment" module="Enterprise_Reminder">
                            <label>Minute of the Hour</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>3</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                            <comment>Valid range: 0-59 (default 0).</comment>
                            <depends><frequency>H</frequency></depends> 
                        </minutes>
                        <time translate="label" module="Enterprise_Reminder">
                            <label>Start Time</label>
                            <frontend_type>time</frontend_type>
                            <sort_order>4</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                        </time>
                        <limit translate="label" module="Enterprise_Reminder">
                            <label>Maximum Emails per One Run</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>5</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                        </limit>
                        <threshold translate="label comment" module="Enterprise_Reminder">
                            <label>Email Send Failure Threshold</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>6</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                            <comment>Empty value disables this limitation. If not limited, the reminder emails may stuck sending over and over.</comment>
                        </threshold>
                        <identity translate="label" module="Enterprise_Reminder">
                            <label>Reminder Email Sender</label>
                            <frontend_type>select</frontend_type>
                            <source_model>Mage_Adminhtml_Model_System_Config_Source_Email_Identity</source_model>
                            <sort_order>7</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>1</show_in_store>
                        </identity>
                    </fields>
                </enterprise_reminder>
            </groups>
        </promo>
    </sections>
</config>
