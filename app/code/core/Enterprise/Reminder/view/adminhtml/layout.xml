<layout>
    <!-- reminder grid page -->
    <adminhtml_reminder_index>
        <reference name="content">
            <block type="Enterprise_Reminder_Block_Adminhtml_Reminder" name="enterprise_reminder"/>
        </reference>
    </adminhtml_reminder_index>
    <adminhtml_reminder_edit>
        <reference name="head">
            <action method="addJs"><file>mage/adminhtml/wysiwyg/widget.js</file></action>
            <action method="addCss"><file>prototype/windows/themes/default.css</file></action>
            <action method="addCss"><file>Mage_Core::prototype/magento.css</file></action>
         </reference>
        <reference name="content">
            <block type="Enterprise_Reminder_Block_Adminhtml_Reminder_Edit" name="adminhtml_reminder_edit"/>
        </reference>
        <reference name="left">
            <block type="Enterprise_Reminder_Block_Adminhtml_Reminder_Edit_Tabs" name="adminhtml_reminder_edit_tabs"/>
        </reference>
    </adminhtml_reminder_edit>
    <adminhtml_promo_quote_edit>
        <reference name="content">
            <block type="Enterprise_Reminder_Block_Adminhtml_Promo_Notice" name="promo_edit_notice"/>
        </reference>
    </adminhtml_promo_quote_edit>
</layout>
