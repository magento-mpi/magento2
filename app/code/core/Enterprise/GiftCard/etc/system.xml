<config>
    <sections>
        <giftcard>
            <groups>
                <email translate="label" module="Enterprise_GiftCard">
                    <label>Gift Card Email Settings</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>100</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <identity translate="label">
                            <label>Gift Card Notification Email Sender</label>
                            <frontend_type>select</frontend_type>
                            <source_model>Mage_Backend_Model_Config_Source_Email_Identity</source_model>
                            <sort_order>6</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </identity>
                        <template translate="label">
                            <label>Gift Card Notification Email Template</label>
                            <frontend_type>select</frontend_type>
                            <source_model>Mage_Backend_Model_Config_Source_Email_Template</source_model>
                            <sort_order>7</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </template>
                    </fields>
                </email>
                <general translate="label" module="Enterprise_GiftCard">
                    <label>Gift Card General Settings</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>200</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <is_redeemable translate="label">
                            <label>Redeemable</label>
                            <frontend_type>select</frontend_type>
                            <source_model>Mage_Backend_Model_Config_Source_Yesno</source_model>
                            <sort_order>1</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                        </is_redeemable>
                        <lifetime translate="label comment">
                            <label>Lifetime (days)</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>2</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                            <comment>If empty no expiration.</comment>
                        </lifetime>
                        <allow_message translate="label">
                            <label>Allow Gift Message</label>
                            <frontend_type>select</frontend_type>
                            <source_model>Mage_Backend_Model_Config_Source_Yesno</source_model>
                            <sort_order>3</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </allow_message>
                        <message_max_length translate="label">
                            <label>Gift Message Maximum Length</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>4</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </message_max_length>
                        <order_item_status translate="label">
                            <label>Generate Gift Card Account when Order Item is</label>
                            <frontend_type>select</frontend_type>
                            <source_model>Enterprise_GiftCard_Model_Source_Status</source_model>
                            <sort_order>5</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                        </order_item_status>
                    </fields>
                </general>
            </groups>
        </giftcard>
    </sections>
</config>
