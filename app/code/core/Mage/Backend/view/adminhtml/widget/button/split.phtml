/**
 * Template for Mage_Backend_Block_Widget_Button_Split
 */
?>
<div id="<?php echo $this->getId(); ?>" class="buttons-group">
    <div id="<?php echo $this->getId(); ?>_main_control" class="button <?php echo $this->getClass() ?: '' ?>">
        <span><?php echo $this->getLabel(); ?></span>
    </div>
    <div class="button btn-toggle" data-toggle="dropdown"><span>Select</span></div>
    <ul class="dropdown-menu">
        <?php foreach ($this->getOptions() as $option): ?>
        <li>
            <span class="item<?php if($option['default']):?> item-default<?php endif; ?>" onclick="<?php echo $option['onclick']?>"><?php echo $option['label'] ?></span>
            <?php if(isset($option['hint'])): ?>
            <div class="tooltip">
                <a href="<?php echo $option['hint']['href'] ?>" class="help"><?php echo $option['hint']['label'] ?></a>
            </div>
            <?php endif; ?>
        </li>
        <?php endforeach; ?>
    </ul>
</div>
<script type="text/javascript">//<[CDATA[
document.observe("dom:loaded", function() {
    (function($) {
        $('#<?php echo $this->getId(); ?> [data-toggle="dropdown"]').on('click.toggleDropdown', function() {
            $(this).toggleClass('active')
                .closest('.buttons-group')
                .toggleClass('active');

            return false;
        });

        $('#<?php echo $this->getId(); ?>_main_control').click(function() {
            $('#<?php echo $this->getId(); ?> .dropdown-menu > li > span.item-default').trigger('click');
        });
    })(jQuery);
});
//]]>
</script>
