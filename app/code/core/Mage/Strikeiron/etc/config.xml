<config>
    <modules>
        <Mage_Strikeiron>
            <version>0.9.0</version>
        </Mage_Strikeiron>
    </modules>
    <global>
        <currency>
            <import>
                <services>
                    <strikeiron>
                        <name>StrikeIron</name>
                        <model>strikeiron/currency_import_strikeiron</model>
                    </strikeiron>
                </services>
            </import>
        </currency>
        <models>
            <strikeiron>
                <class>Mage_Strikeiron_Model</class>
            </strikeiron>
        </models>
        <resources>
            <strikeiron_setup>
                <setup>
                    <module>Mage_Strikeiron</module>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </strikeiron_setup>
            <strikeiron_write>
                <connection>
                    <use>core_write</use>
                </connection>
            </strikeiron_write>
            <strikeiron_read>
                <connection>
                    <use>core_read</use>
                </connection>
            </strikeiron_read>
        </resources>
        <events>
            <customer_save_before>
                <observers>
                    <strikeiron_email_validation>
                        <type>singleton</type>
                        <class>strikeiron/strikeiron</class>
                        <method>customerSaveBeforeObserver</method>
                    </strikeiron_email_validation>
                </observers>
            </customer_save_before>
        </events>
         <template>
            <email>
                <strikeiron_customer_error_email_template translate="label" module="directory">
                    <label>Strikeiron Email Update Warnings</label>
                    <file>strikeiron_email_warning.html</file>
                    <type>text</type>
                </strikeiron_customer_error_email_template>
            </email>
        </template>
    </global>
    <adminhtml>
        <menu>
            <general>
                <children>
                    <strikeiron translate="title" module="strikeiron">
                        <title>Strikeiron</title>
                        <sort_order>180</sort_order>
                        <action>adminhtml/strikeiron/</action>
                    </strikeiron>
                </children>
            </general>
        </menu>
    </adminhtml>
    <default>
        <strikeiron>
            <config>
                <user backend_model="adminhtml/system_config_backend_encrypted"/>
                <password backend_model="adminhtml/system_config_backend_encrypted"/>
            </config>
            <customer>
                <undetermined_action>accept</undetermined_action>
                <error_email_template>strikeiron_customer_error_email_template</error_email_template>
            </customer>
        </strikeiron>
    </default>
</config>