<?php
/* @var $this Magento_Bundle_Block_Catalog_Product_View */
$_helper = $this->helper('Magento_Catalog_Helper_Output');
$_product = $this->getProduct();
?>
<div id="messages_product_view"><?php echo $this->getLayout()->renderElement('messages') ?></div>
<div id="bundle-product-wrapper">
    <div id="bundleProduct">
        <div id="productView" class="product-view">
            <div class="product-essential">
                <div class="product-shop">
                    <div class="product-main-info">
                        <div class="product-name">
                            <h1><?php echo $_helper->productAttribute($_product, $_product->getName(), 'name') ?></h1>
                        </div>
                        <p class="product-ids"><?php echo __('SKU#%1',$this->escapeHtml($_product->getSku())); ?></p>
                        <?php echo $this->getReviewsSummaryHtml($_product, false, true)?>
                        <?php echo $this->getChildHtml('product_type_data') ?>
                        <?php echo $this->getChildHtml('alert_urls') ?>
                    </div>
                    <?php echo $this->getChildHtml('tierprices') ?>
                    <?php echo $this->getChildHtml('extrahint') ?>
                    <?php echo $this->getChildHtml('customize_button') ?>
                    <?php if (!$this->hasOptions()):?>
                        <?php if($_product->isSaleable()): ?>
                            <button type="button" onclick="window.location='<?php echo Mage::getBaseUrl().$_product->getRequestPath();?>?startcustomization=1'" class="button btn-cart"><span><span><?php echo __("Customize and Add to Cart") ?></span></span></button>
                        <?php endif; ?>
                    <?php endif; ?>
                    <?php echo $this->getChildHtml('addto') ?>

                    <?php if ($_product->getShortDescription()):?>
                        <div class="short-description std">
                            <h2><?php echo __('Quick Overview') ?></h2>
                            <?php echo $_helper->productAttribute($_product, nl2br($_product->getShortDescription()), 'short_description') ?>
                        </div>
                    <?php endif;?>

                    <?php echo $this->getChildHtml('other');?>

                </div>
                <div class="product-img-box">
                    <?php echo $this->getChildHtml('base-image') ?>
                    <?php echo $this->getChildHtml('gallery') ?>
                </div>
            </div>
            <div class="product-collateral">
                <?php $_description = $this->getChildHtml('description') ?>
                <?php $_additional = $this->getChildHtml('additional') ?>
                <?php if($_description || $_additional):?>
                    <div class="c pr" data-mage-init="{tabs: []}">
                        <ul>
                            <?php if($_description):?>
                                <li><a href="#product.details"><?php echo __('Details') ?></a></li>
                            <?php endif; ?>
                            <?php if($_description):?>
                                <li><a href="#product.additional"><?php echo __('Additional Information') ?></a></li>
                            <?php endif; ?>
                        </ul>
                        <?php if($_description):?>
                           <div id="product.details"><?php echo $_description ?></div>
                        <?php endif;?>
                        <?php if($_additional):?>
                            <div id="product.additional"><?php echo $_additional ?></div>
                        <?php endif;?>
                    </div>
                <?php endif; ?>
                <?php if ($this->canEmailToFriend()): ?>
                    <p class="emailto-link"><a href="<?php echo $this->helper('Magento_Catalog_Helper_Product')->getEmailToFriendUrl($_product) ?>"><?php echo __('Email to a Friend') ?></a></p>
                <?php endif; ?>
            </div>
            <div class="clearer"></div>
            <?php echo $this->getChildHtml('relatedProducts') ?>
            <?php echo $this->getChildHtml('upsell_products') ?>
            <?php echo $this->getChildHtml('product_additional_data') ?>
        </div>
        <form action="<?php echo $this->getSubmitUrl($_product) ?>" method="post" id="product_addtocart_form"<?php if($_product->getOptions()): ?> enctype="multipart/form-data"<?php endif; ?>>
        <div class="no-display">
            <input type="hidden" name="product" value="<?php echo $_product->getId() ?>" />
            <input type="hidden" name="related_product" id="related-products-field" value="" />
        </div>
        <?php if ($_product->isSaleable() && $this->hasOptions()): ?>
        <div id="options-container" style="display:none">
            <div id="customizeTitle" class="page-title title-buttons">
                <h1><?php echo __('Customize %1', $_helper->productAttribute($_product, $_product->getName(), 'name')) ?></h1>
                <a href="#" class="bundle-slide-back"><small>&lsaquo;</small> Go back to product detail</a>
            </div>
            <?php echo $this->getChildHtml('bundleSummary') ?>
            <?php echo $this->getChildChildHtml('options_container') ?>
        </div>
        <?php endif;?>
        </form>
    </div>
</div>
<script type="text/javascript">
    (function($) {
        head.js("<?php echo $this->getViewFileUrl('Magento_Bundle::js/slide.js')?>", function() {
            $('#bundle-product-wrapper').slide(
                <?php if ($this->isStartCustomization()): ?>
                    {autostart: true}
                <?php endif;?>
            );
        });
    })(jQuery);
</script>
