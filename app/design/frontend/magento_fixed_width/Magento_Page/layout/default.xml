<layout version="0.1.0">
    <default>
        <reference name="root">
            <container name="breadcrumbs.container" as="breadcrumbsContainer" after="header" label="Breadcrumbs"/>
            <container name="footer.before" as="footer_before" before="footer" label="Page Footer" htmlTag="div" htmlClass="footer-before-container"/>
        </reference>
        <move element="breadcrumbs" destination="breadcrumbs.container"/>
        <reference name="head">
            <action method="addCss"><file>css/styles.css</file></action>
            <action method="addCss"><file>css/styles-ie.css</file><params/><if>lt IE 8</if></action>
            <action method="addCss"><file>css/print.css</file><params>media="print"</params></action>
        </reference>
        <reference name="header">
            <block type="Magento_Page_Block_Template_Links" name="account.links" as="accountLinks" before="top.links"/>
            <block type="Magento_Page_Block_Template_Links" name="checkout.links" as="checkoutLinks" after="top.links"/>
            <container name="top.switches" as="switches" label="Store Language" after="checkout.links"/>
            <block type="Magento_Page_Block_Html_Welcome" name="welcome" as="welcome" after="top.container"/>
        </reference>
        <move element="store_language" destination="top.switches"/>
        <move element="store_switcher" destination="footer" as="store_switcher" after="-"/>
        <remove name="bottom.container"/>
    </default>
</layout>
