<layout version="0.1.0">
    <default>
        <reference name="head">
            <action method="addCss">
                <file>css/styles.css</file>
            </action>
            <action method="addCss">
                <file>css/styles-ie.css</file>
                <params/>
                <if>lt IE 8</if>
            </action>
            <action method="addCss">
                <file>css/print.css</file>
                <params>media="print"</params>
            </action>
        </reference>
    </default>
    <print>
        <reference name="head">
            <action method="addCss">
                <file>css/styles.css</file>
            </action>
            <action method="addJs">
                <file>css/styles-ie.css</file>
                <params/>
                <if>lt IE 8</if>
            </action>
            <action method="addCss">
                <file>css/print.css</file>
                <params>media="print"</params>
            </action>
        </reference>
    </print>

    <restriction_index_stub>
        <reference name="head">
            <action method="addCss">
                <file>css/styles.css</file>
            </action>
            <action method="addCss">
                <file>css/styles-ie.css</file>
                <params/>
                <if>lt IE 8</if>
            </action>
            <action method="addCss">
                <file>css/print.css</file>
                <params>media="print"</params>
            </action>
        </reference>
    </restriction_index_stub>

    <catalog_product_view>
        <reference name="head">
            <action method="addJs">
                <file>js/tabs.js</file>
            </action>
        </reference>
    </catalog_product_view>

    <catalog_product_view_type_bundle>
        <reference name="head">
            <action method="addJs">
                <file>js/bundle_product_view.js</file>
            </action>
        </reference>
        <reference name="product.info">
            <block type="Enterprise_GiftRegistry_Block_Product_View" name="product.customize.button"/>
        </reference>
    </catalog_product_view_type_bundle>
</layout>
