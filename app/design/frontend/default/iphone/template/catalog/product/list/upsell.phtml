<?php if(count($this->getItemCollection()->getItems())): ?>
    <h2 class="up-sell-heading"><?php echo $this->__('You may also be interested in the following product(s)') ?></h2>
    <ul class="up-sell">
        <?php $this->resetItemsIterator() ?>
        <?php if($_link=$this->getIterableItem()): ?>
            <li>
                <a href="<?php echo $_link->getProductUrl() ?>" title="<?php echo $this->htmlEscape($_link->getName()) ?>">
                    <p class="product-image"><img src="<?php echo $this->helper('catalog/image')->init($_link, 'small_image')->resize(90) ?>" width="90" height="90" alt="<?php echo $this->htmlEscape($_link->getName()) ?>" title="<?php echo $this->htmlEscape($_link->getName()) ?>"></p>
                    <h5><?php echo $this->htmlEscape($_link->getName()) ?></h5>
                    <div class="price-box">
                        <span class="regular-price"><span class="price"><?php echo $this->getPriceHtml($_link, true, '-upsell') ?></span></span>
                    </div>
                </a>
            </li>
        <?php endif; ?>
    </ul>
<?php endif ?>
