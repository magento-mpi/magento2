<layout version="0.1.0">
    <checkout_cart_index>
        <reference name="checkout.cart">
            <block type="Enterprise_GiftCardAccount_Block_Checkout_Cart_Giftcardaccount" template="cart/block.phtml" name="checkout.cart.giftcardaccount" as="giftcards" />
        </reference>
    </checkout_cart_index>

    <enterprise_giftcardaccount_cart_check translate="label" module="enterprise_giftcardaccount">
        <label>Gift Card Balance Check Form</label>
        <remove name="right"/>
        <remove name="left"/>
        <reference name="root">
            <action method="setTemplate"><template>1column.phtml</template></action>
        </reference>
        <reference name="content">
            <block type="Enterprise_GiftCardAccount_Block_Check" template="cart/check.phtml" name="check">
                <block type="Enterprise_GiftCardAccount_Block_Check" template="check.phtml" name="check.result" as="check_result"/>
            </block>
        </reference>
    </enterprise_giftcardaccount_cart_check>

    <enterprise_giftcardaccount_cart_quickcheck>
        <block type="Enterprise_GiftCardAccount_Block_Check" template="check.phtml" name="root"/>
    </enterprise_giftcardaccount_cart_quickcheck>

    <sales_order_view>
        <reference name="order_totals">
            <block type="Enterprise_GiftCardAccount_Block_Sales_Order_Giftcards" name="giftcards" template="order/giftcards.phtml" />
        </reference>
    </sales_order_view>
    <sales_order_print>
        <reference name="order_totals">
            <block type="Enterprise_GiftCardAccount_Block_Sales_Order_Giftcards" name="giftcards" template="order/giftcards.phtml" after="-"/>
        </reference>
    </sales_order_print>
    <sales_email_order_items>
        <reference name="order_totals">
            <block type="Enterprise_GiftCardAccount_Block_Sales_Order_Giftcards" name="giftcards" template="order/giftcards.phtml" after="-"/>
        </reference>
    </sales_email_order_items>

    <sales_order_invoice>
        <reference name="invoice_totals">
            <block type="Enterprise_GiftCardAccount_Block_Sales_Order_Giftcards" name="giftcards" template="order/giftcards.phtml" />
        </reference>
    </sales_order_invoice>
    <sales_order_printinvoice>
        <reference name="invoice_totals">
            <block type="Enterprise_GiftCardAccount_Block_Sales_Order_Giftcards" name="giftcards" template="order/giftcards.phtml" />
        </reference>
    </sales_order_printinvoice>
    <sales_email_order_invoice_items>
        <reference name="invoice_totals">
            <block type="Enterprise_GiftCardAccount_Block_Sales_Order_Giftcards" name="giftcards" template="order/giftcards.phtml" />
        </reference>
    </sales_email_order_invoice_items>

    <sales_order_creditmemo>
        <reference name="creditmemo_totals">
            <block type="Enterprise_GiftCardAccount_Block_Sales_Order_Giftcards" name="giftcards" template="order/giftcards.phtml" />
        </reference>
    </sales_order_creditmemo>
    <sales_order_printcreditmemo>
        <reference name="creditmemo_totals">
            <block type="Enterprise_GiftCardAccount_Block_Sales_Order_Giftcards" name="giftcards" template="order/giftcards.phtml" />
        </reference>
    </sales_order_printcreditmemo>
    <sales_email_order_creditmemo_items>
        <reference name="creditmemo_totals">
            <block type="Enterprise_GiftCardAccount_Block_Sales_Order_Giftcards" name="giftcards" template="order/giftcards.phtml" />
        </reference>
    </sales_email_order_creditmemo_items>

    <!-- enterprise_customerbalance_info_index>
        <reference name="customerbalance.wrapper">
        </reference>
    </enterprise_customerbalance_info_index -->

    <checkout_onepage_paymentmethod>
        <reference name="checkout.onepage.payment.methods.scripts">
            <block type="Enterprise_GiftCardAccount_Block_Checkout_Onepage_Payment_Additional" template="onepage/payment/scripts.phtml" name="giftcardaccount_scripts" />
        </reference>
         <reference name="checkout.onepage.payment.methods.additional">
            <block type="Enterprise_GiftCardAccount_Block_Checkout_Onepage_Payment_Additional" template="onepage/payment/additional.phtml" name="giftcardaccount_additional" />
        </reference>
    </checkout_onepage_paymentmethod>

    <enterprise_giftcardaccount_customer_index translate="label" module="enterprise_giftcardaccount">
        <label>Customer My Account Gift Card Check Form</label>
        <update handle="customer_account"/>

        <reference name="my.account.wrapper">
            <block type="Enterprise_GiftCardAccount_Block_Account_Redeem" name="redeem" template="account/redeem.phtml" />
        </reference>
    </enterprise_giftcardaccount_customer_index>

    <customer_account>
        <reference name="customer_account_navigation">
            <action method="addLink" translate="label" module="Enterprise_GiftCardAccount">
                <name>enterprise_giftcardaccount</name>
                <path>enterprise_giftcardaccount/customer/</path>
                <label>Gift Card</label>
            </action>
        </reference>
    </customer_account>

    <enterprise_customerbalance_info_index>
        <reference name="customerbalance.wrapper">
            <block type="Enterprise_GiftCardAccount_Block_Account_Redeem" name="redeem" template="account/redeem_link.phtml" after="balance" />
        </reference>
    </enterprise_customerbalance_info_index>


    <checkout_multishipping_billing>
        <reference name="payment_methods_after">
            <block type="Enterprise_GiftCardAccount_Block_Checkout_Onepage_Payment_Additional" template="multishipping/payment.phtml" name="giftcardaccount" />
        </reference>
    </checkout_multishipping_billing>
</layout>
