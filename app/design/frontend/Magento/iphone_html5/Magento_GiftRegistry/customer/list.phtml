<div class="page-title">
    <h1><?php echo __('Gift Registry'); ?></h1>
</div>
<div class="giftregistry">
<?php $entityCollection = $this->getEntityCollection(); ?>
<?php echo $this->getLayout()->getMessagesBlock()->getGroupedHtml();?>

<?php if ($entityCollection->getSize()):?>
    <?php echo $this->getChildHtml('pager') ?>
    <ul class="list">
        <?php foreach($entityCollection as $item): ?>
            <li class="list-item">

                <a class="btn-remove" href="<?php echo $this->getDeleteUrl($item)?>" onclick="return confirm('<?php echo __('Are you sure you want to delete this gift registry?'); ?>');"><?php echo __('Delete') ?></a>
                <h2><?php echo $this->truncateString($this->getEscapedTitle($item), 70)?></h2>
                <a class="link-edit" href="<?php echo $this->getEditUrl($item)?>"><?php echo __('Edit') ?></a>

                <div class="message">
                    <div><?php echo $this->getEscapedMessage($item)?></div>
                    <span class="date"><?php echo $this->getFormattedDate($item) ?></span>
                </div>

                <a href="<?php echo $this->getItemsUrl($item)?>"><?php echo __('Manage Items') ?></a> <span class="separator">|</span>
                <a href="<?php echo $this->getShareUrl($item)?>"><?php echo __('Share') ?></a>

            </li>
        <?php endforeach; ?>
    </ul>
    <?php echo $this->getChildHtml('pager') ?>
<?php else:?>
    <p><?php echo __('There are no created gift registries yet.'); ?></p>
<?php endif;?>

<?php if ($this->canAddNewEntity()):?>
<div class="buttons-set">
    <a class="button" href="<?php echo $this->escapeUrl($this->getAddUrl()) ?>"><span><?php echo __('Add New') ?></span></a>
</div>
<?php endif;?>
</div>
