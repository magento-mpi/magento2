<widgets xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:noNamespaceSchemaLocation="../../../../../code/Magento/Widget/etc/widget.xsd">
    <widget id="new_products" class="Magento\Catalog\Block\Product\Widget\NewWidget">
        <label translate="true">Catalog New Products List</label>
        <description translate="true">List of Products that are set as New</description>
        <parameters>
            <parameter name="template" xsi:type="select">
                <options>
                    <option name="list_default" value="catalog/product/widget/new/column/new_default_list.phtml">
                        <label translate="true">New Products Images and Names Template</label>
                    </option>
                    <option name="list_names" value="catalog/product/widget/new/column/new_names_list.phtml">
                        <label translate="true">New Products Names Only Template</label>
                    </option>
                    <option name="list_images" value="catalog/product/widget/new/column/new_images_list.phtml">
                        <label translate="true">New Products Images Only Template</label>
                    </option>
                </options>
            </parameter>
        </parameters>
        <containers>
            <container name="left">
                <template name="default" value="list_default" />
                <template name="names_only" value="list_names" />
                <template name="images_only" value="list_images" />
            </container>
            <container name="content">
                <template name="grid" value="default" />
                <template name="list" value="list" />
            </container>
            <container name="right">
                <template name="default" value="list_default" />
                <template name="names_only" value="list_names" />
                <template name="images_only" value="list_images" />
            </container>
        </containers>
    </widget>
    <widget id="recently_viewed" class="Magento\Reports\Block\Product\Widget\Viewed">
        <label translate="true">Recently Viewed Products</label>
        <description translate="true">List of Products Recently Viewed by Visitor</description>
        <parameters>
            <parameter name="template" xsi:type="select">
                <options>
                    <option name="list_default" value="reports/widget/viewed/column/viewed_default_list.phtml">
                        <label translate="true">Viewed Products Images and Names Template</label>
                    </option>
                    <option name="list_names" value="reports/widget/viewed/column/viewed_names_list.phtml">
                        <label translate="true">Viewed Products Names Only Template</label>
                    </option>
                    <option name="list_images" value="reports/widget/viewed/column/viewed_images_list.phtml">
                        <label translate="true">Viewed Products Images Only Template</label>
                    </option>
                </options>
            </parameter>
        </parameters>
        <containers>
            <container name="left">
                <template name="default" value="list_default" />
                <template name="names_only" value="list_names" />
                <template name="images_only" value="list_images" />
            </container>
            <container name="content">
                <template name="grid" value="default" />
                <template name="list" value="list" />
            </container>
            <container name="right">
                <template name="default" value="list_default" />
                <template name="names_only" value="list_names" />
                <template name="images_only" value="list_images" />
            </container>
        </containers>
    </widget>
    <widget id="recently_compared" class="Magento\Reports\Block\Product\Widget\Compared">
        <label translate="true">Recently Compared Products</label>
        <description translate="true">List of Products Recently Compared and Removed from the Compare List by Visitor</description>
        <parameters>
            <parameter name="template" xsi:type="select">
                <options>
                    <option name="list_default" value="reports/widget/compared/column/compared_default_list.phtml">
                        <label translate="true">Compared Products Images and Names Template</label>
                    </option>
                    <option name="list_names" value="reports/widget/compared/column/compared_names_list.phtml">
                        <label translate="true">Compared Product Names Only Template</label>
                    </option>
                    <option name="list_images" value="reports/widget/compared/column/compared_images_list.phtml">
                        <label translate="true">Compared Product Images Only Template</label>
                    </option>
                </options>
            </parameter>
        </parameters>
        <containers>
            <container name="left">
                <template name="default" value="list_default" />
                <template name="names_only" value="list_names" />
                <template name="images_only" value="list_images" />
            </container>
            <container name="content">
                <template name="grid" value="default" />
                <template name="list" value="list" />
            </container>
            <container name="right">
                <template name="default" value="list_default" />
                <template name="names_only" value="list_names" />
                <template name="images_only" value="list_images" />
            </container>
        </containers>
    </widget>
</widgets>
