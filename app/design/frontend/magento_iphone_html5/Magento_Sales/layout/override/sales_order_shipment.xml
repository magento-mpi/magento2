<layout version="0.1.0">
    <sales_order_shipment translate="label" type="page" parent="sales_order_view">
        <label>Customer My Account Order Shipment View</label>
        <update handle="customer_account"/>
        <reference name="my.account.wrapper">
            <block type="Magento_Sales_Block_Order_Info" as="info" name="sales.order.info">
                <block type="Magento_Sales_Block_Order_Info_Buttons" as="buttons" name="sales.order.info.buttons"/>
            </block>
            <block type="Magento_Sales_Block_Order_Shipment" name="sales.order.shipment" after="sales.order.info">
                <block type="Magento_Sales_Block_Order_Shipment_Items" name="shipment_items" template="order/shipment/items.phtml">
                    <action method="addItemRender">
                        <type>default</type>
                        <block>Magento_Catalog_Block_Product_Price</block>
                        <template>Magento_Sales::order/shipment/items/renderer/default.phtml</template>
                    </action>
                    <block type="Magento_Sales_Block_Order_Comments" name="shipment_comments" template="order/comments.phtml"/>
                </block>
            </block>
        </reference>
        <reference name="sales.order.info">
            <action method="addLink" translate="label">
                <name>view</name>
                <path>*/*/view</path>
                <label>Order Information</label>
            </action>
            <action method="addLink" translate="label">
                <name>invoice</name>
                <path>*/*/invoice</path>
                <label>Invoices</label>
            </action>
            <action method="addLink" translate="label">
                <name>shipment</name>
                <path/>
                <label>Shipments</label>
            </action>
            <action method="addLink" translate="label">
                <name>creditmemo</name>
                <path>*/*/creditmemo</path>
                <label>Refunds</label>
            </action>
        </reference>
        <container name="additional.product.info" label="Additional Product Info"/>
    </sales_order_shipment>
</layout>
