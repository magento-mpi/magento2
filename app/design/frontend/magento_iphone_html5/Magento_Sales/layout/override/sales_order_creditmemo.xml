<layout xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
    <handle id="sales_order_creditmemo" translate="label" type="page" parent="sales_order_view">
        <label>Customer My Account Order Creditmemo View</label>
        <update handle="customer_account"/>
        <reference name="my.account.wrapper">
            <block class="Magento_Sales_Block_Order_Info" as="info" name="sales.order.info">
                <block class="Magento_Sales_Block_Order_Info_Buttons" as="buttons" name="sales.order.info.buttons"/>
            </block>
            <block class="Magento_Sales_Block_Order_Creditmemo" name="sales.order.creditmemo" after="sales.order.info">
                <block class="Magento_Sales_Block_Order_Creditmemo_Items" name="creditmemo_items" template="order/creditmemo/items.phtml">
                    <action method="addItemRender">
                        <type>default</type>
                        <block>Magento_Catalog_Block_Product_Price</block>
                        <template>Magento_Sales::order/creditmemo/items/renderer/default.phtml</template>
                    </action>
                    <action method="addItemRender">
                        <type>grouped</type>
                        <block>Magento_Sales_Block_Order_Item_Renderer_Grouped</block>
                        <template>order/creditmemo/items/renderer/default.phtml</template>
                    </action>
                    <block class="Magento_Sales_Block_Order_Creditmemo_Totals" name="creditmemo_totals" template="order/totals.phtml">
                        <action method="setLabelProperties">
                            <value>colspan="6" class="a-right"</value>
                        </action>
                        <action method="setValueProperties">
                            <value>class="a-right"</value>
                        </action>
                        <block class="Magento_Tax_Block_Sales_Order_Tax" name="tax" template="order/tax.phtml"/>
                    </block>
                    <block class="Magento_Sales_Block_Order_Comments" name="creditmemo_comments" template="order/comments.phtml"/>
                </block>
            </block>
        </reference>
        <reference name="sales.order.info">
            <action method="addLink" translate="label">
                <name>view</name>
                <path>*/*/view</path>
                <label>Order Information</label>
            </action>
            <action method="addLink" translate="label">
                <name>invoice</name>
                <path>*/*/invoice</path>
                <label>Invoices</label>
            </action>
            <action method="addLink" translate="label">
                <name>shipment</name>
                <path>*/*/shipment</path>
                <label>Shipments</label>
            </action>
            <action method="addLink" translate="label">
                <name>creditmemo</name>
                <path/>
                <label>Refunds</label>
            </action>
        </reference>
        <container name="additional.product.info" label="Additional Product Info"/>
    </handle>
</layout>
