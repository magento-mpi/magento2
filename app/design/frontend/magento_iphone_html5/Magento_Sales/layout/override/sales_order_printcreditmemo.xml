<layout version="0.1.0">
    <sales_order_printcreditmemo>
        <reference name="content">
            <block type="Magento_Sales_Block_Order_Print_Creditmemo" name="sales.order.print.creditmemo" template="order/print/creditmemo.phtml">
                <action method="addItemRender">
                    <type>default</type>
                    <block>Magento_Catalog_Block_Product_Price</block>
                    <template>Magento_Sales::order/creditmemo/items/renderer/default.phtml</template>
                </action>
                <action method="addItemRender">
                    <type>grouped</type>
                    <block>Magento_Sales_Block_Order_Item_Renderer_Grouped</block>
                    <template>order/creditmemo/items/renderer/default.phtml</template>
                </action>
                <block type="Magento_Sales_Block_Order_Creditmemo_Totals" name="creditmemo_totals" template="order/totals.phtml">
                    <action method="setLabelProperties">
                        <value>colspan="6" class="a-right"</value>
                    </action>
                    <action method="setValueProperties">
                        <value>class="a-right"</value>
                    </action>
                    <block type="Magento_Tax_Block_Sales_Order_Tax" name="tax" template="order/tax.phtml"/>
                </block>
            </block>
        </reference>
        <container name="additional.product.info" label="Additional Product Info"/>
    </sales_order_printcreditmemo>
</layout>
