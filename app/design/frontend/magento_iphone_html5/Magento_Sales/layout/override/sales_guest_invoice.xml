<layout version="0.1.0">
    <sales_guest_invoice translate="label" type="page" parent="sales_guest_view">
        <label>Guest Order Invoice View</label>
        <reference name="root">
            <action method="setTemplate">
                <template>1column.phtml</template>
            </action>
        </reference>
        <reference name="content">
            <block type="Magento_Sales_Block_Order_Info" as="info" name="sales.order.info">
                <block type="Magento_Sales_Block_Order_Info_Buttons" as="buttons" name="sales.order.info.buttons"/>
            </block>
            <block type="Magento_Sales_Block_Order_Invoice" name="sales.order.invoice" after="sales.order.info">
                <block type="Magento_Sales_Block_Order_Invoice_Items" name="invoice_items" template="order/invoice/items.phtml">
                    <action method="addItemRender">
                        <type>default</type>
                        <block>Magento_Catalog_Block_Product_Price</block>
                        <template>Magento_Sales::order/invoice/items/renderer/default.phtml</template>
                    </action>
                    <action method="addItemRender">
                        <type>grouped</type>
                        <block>Magento_Sales_Block_Order_Item_Renderer_Grouped</block>
                        <template>order/invoice/items/renderer/default.phtml</template>
                    </action>
                    <block type="Magento_Sales_Block_Order_Invoice_Totals" name="invoice_totals" template="order/totals.phtml">
                        <action method="setLabelProperties">
                            <value>colspan="4" class="a-right"</value>
                        </action>
                        <action method="setValueProperties">
                            <value>class="last a-right"</value>
                        </action>
                        <block type="Magento_Tax_Block_Sales_Order_Tax" name="tax" template="order/tax.phtml"/>
                    </block>
                    <block type="Magento_Sales_Block_Order_Comments" name="invoice_comments" template="order/comments.phtml"/>
                </block>
            </block>
        </reference>
        <reference name="sales.order.info">
            <action method="addLink" translate="label">
                <name>view</name>
                <path>*/*/view</path>
                <label>Order Information</label>
            </action>
            <action method="addLink" translate="label">
                <name>invoice</name>
                <path/>
                <label>Invoices</label>
            </action>
            <action method="addLink" translate="label">
                <name>shipment</name>
                <path>*/*/shipment</path>
                <label>Shipments</label>
            </action>
            <action method="addLink" translate="label">
                <name>creditmemo</name>
                <path>*/*/creditmemo</path>
                <label>Refunds</label>
            </action>
        </reference>
    </sales_guest_invoice>
</layout>
