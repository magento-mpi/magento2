<layout xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="../../../../../../../../app/code/Magento/Core/etc/layout_single.xsd">
    <referenceBlock name="head">
        <block class="Magento\Theme\Block\Html\Head\Script" name="magento-catalogsearch-form-mini-js">
            <arguments>
                <argument name="file" xsi:type="string">Magento_CatalogSearch::form-mini.js</argument>
            </arguments>
        </block>
    </referenceBlock>
    <referenceBlock name="header">
        <block class="Magento\View\Element\Template" name="top.search" as="topSearch" template="Magento_CatalogSearch::form.mini.phtml"/>
    </referenceBlock>
</layout>
