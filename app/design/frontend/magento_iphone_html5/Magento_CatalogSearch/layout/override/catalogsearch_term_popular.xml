<layout xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" label="Popular Search Terms" type="page" parent="default">
    <referenceBlock name="head">
        <action method="setTitle">
            <argument translate="true" name="title" xsi:type="string">Search Terms</argument>
        </action>
    </referenceBlock>
    <referenceBlock name="root">
        <action method="setTemplate">
            <argument name="template" xsi:type="string">1column.phtml</argument>
        </action>
    </referenceBlock>
    <referenceContainer name="content">
        <block class="Magento_CatalogSearch_Block_Term" name="seo.searchterm" template="term.phtml"/>
    </referenceContainer>
</layout>
