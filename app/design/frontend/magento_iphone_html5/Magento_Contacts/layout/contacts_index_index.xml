<layout version="0.1.0">
    <contacts_index_index>
        <remove name="form.additional.info"/>
        <reference name="content">
            <block type="Magento_Page_Block_Html_Breadcrumbs" name="breadcrumbs" as="breadcrumbs" before="-">
                <action method="addCrumb" translate="crumbName">
                    <crumbName>home</crumbName>
                    <crumbInfo>
                        <label>Home</label>
                        <title>Home</title>
                        <link>/</link>
                    </crumbInfo>
                </action>
                <action method="addCrumb" translate="crumbName">
                    <crumbName>categories</crumbName>
                    <crumbInfo>
                        <label>Categories</label>
                        <title>Categories</title>
                    </crumbInfo>
                </action>
            </block>
        </reference>
    </contacts_index_index>
</layout>
