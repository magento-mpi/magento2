<layout version="0.1.0">
    <tag_product_list translate="label" type="page" parent="tag_list_index">
        <label>Tagged Products List</label>
        <reference name="root">
            <action method="setMyClass">
                <value>product-tags-list</value>
            </action>
        </reference>
        <reference name="content">
            <block type="Magento_Tag_Block_Product_Result" name="tag_products" template="Magento_CatalogSearch::result.phtml">
                <block type="Magento_Catalog_Block_Product_List" name="search_result_list" template="product/list.phtml">
                    <block type="Magento_Catalog_Block_Product_List_Toolbar" name="product_list_toolbar" template="product/list/toolbar.phtml">
                        <block type="Magento_Page_Block_Html_Pager" name="product_list_toolbar_pager"/>
                    </block>
                    <action method="setToolbarBlockName">
                        <name>product_list_toolbar</name>
                    </action>
                </block>
                <block type="Magento_Tag_Block_Catalog_Product_Rss_Link" name="tagged_product_list_rss_link" template="product/rss/link.phtml"/>
                <action method="setListOrders"/>
                <action method="setListModes"/>
                <action method="setListCollection"/>
            </block>
        </reference>
    </tag_product_list>
</layout>
