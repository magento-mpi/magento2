<layout version="0.1.0">
    <default>
        <reference name="top.container">
            <block type="Magento_Cms_Block_Block" name="cms.top.callout" before="-">
                <action method="setBlockId">
                    <block_id>top_callout</block_id>
                </action>
            </block>
        </reference>
        <reference name="right">
            <block type="Magento_Catalog_Block_Product_Compare_Sidebar" name="catalog.compare.sidebar" template="product/compare/sidebar.phtml"/>
        </reference>
        <block type="Magento_Catalog_Block_Product_Price_Template" name="catalog_product_price_template"/>
        <reference name="catalog_product_price_template">
            <action method="addPriceBlockType">
                <type>msrp</type>
                <block>Magento_Catalog_Block_Product_Price</block>
                <template>product/price_msrp.phtml</template>
            </action>
            <action method="addPriceBlockType">
                <type>msrp_item</type>
                <block>Magento_Catalog_Block_Product_Price</block>
                <template>product/price_msrp_item.phtml</template>
            </action>
            <action method="addPriceBlockType">
                <type>msrp_noform</type>
                <block>Magento_Catalog_Block_Product_Price</block>
                <template>product/price_msrp_noform.phtml</template>
            </action>
        </reference>
    </default>
</layout>
