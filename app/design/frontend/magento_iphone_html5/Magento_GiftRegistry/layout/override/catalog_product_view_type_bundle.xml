<layout xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
    <referenceBlock name="product.info">
        <block class="Magento\GiftRegistry\Block\Product\View" name="giftregistry.product.view.customize.button">
            <action method="setGiftRegistryTemplate">
                <argument name="blockName" xsi:type="string">customize.button</argument>
                <argument name="template" xsi:type="string">Magento_GiftRegistry::product/customize.phtml</argument>
            </action>
            <action method="setGiftRegistryTemplate">
                <argument name="blockName" xsi:type="string">product.info.addtocart.bundle</argument>
                <argument name="template" xsi:type="string">Magento_GiftRegistry::product/addtocart.phtml</argument>
            </action>
            <action method="setGiftRegistryUrl">
                <argument name="blockName" xsi:type="string">product.info.addtocart.bundle</argument>
            </action>
        </block>
    </referenceBlock>
</layout>
