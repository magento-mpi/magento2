<layout version="0.1.0">
    <sendfriend_product_send translate="label" type="page" parent="catalog_product_view">
        <label>Catalog Product Email to a Friend</label>
        <reference name="root">
            <action method="setMyClass">
                <value>send-to-friend</value>
            </action>
        </reference>
        <reference name="head">
            <block type="Mage_Page_Block_Html_Head_Script" name="varien-product-js">
                <arguments>
                    <file>varien/product.js</file>
                </arguments>
            </block>
        </reference>
        <reference name="content">
            <block type="Mage_Sendfriend_Block_Send" name="sendfriend.send" template="send.phtml"/>
        </reference>
    </sendfriend_product_send>
</layout>
