<layout version="0.1.0">
    <cms_index_defaultindex translate="label" type="page" parent="cms_page_view">
        <label>CMS Home Default Page</label>
        <reference name="root">
            <action method="setTemplate">
                <template>1column.phtml</template>
            </action>
        </reference>
        <reference name="content">
            <block type="Magento_Catalog_Block_Navigation" name="hp_nav" template="navigation/top.phtml"/>
            <block type="Magento_Core_Block_Template" name="default_home_page" template="Magento_Cms::default/home.phtml"/>
        </reference>
    </cms_index_defaultindex>
</layout>
