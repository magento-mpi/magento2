<layout xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
    <referenceBlock name="root">
        <action method="setTemplate">
            <argument name="template" xsi:type="string">1column.phtml</argument>
        </action>
    </referenceBlock>
    <referenceContainer name="content">
        <block class="Magento\Catalog\Block\Navigation" name="hp_nav" template="navigation/top.phtml" cacheable="false"/>
        <block class="Magento\View\Element\Template" name="default_no_route" template="Magento_Cms::default/no-route.phtml"/>
    </referenceContainer>
</layout>
