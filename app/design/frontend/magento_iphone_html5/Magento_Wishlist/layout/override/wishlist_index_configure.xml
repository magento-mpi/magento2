<layout xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="../../../../../../../app/code/Magento/Core/etc/layout_single.xsd">
    <referenceBlock name="product.info">
        <block class="Magento\Wishlist\Block\Item\Configure" name="product.info.addto" as="addto" template="item/configure/addto.phtml"/>
    </referenceBlock>
    <referenceBlock name="product.info.options.wrapper.bottom">
        <action method="unsetChild">
            <argument name="name" xsi:type="string">product.info.addto</argument>
        </action>
        <action method="append">
            <argument name="block" xsi:type="string">product.info.addto</argument>
        </action>
    </referenceBlock>
</layout>
