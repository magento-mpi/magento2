<layout>
    <adminhtml_staging_manage_index>
        <reference name="content">
            <block type="Enterprise_Staging_Block_Adminhtml_Staging"  name="enterprise_staging" />
        </reference>
    </adminhtml_staging_manage_index>

    <adminhtml_staging_manage_grid>
        <remove name="root" />
        <block type="Enterprise_Staging_Block_Adminhtml_Staging_Grid" output="toHtml" name="enterprise_staging_grid" />
    </adminhtml_staging_manage_grid>

    <adminhtml_staging_manage_new>
        <update handle="adminhtml_staging_manage_edit" />
    </adminhtml_staging_manage_new>

    <adminhtml_staging_manage_edit>
        <reference name="content">
            <block type="Enterprise_Staging_Block_Adminhtml_Staging_Edit"  name="enterprise_staging_edit" />
        </reference>
        <reference name="left">
            <block type="Enterprise_Staging_Block_Adminhtml_Staging_Edit_Tabs" name="enterprise_staging_edit_tabs"></block>
        </reference>
        <reference name="head">
            <action method="addJs"><script>enterprise/adminhtml/staging.js</script></action>
        </reference>
    </adminhtml_staging_manage_edit>

    <adminhtml_staging_manage_merge>
        <reference name="content">
            <block type="Enterprise_Staging_Block_Adminhtml_Staging_Merge"  name="enterprise_staging_merge">
                <action method="addMergeSettingsBlockType"><type>website</type><block>Enterprise_Staging_Block_Adminhtml_Staging_Merge_Settings_Website</block><template>enterprise/staging/staging/merge/settings/website.phtml</template></action>
            </block>
        </reference>
        <reference name="head">
            <action method="addJs"><script>enterprise/adminhtml/staging.js</script></action>
        </reference>
    </adminhtml_staging_manage_merge>

    <adminhtml_staging_backup_index>
        <reference name="content">
            <block type="Enterprise_Staging_Block_Adminhtml_Backup"  name="enterprise_staging_backup" />
        </reference>
        <reference name="head">
            <action method="addJs"><script>enterprise/adminhtml/staging.js</script></action>
        </reference>
    </adminhtml_staging_backup_index>

    <adminhtml_staging_backup_grid>
        <remove name="root" />
        <block type="Enterprise_Staging_Block_Adminhtml_Backup_Grid" output="toHtml" name="enterprise_staging_backup" />
    </adminhtml_staging_backup_grid>

    <adminhtml_staging_backup_edit>
        <reference name="content">
            <block type="Enterprise_Staging_Block_Adminhtml_Backup_Edit"  name="enterprise_staging_backup_edit" />
        </reference>
        <reference name="left">
            <block type="Enterprise_Staging_Block_Adminhtml_Backup_Edit_Tabs" name="enterprise_staging_backup_edit_tabs"></block>
        </reference>
        <reference name="head">
            <action method="addJs"><script>enterprise/adminhtml/staging.js</script></action>
        </reference>
    </adminhtml_staging_backup_edit>

    <adminhtml_staging_log_index>
        <reference name="content">
            <block type="Enterprise_Staging_Block_Adminhtml_Log"  name="enterprise_staging_log" />
        </reference>
    </adminhtml_staging_log_index>

    <adminhtml_staging_log_view>
        <reference name="content">
            <block type="Enterprise_Staging_Block_Adminhtml_Log_View"  name="enterprise_staging_log_view">
                <action method="addInformationRenderer"><type>default</type><block>Enterprise_Staging_Block_Adminhtml_Log_View_Information_Default</block><template>enterprise/staging/log/information/default.phtml</template></action>
                <action method="addInformationRenderer"><type>reset</type><block>Enterprise_Staging_Block_Adminhtml_Log_View_Information_Default</block><template>enterprise/staging/log/information/default.phtml</template></action>
                <action method="addInformationRenderer"><type>create</type><block>Enterprise_Staging_Block_Adminhtml_Log_View_Information_Staging</block><template>enterprise/staging/log/information/create.phtml</template></action>
                <action method="addInformationRenderer"><type>merge</type><block>Enterprise_Staging_Block_Adminhtml_Log_View_Information_Staging</block><template>enterprise/staging/log/information/merge.phtml</template></action>
                <action method="addInformationRenderer"><type>schedule_merge</type><block>Enterprise_Staging_Block_Adminhtml_Log_View_Information_Staging</block><template>enterprise/staging/log/information/merge.phtml</template></action>
                <action method="addInformationRenderer"><type>unschedule_merge</type><block>Enterprise_Staging_Block_Adminhtml_Log_View_Information_Staging</block><template>enterprise/staging/log/information/default.phtml</template></action>
                <action method="addInformationRenderer"><type>cron_merge</type><block>Enterprise_Staging_Block_Adminhtml_Log_View_Information_Staging</block><template>enterprise/staging/log/information/merge.phtml</template></action>
                <action method="addInformationRenderer"><type>rollback</type><block>Enterprise_Staging_Block_Adminhtml_Log_View_Information_Rollback</block><template>enterprise/staging/log/information/rollback.phtml</template></action>
            </block>
        </reference>
    </adminhtml_staging_log_view>
</layout>
