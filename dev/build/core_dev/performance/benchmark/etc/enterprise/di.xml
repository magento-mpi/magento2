<config>
    <preference for="Magento\FullPageCache\Model\Processor\RestrictionInterface" type="Magento\FullPageCache\Model\Processor\Restriction" />
    <preference for="Magento\FullPageCache\Model\Placeholder\ConfigInterface" type="Magento\FullPageCache\Model\Placeholder\Config" />
    <type name="Magento\FullPageCache\Model\Request\Identifier">
        <param name="scopeCode">
            <value type="argument">Magento\Core\Model\App::PARAM_RUN_CODE</value>
        </param>
    </type>
    <type name="Magento\FullPageCache\Model\Processor">
        <param name="storeManager">
            <instance type="Magento\Core\Model\StoreManager\Proxy" />
        </param>
        <param name="metadata">
            <instance type="Magento\FullPageCache\Model\Metadata\Proxy" />
        </param>
        <param name="requestIdentifier">
            <instance type="Magento\FullPageCache\Model\Request\Identifier\Proxy" />
        </param>
    </type>
    <type name="Magento\FullPageCache\Model\DesignPackage\Rules">
        <param name="designChange">
            <instance type="Magento\Core\Model\Design\Proxy" />
        </param>
        <param name="design">
            <instance type="Magento\Core\Model\View\Design\Proxy" />
        </param>
    </type>
    <type name="Magento\HTTP\Handler\Composite">
        <param name="handlers">
            <value>
                <fpc>
                    <sortOrder>25</sortOrder>
                    <class>Magento\FullPageCache\Model\Http\Handler</class>
                </fpc>
            </value>
        </param>
    </type>
    <type name="Magento\FullPageCache\Model\Http\Handler">
        <param name="requestProcessors">
            <value>
                <ee>
                    <class>Magento\FullPageCache\Model\Processor</class>
                    <sortOrder>50</sortOrder>
                </ee>
            </value>
        </param>
    </type>
    <type name="Magento\App\Cache\Frontend\Pool">
        <param name="defaultSettings">
            <value>
                <backend>Magento\Cache\Backend\Memcached</backend>
                <backend_options>
                    <servers>
                        <server>
                            <host>{{memcache_host}}</host>
                            <port>{{memcache_port}}</port>
                        </server>
                    </servers>
                    <compression>0</compression>
                    <slab_size>1048576</slab_size>
                </backend_options>
            </value>
        </param>
    </type>
</config>
