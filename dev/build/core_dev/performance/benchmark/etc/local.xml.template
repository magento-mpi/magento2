<config>
    <install>
        <date>{{date}}</date>
    </install>
    <crypt>
        <key>{{key}}</key>
    </crypt>
    <db>
        <table_prefix>{{db_prefix}}</table_prefix>
    </db>
    <connection name="default">
        <host>{{db_host}}</host>
        <username>{{db_user}}</username>
        <password>{{db_pass}}</password>
        <dbName>{{db_name}}</dbName>
        <initStatements>{{db_init_statements}}</initStatements>
        <model>{{db_model}}</model>
        <adapter>Magento\Core\Model\Resource\Type\Db\Pdo\Mysql</adapter>
        <active>1</active>
    </connection>
    <cache>
        <frontend name="default">
            <backend>Magento\Cache\Backend\Memcached</backend>
            <backend_options>
                <servers>
                    <server>
                        <host>{{memcache_host}}</host>
                        <port>{{memcache_port}}</port>
                    </server>
                </servers>
                <compression>0</compression>
                <slab_size>1048576</slab_size>
            </backend_options>
        </frontend>
        <type name="full_page" frontend="default"/>
        <!-- @todo Remove duplication of the FPC configuration once MAGETWO-7978 is implemented -->
        <frontend name="full_page_cache">
            <backend>Magento\Cache\Backend\Memcached</backend>
            <backend_options>
                <servers>
                    <server>
                        <host>{{memcache_host}}</host>
                        <port>{{memcache_port}}</port>
                    </server>
                </servers>
                <compression>0</compression>
                <slab_size>1048576</slab_size>
            </backend_options>
        </frontend>
    </cache>
    <resource name="default_setup" connection="default"/>
    <session_save><![CDATA[memcache]]></session_save>
    <session_save_path><![CDATA[tcp://{{memcache_host}}:{{memcache_port}}?persistent=1&weight=2&timeout=10&retry_interval=10]]></session_save_path>
    <session_cache_limiter><![CDATA[nocache]]></session_cache_limiter>
    <backend>
        <frontName>{{backend_frontname}}</frontName>
    </backend>
</config>
