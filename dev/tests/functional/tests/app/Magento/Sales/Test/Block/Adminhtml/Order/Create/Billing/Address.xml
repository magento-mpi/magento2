<mapping strict="0">
    <wrapper>order[billing_address]</wrapper>
    <fields>
        <firstname />
        <lastname />
        <company />
        <street_1>
            <selector>[name='order[billing_address][street][0]']</selector>
        </street_1>
        <city />
        <country_id>
            <input>select</input>
        </country_id>
        <region_id>
            <input>select</input>
        </region_id>
        <postcode />
        <telephone />
        <save_in_address_book>
            <input>checkbox</input>
        </save_in_address_book>
    </fields>
</mapping>
