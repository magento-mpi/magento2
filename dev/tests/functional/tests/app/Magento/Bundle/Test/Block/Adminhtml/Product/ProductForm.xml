<tabs>
    <product-details>
        <class>\Magento\Backend\Test\Block\Widget\Tab</class>
        <selector>#product_info_tabs_product-details</selector>
        <strategy>css selector</strategy>
        <wrapper>product</wrapper>
        <fields>
            <tax_class_id>
                <input>select</input>
            </tax_class_id>
            <is_virtual>
                <input>checkbox</input>
            </is_virtual>
            <qty>
                <selector>[name='product[quantity_and_stock_status][qty]']</selector>
            </qty>
            <quantity_and_stock_status>
                <selector>[name='product[quantity_and_stock_status][is_in_stock]']</selector>
                <input>select</input>
            </quantity_and_stock_status>
            <description>
                <selector>#description</selector>
                <input>textarea</input>
            </description>
            <shipment_type>
                <input>select</input>
            </shipment_type>
            <status>
                <selector>[name="product-online-switcher"]</selector>
                <input>checkbox</input>
            </status>
            <sku_type>
                <input>select</input>
            </sku_type>
            <price_type>
                <input>select</input>
            </price_type>
            <weight_type>
                <input>select</input>
            </weight_type>
            <weight>
                <input>input</input>
            </weight>
        </fields>
    </product-details>
    <bundle>
        <class>\Magento\Bundle\Test\Block\Adminhtml\Catalog\Product\Edit\Tab\Bundle</class>
        <selector>#product_info_tabs_product-details</selector>
        <strategy>css selector</strategy>
    </bundle>
</tabs>
