<tabs>
    <general>
        <class>\Magento\Rma\Test\Block\Adminhtml\Rma\Edit\Tab\General</class>
        <selector>#rma_info_tabs_general_section</selector>
        <strategy>css selector</strategy>
        <fields>
            <details composite="1">
                <entity_id>
                    <selector>.//*[@class="rma-request-details"]//tr[1]/td[1]</selector>
                    <strategy>xpath</strategy>
                </entity_id>
                <order_id>
                    <selector>.//*[@class="rma-request-details"]//tr[2]/td[1]</selector>
                    <strategy>xpath</strategy>
                </order_id>
                <customer_name>
                    <selector>.//*[@class="rma-request-details"]//tr[3]/td[1]</selector>
                    <strategy>xpath</strategy>
                </customer_name>
                <customer_email>
                    <selector>.//*[@class="rma-request-details"]//tr[4]/td[1]</selector>
                    <strategy>xpath</strategy>
                </customer_email>
                <contact_email>
                    <selector>.//*[@class="rma-request-details"]//tr[5]/td[1]</selector>
                    <strategy>xpath</strategy>
                </contact_email>
            </details>
            <comment composite="1">
                <comment>
                    <selector>[name="comment[comment]"]</selector>
                    <input>textarea</input>
                </comment>
                <is_visible_on_front>
                    <selector>[name="comment[is_visible_on_front]"]</selector>
                    <input>checkbox</input>
                </is_visible_on_front>
            </comment>
        </fields>
    </general>
    <items>
        <class>\Magento\Rma\Test\Block\Adminhtml\Rma\Edit\Tab\Items</class>
        <selector>#rma_info_tabs_items_section</selector>
        <strategy>css selector</strategy>
    </items>
</tabs>
