<tabs>
    <general>
        <class>\Magento\Rma\Test\Block\Adminhtml\Rma\Edit\Tab\General</class>
        <selector>#rma_info_tabs_general_section</selector>
        <strategy>css selector</strategy>
        <fields>
            <comment composite="1">
                <comment>
                    <selector>[name="comment[comment]"]</selector>
                    <input>textarea</input>
                </comment>
                <is_visible_on_front>
                    <selector>[name="comment[is_visible_on_front]"]</selector>
                    <input>checkbox</input>
                </is_visible_on_front>
            </comment>
        </fields>
    </general>
    <items>
        <class>\Magento\Rma\Test\Block\Adminhtml\Rma\Edit\Tab\Items</class>
        <selector>#rma_info_tabs_items_section</selector>
        <strategy>css selector</strategy>
        <fields>
            <product>
                <selector>.col-product</selector>
            </product>
            <sku>
                <selector>.col-sku</selector>
            </sku>
            <qty_ordered>
                <selector>.col-qty_ordered</selector>
            </qty_ordered>
            <qty_requested>
                <selector>.col-qty_requested</selector>
            </qty_requested>
            <qty_authorized>
                <selector>.col-qty_authorized</selector>
            </qty_authorized>
            <qty_returned>
                <selector>.col-qty_returned</selector>
            </qty_returned>
            <qty_approved>
                <selector>.col-qty_approved</selector>
            </qty_approved>
            <reason>
                <selector>.col-reason</selector>
            </reason>
            <condition>
                <selector>.col-condition</selector>
            </condition>
            <resolution>
                <selector>.col-resolution</selector>
                <input>select</input>
            </resolution>
            <status>
                <selector>.col-status</selector>
                <input>select</input>
            </status>
        </fields>
    </items>
</tabs>
