<tabs>
    <general>
        <class>\Magento\Backend\Test\Block\Widget\Tab</class>
        <selector>#rma_info_tabs_general_section</selector>
        <strategy>css selector</strategy>
        <fields>
            <contact_email />
            <comment composite="1">
                <comment>
                    <selector>[name="comment[comment]"]</selector>
                    <input>textarea</input>
                </comment>
                <is_visible_on_front>
                    <selector>[name="comment[is_visible_on_front]"]</selector>
                    <input>checkbox</input>
                </is_visible_on_front>
            </comment>
            <rma_confirmation>
                <input>checkbox</input>
            </rma_confirmation>
        </fields>
    </general>
    <items>
        <class>\Magento\Rma\Test\Block\Adminhtml\Rma\NewRma\Tab\Items</class>
        <selector>#rma_info_tabs_items_section</selector>
        <strategy>css selector</strategy>
        <fields>
            <items />
        </fields>
    </items>
</tabs>
