<scenarios xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="../../../../../../vendor/magento/mtf/Mtf/Config/etc/scenario.xsd">
    <scenario name="OnePageCheckoutTest">
        <methods>
            <method name="test">
                <steps>
                    <step name="setupConfiguration" module="Magento_Core">
                        <next>addProductsToTheCart</next>
                    </step>
                </steps>
            </method>
        </methods>
    </scenario>
    <scenario name="ReorderOrderEntityTest">
        <methods>
            <method name="test">
                <steps>
                    <step name="setupConfiguration" module="Magento_Core">
                        <next>createOrder</next>
                    </step>
                </steps>
            </method>
        </methods>
    </scenario>
    <scenario name="CheckoutWithGiftMessagesTest">
        <methods>
            <method name="test">
                <steps>
                    <step name="setupConfiguration" module="Magento_Core">
                        <arguments>
                            <item name="configData">cashondelivery, enableGiftMessages</item>
                        </arguments>
                        <next>addProductsToTheCart</next>
                    </step>
                </steps>
            </method>
        </methods>
    </scenario>
    <scenario name="CreateOrderBackendTest">
        <methods>
            <method name="test">
                <steps>
                    <step name="setupConfiguration" module="Magento_Core">
                        <next>openSalesOrders</next>
                    </step>
                </steps>
            </method>
        </methods>
    </scenario>
</scenarios>
