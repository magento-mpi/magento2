<mapping strict="0">
    <wrapper>billing</wrapper>
    <fields>
        <firstname />
        <lastname />
        <email />
        <company />
        <street>
            <selector>[id='billing:street1']</selector>
        </street>
        <city />
        <region_id>
            <input>select</input>
        </region_id>
        <postcode />
        <country_id>
            <input>select</input>
        </country_id>
        <telephone />
        <password>
            <selector>[name='billing[customer_password]']</selector>
        </password>
        <password_confirmation>
            <selector>[name='billing[confirm_password]']</selector>
        </password_confirmation>
    </fields>
</mapping>
