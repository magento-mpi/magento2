<validation xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="../../../../../../../../../../lib/Magento/Framework/Validator/etc/validation.xsd">
    <entity name="test_entity">
        <rules>
            <rule name="test_rule_entity">
                <property_constraints>
                    <property name="sku">
                        <constraint class="Magento\Framework\Validator\Test\NotEmpty"/>
                    </property>
                </property_constraints>
            </rule>
        </rules>
        <groups>
            <!-- attribute name is required for group element -->
            <group>
                <uses>
                    <use rule="test_rule_entity"/>
                </uses>
            </group>
        </groups>
    </entity>
</validation>
