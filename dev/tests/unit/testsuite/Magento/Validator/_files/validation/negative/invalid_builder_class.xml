                    </property>
                </property_constraints>
            </rule>
        </rules>
        <groups>
            <!-- builder with class UnknownBuilderClass is not exists -->
            <group name="create" builder="UnknownBuilderClass">
                <uses>
                    <use rule="name_sku_and_price"/>
                </uses>
            </group>
        </groups>
    </entity>
</validation>
