<xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema" attributeFormDefault="unqualified" elementFormDefault="qualified">
    <xs:include schemaLocation="requests.xsd"/>
    <xs:complexType name="requests">
        <xs:sequence>
            <xs:element type="request" name="request" maxOccurs="unbounded"/>
        </xs:sequence>
    </xs:complexType>
    <xs:element name="requests" type="requests">
        <xs:key name="queryKey">
            <xs:selector xpath=".//query"/>
            <xs:field xpath="@name"/>
        </xs:key>
        <xs:keyref name="queryReference" refer="queryKey">
            <xs:selector xpath=".//queryReference"/>
            <xs:field xpath="@ref"/>
        </xs:keyref>
        <xs:keyref name="requestMainQuery" refer="queryKey">
            <xs:selector xpath=".//request"/>
            <xs:field xpath="@query"/>
        </xs:keyref>

        <xs:key name="filterKey">
            <xs:selector xpath=".//filter"/>
            <xs:field xpath="@name"/>
        </xs:key>
        <xs:keyref name="filterReference" refer="filterKey">
            <xs:selector xpath=".//filterReference"/>
            <xs:field xpath="@ref"/>
        </xs:keyref>
    </xs:element>
</xs:schema>